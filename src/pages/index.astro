				<a href={tools[0].slug} class="sm:col-span-2 lg:col-span-1 xl:col-span-2 group relative bg-[#FFF8F0] overflow-hidden min-h-[220px] border-[3px] border-[#F5521A] hover:shadow-[0_4px_0_0_rgba(245,82,26,0.3)] transition-all duration-300">
					<div class="h-full flex flex-col justify-between p-6 sm:p-7">
						<div class="flex items-start justify-between mb-4">
							<div>
								<div class="flex items-center gap-2 mb-2">
									<span class="px-2 py-0.5 bg-[#F5521A] text-white text-xs font-black uppercase tracking-wider">Top Pick</span>
								</div>
								<h3 class="text-2xl sm:text-3xl font-black text-gray-900 mb-1 group-hover:text-[#F5521A] transition-colors duration-300">{tools[0].name}</h3>
							</div>
							<div class="text-5xl sm:text-6xl font-black text-[#F5521A] group-hover:scale-110 transition-transform duration-300">{tools[0].score}</div>
						</div>

						<p class="text-gray-700 mb-4 flex-1">{tools[0].verdict}</p>

						<div class="flex items-center justify-between pt-4 border-t border-gray-300">
							<div class="text-xs text-gray-500">Best overall design</div>
							<div class="flex items-center gap-2 text-[#F5521A] font-black text-sm group-hover:gap-3 transition-all duration-300">
								<span>Read review</span>
								<svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
								</svg>
							</div>
						</div>
					</div>
				</a>

				<!-- Remaining tools -->
				{tools.slice(1).map((tool) => (
					<a href={tool.slug} class={`group overflow-hidden border-[3px] transition-all duration-300 ${tool.name === 'Durable' || tool.name === 'Hostinger' ? 'bg-gray-900 border-gray-800 hover:border-[#F5521A]' : 'bg-white border-gray-300 hover:border-[#F5521A]'}`}>
						<div class="p-5 h-full flex flex-col">
							<div class="flex items-start justify-between mb-3">
								<h3 class={`text-xl font-black group-hover:text-[#F5521A] transition-colors duration-300 ${(tool.name === 'Durable' || tool.name === 'Hostinger') ? 'text-white' : 'text-gray-900'}`}>{tool.name}</h3>
								<div class={`text-3xl font-black ${(tool.name === 'Durable' || tool.name === 'Hostinger') ? 'text-[#F5521A]' : 'text-gray-700'}`}>{tool.score}</div>
							</div>

							<p class={`text-sm mb-4 flex-1 ${(tool.name === 'Durable' || tool.name === 'Hostinger') ? 'text-white/70' : 'text-gray-600'}`}>{tool.verdict}</p>

							<div class={`text-xs ${(tool.name === 'Durable' || tool.name === 'Hostinger') ? 'text-white/50' : 'text-gray-500'}`}>
								<svg class="w-4 h-4 inline-block mr-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
								</svg>
								Read review
							</div>
						</div>
					</a>
				))}
			</div>

			<div class="mt-8 text-center">
				<a href="/reviews" class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 hover:shadow-[0_4px_0_0_rgba(0,0,0,0.3)] transition-all">
					View all 27 reviews
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
