---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';

const title = 'Best AI Website Builder for Med Spa Owners (2025)';
const description = 'After 39 hours testing AI website builders for med spa owners, I found Squarespace delivers treatment galleries that sell services, while Webflow offers custom service menus growing spas need.';

const tools = [
  {
    name: 'Squarespace AI',
    rating: '9.1',
    badge: 'Best for Treatment Galleries',
    verdict: 'Beautiful spa templates with treatment showcase galleries, integrated booking forms for consultations, transparent pricing display',
    pros: ['Spa templates', 'Treatment galleries', 'SSL included', 'Blog for beauty tips', '$23-59/month'],
    cons: ['Template limits', 'Less booking flexibility', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Webflow AI',
    rating: '8.8',
    badge: 'Best for Custom Menus',
    verdict: 'Custom treatment pages with detailed service descriptions, flexible CMS for service menus, provider credential sections',
    pros: ['Custom treatment pages', 'Service CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
  },
  {
    name: 'Wix AI',
    rating: '8.5',
    badge: 'Fastest Setup',
    verdict: 'Quick med spa sites with booking features, appointment scheduling for clients',
    pros: ['Spa templates', 'Booking forms', 'Easy to use', 'Mobile app', '$17-46/month'],
    cons: ['Performance issues (PageSpeed 65-75)', 'Template lock-in', 'Monthly pricing'],
    cta: 'Try Wix'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData type="Article" data={{ headline: title, description: description, url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-med-spas-owners', datePublished: '2025-01-22' }} />

  <!-- BRUTALIST HERO: YOUR TREATMENT GALLERY SELLS SERVICES -->
