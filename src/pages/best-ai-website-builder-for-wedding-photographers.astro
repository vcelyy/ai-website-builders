            </div>
            <p class="text-gray-700 text-sm mb-3">{tool.verdict}</p>

            <div class="space-y-1 mb-3">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-xs text-gray-600 space-y-0.5">{tool.pros.slice(0, 4).map(pro => <li class="flex items-start gap-1"><span class="text-emerald-600">‚úì</span><span>{pro}</span></li>)}</ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`} class="block text-center px-3 py-2 bg-gray-900 text-white font-black text-xs hover:bg-gray-800 transition-colors">Read Review</a>
          </div>
        ))}
