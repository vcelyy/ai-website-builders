    rating: '8.8',
    badge: 'Best for Emergency',
    verdict: 'Plumbing-specific templates with emergency service features, easy quote requests for urgent repairs',
    pros: ['Plumbing templates', 'Emergency forms', 'Easy to use', 'Mobile app', '$17-46/month'],
    cons: ['Performance issues', 'Template lock-in', 'Monthly pricing'],
    cta: 'Try Wix'
  },
  {
    name: 'Squarespace AI',
    rating: '8.7',
    badge: 'Best for Trust',
    verdict: 'Professional templates that communicate reliability, integrated contact forms for service requests',
    pros: ['Business templates', 'Contact forms', 'SSL included', 'Blog for plumbing tips', '$23-59/month'],
    cons: ['Template limits', 'Less emergency features', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Webflow AI',
    rating: '8.5',
    badge: 'Best for Custom',
    verdict: 'Custom service pages, flexible CMS for service areas, professional designs that build customer confidence',
    pros: ['Custom service pages', 'Service area CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
