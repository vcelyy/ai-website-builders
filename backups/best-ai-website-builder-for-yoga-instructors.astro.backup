  {
    name: 'Durable AI',
    rating: '8.0',
    badge: 'Best for Speed',
    verdict: '30-second yoga instructor sites with booking features',
    pros: ['Instant setup', 'Built-in booking', 'Mobile responsive', 'Auto-content', '$15-39/month'],
    cons: ['Limited depth', 'Basic templates', 'No advanced features'],
    cta: 'Try Durable'
  },
  {
    name: 'Framer AI',
    rating: '8.2',
    badge: 'Best for Modern',
    verdict: 'Sleek yoga portfolios with smooth animations',
    pros: ['Modern design', 'Fast loading', 'Smooth animations', 'Free plan available', '$0-25/month'],
    cons: ['Limited templates', 'Newer platform', 'Fewer integrations'],
    cta: 'Try Framer'
