---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Nonprofits & Charities',
  description: 'Top AI website builders for nonprofits, charities, and organizations. Compare donation integration, volunteer management, and mission presentation.',
  date: 'January 2025'
};

const recommendations = [
  {
    nonprofit: 'Small Organizations',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), donation forms, mission focus, easy volunteer signup',
    alternatives: ['Durable (fast)', 'Wix (features)']
  },
  {
    nonprofit: 'Established Nonprofits',
    topPick: 'Squarespace',
    reason: 'Professional credibility, donation integration, beautiful impact stories',
    alternatives: ['Webflow (custom)', '10Web + plugins']
  },
  {
    nonprofit: 'Community Organizations',
    topPick: 'Wix',
    reason: 'Event calendars, volunteer forms, community features, easy to manage',
    alternatives: ['Squarespace (polished)', 'Mixo (budget)']
  },
  {
    nonprofit: 'Foundations',
    topPick: 'Webflow',
    reason: 'Grant history display, annual reports, professional credibility, CMS power',
    alternatives: ['Squarespace (easier)', '10Web (WordPress)']
  }
];

const features = [
  {
    feature: 'Donation Forms',
    description: 'Accept donations directly on website with payment processing',
    importance: 'Essential for nonprofits',
    builders: ['Stripe/PayPal integration', 'Built-in forms', 'Third-party embeds']
  },
  {
    feature: 'Volunteer Signup',
    description: 'Collect volunteer information, availability, interests',
    importance: 'Essential',
    builders: ['Contact forms', 'Custom fields', 'Email notifications']
  },
  {
    feature: 'Mission Statement',
    description: 'Clearly communicate purpose, goals, and impact',
    importance: 'Essential',
    builders: ['About pages', 'Storytelling layouts', 'Video integration']
  },
  {
    feature: 'Impact Stories',
    description: 'Show success stories, beneficiaries served, outcomes achieved',
    importance: 'Essential',
    builders: ['Blog features', 'Gallery layouts', 'Case study pages']
  }
];

const donationPlatforms = [
  {
    platform: 'Stripe/PayPal Direct',
    description: 'Integrate payment processors directly with forms',
    builders: ['All major builders', 'Simple integration'],
    pros: 'Low fees, full control, funds go directly to organization',
    cons: 'Requires setup, separate donation processing'
  },
  {
    platform: 'Donorbox / Classy',
    description: 'Specialized nonprofit donation platforms with embed options',
    builders: ['Embed on any builder'],
    pros: 'Designed for donations, recurring donations, donor management',
    cons: 'Platform fees, additional cost, third-party dependency'
  },
  {
    platform: 'GoFundMe / Kickstarter',
    description: 'Campaign-based fundraising with site integration',
    builders: ['Link or embed on any site'],
    pros: 'Existing donor base, campaign tools, social sharing',
    cons: 'Platform fees, less control, campaign-specific'
  }
];

const tips = [
  {
    tip: 'Clear mission statement',
    explanation: 'Above fold, explain what you do and why it matters. Visitors should understand immediately.'
  },
  {
    tip: 'Show impact',
    explanation: 'Numbers and stories. "1000 families served" is powerful. Beneficiary stories build connection.'
  },
  {
    tip: 'Transparent finances',
    explanation: 'Show how donations are used. Build trust with financial transparency and accountability.'
  },
  {
    tip: 'Easy donation process',
    explanation: 'Few clicks, clear options (one-time/monthly), multiple amounts. Make it frictionless.'
  },
  {
    tip: 'Volunteer opportunities',
    explanation: 'Clear volunteer signup. Show how people can get involved beyond donating.'
  },
  {
    tip: 'Mobile optimize',
    explanation: 'Donors browse on phones. Ensure mobile experience is excellent and donation forms work.'
  },
  {
    tip: 'Share stories',
    explanation: 'Beneficiary stories, volunteer experiences, community impact. Emotional connection drives donations.'
  },
  {
    tip: 'Contact information',
    explanation: 'People want to know it\'s legitimate. Phone, email, address, team information.'
  }
];
---

<Layout title={guideData.title} description={guideData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "What is the best AI website builder for nonprofits?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "For small nonprofits and charities, Mixo ($9/month) is the best choice with affordable pricing, donation forms, and everything needed to communicate mission and collect donations. Squarespace works well for established nonprofits wanting professional credibility and beautiful impact story presentations. Wix offers good features for community organizations with event calendars and volunteer management forms. Webflow serves foundations needing professional grant history displays and annual report presentations. Durable offers fastest setup (30 seconds) for simple nonprofit sites. For most nonprofits, prioritize: clear mission statement, donation processing, volunteer signups, impact stories, transparency, and mobile optimization. Mixo for budget-conscious organizations, Squarespace for established nonprofits wanting polish, Wix for community-focused organizations."
        }
      },
      {
        "@type": "Question",
        "name": "Do nonprofits need custom websites or are AI builders sufficient?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "AI website builders are absolutely sufficient for most nonprofits. Nonprofits need: clear mission communication, donation collection, volunteer signups, impact stories, and event information. AI builders deliver all of this for $9-50/month vs $3000-15000+ for custom development - money better spent on your mission. Modern AI builders create professional, credible websites that build donor trust. Consider custom development only if you have: very complex donor management systems, need custom donation workflows, require integration with specific nonprofit software, or have substantial grant funding for website development. For 95% of nonprofits, AI builders create professional, effective websites that communicate mission, collect donations, and manage volunteers at a fraction of the cost. Your donors care about your impact, not your website technology."
        }
      },
      {
        "@type": "Question",
        "name": "What features should nonprofit websites include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Nonprofit websites need: (1) Clear mission statement above fold - what you do and why, (2) Donation button or form prominently displayed, (3) Impact stories and beneficiary testimonials, (4) Photos showing your work in action, (5) Volunteer information and signup form, (6) Programs and services explained, (7) Financial transparency and impact metrics, (8) Team/board information for credibility, (9) Contact information and address, (10) Upcoming events or fundraisers, (11) Ways to get involved beyond donating, (12) Newsletter signup for updates, (13) Social media links, (14) Mobile optimization (donors browse on phones). Essential: mission clear, donate button prominent, impact visible, ways to engage. Build trust with transparency, stories, and legitimacy indicators (EIN, team photos, physical address). Make donating easy and volunteering clear."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{guideData.title}</h1>
      <p class="text-xl text-gray-600">{guideData.description}</p>
    </div>

    <!-- Quick Overview -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Best by Nonprofit Type</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Small Organizations:</strong> Mixo ($9/mo)</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Established Nonprofits:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Community Organizations:</strong> Wix</p>
          <p class="text-gray-700 text-lg"><strong>Foundations:</strong> Webflow</p>
        </div>
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Best Budget:</strong> Mixo</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Most Professional:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Best for Community:</strong> Wix</p>
          <p class="text-gray-700 text-lg"><strong>Fastest Setup:</strong> Durable (30 sec)</p>
        </div>
      </div>
    </div>

    <!-- By Nonprofit Type -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Recommended by Nonprofit Type</h2>

      <div class="grid md:grid-cols-2 gap-6">
        {recommendations.map(rec => (
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{rec.nonprofit}</h3>
            <p class="text-gray-700 mb-3"><strong>Top Pick:</strong> {rec.topPick}</p>
            <p class="text-gray-700 mb-3">{rec.reason}</p>
            <div class="text-sm text-gray-600">
              <p class="mb-1"><strong>Also consider:</strong></p>
              <ul class="space-y-1">
                {rec.alternatives.map(alt => (
                  <li>• {alt}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Donation Platforms -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Donation Platform Options</h2>

      <div class="space-y-4">
        {donationPlatforms.map(platform => (
          <div class="border border-blue-200 bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{platform.platform}</h3>
            <p class="text-gray-700 mb-3">{platform.description}</p>
            <div class="mb-2">
              <p class="text-sm text-gray-600 mb-1">Available in:</p>
              <div class="flex flex-wrap gap-2">
                {platform.builders.map(b => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{b}</span>
                ))}
              </div>
            </div>
            <p class="text-sm text-green-700 mb-1"><strong>Pros:</strong> {platform.pros}</p>
            <p class="text-sm text-red-700"><strong>Cons:</strong> {platform.cons}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Essential Features -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Essential Nonprofit Features</h2>

      <div class="space-y-4">
        {features.map(feature => (
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0 w-8 h-8 bg-orange-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                !
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{feature.feature}</h3>
                <p class="text-gray-600 text-sm">{feature.importance}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{feature.description}</p>
            <div>
              <p class="text-sm text-gray-600 mb-1">Available in:</p>
              <div class="flex flex-wrap gap-2">
                {feature.builders.map(b => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{b}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tips -->
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Nonprofit Website Tips</h2>
      <div class="space-y-3 text-gray-700">
        {tips.map(tip => (
          <div>
            <p class="font-semibold mb-1">{tip.tip}</p>
            <p class="text-sm">{tip.explanation}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Trust Building -->
    <div class="bg-green-50 border-l-4 border-green-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Building Donor Trust</h2>
      <ul class="space-y-3 text-gray-700">
        <li><strong>Show your team:</strong> Photos, bios, credentials. Real people build trust.</li>
        <li><strong>Display EIN:</strong> Tax ID number shows legitimacy and tax-deductible status.</li>
        <li><strong>Financial transparency:</strong> How donations are used. Annual reports if available.</li>
        <li><strong>Impact metrics:</strong> "1000 families fed" not generic "making a difference."</li>
        <li><strong>Beneficiary stories:</strong> Real people helped (with permission). Emotional connection.</li>
        <li><strong>Media mentions:</strong> Press coverage, awards, recognition. Third-party validation.</li>
        <li><strong>Partner logos:</strong> Other organizations, companies, foundations supporting you.</li>
        <li><strong>Secure donation indicators:</strong> SSL, trusted payment processors visible.</li>
        <li><strong>Contact information:</strong> Real address, phone, email. Not just a form.</li>
        <li><strong>Responsive communication:</strong> Reply to inquiries quickly. Shows you're active and legitimate.</li>
      </ul>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">Nonprofits need to build trust and make giving easy. AI builders help you communicate mission and collect donations affordably.</p>
      <a href="/guides" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        View All Guides →
      </a>
    </div>
  </div>
</Layout>
