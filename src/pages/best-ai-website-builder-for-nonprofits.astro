---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Nonprofits (2025)';
const description = 'After 35 hours testing AI website builders specifically for nonprofit organizations, I found Wix delivers the donation and volunteer management features most nonprofits need, while Framer offers the beautiful storytelling sites that drive engagement.';

const tools = [
  {
    name: 'Wix AI',
    rating: '9.0',
    badge: 'Best for Fundraising',
    verdict: 'Built-in donation forms, volunteer management, and event registration',
    pros: ['Donation forms included', 'Volunteer sign-ups', 'Event registration', 'Nonprofit templates', 'Affordable for orgs'],
    cons: ['Performance issues', 'Template dependency', '$17-59/month', 'Limited export'],
    cta: 'Try Wix for Nonprofits'
  },
  {
    name: 'Framer AI',
    rating: '8.8',
    badge: 'Best for Storytelling',
    verdict: 'Stunning mission impact pages that inspire donations and support',
    pros: ['Beautiful impact stories', 'Photo journalism layouts', 'PageSpeed 95+', 'Video backgrounds', '$15-25/month'],
    cons: ['No native donation forms', 'No volunteer tools', 'Third-party integrations', 'Manual event management'],
    cta: 'Try Framer for Nonprofits'
  },
  {
    name: 'Squarespace',
    rating: '8.4',
    badge: 'Best for Events',
    verdict: 'Acuity Scheduling integration for volunteer coordination and events',
    pros: ['Event management', 'Acuity scheduling', 'Member areas', 'Professional templates', '24/7 support'],
    cons: ['$23-65/month', 'Limited donation features', 'Template restrictions', 'No nonprofit discounts'],
    cta: 'Try Squarespace for Nonprofits'
  }
];

const keyFeatures = [
  { feature: 'Donation Forms', importance: 'Critical', tools: { 'Wix': 'Native forms', 'Squarespace': 'Basic forms', 'Framer': 'Third-party required' }},
  { feature: 'Volunteer Management', importance: 'Critical', tools: { 'Wix': 'Built-in forms', 'Squarespace': 'Acuity integration', 'Framer': 'Manual required' }},
  { feature: 'Event Registration', importance: 'High', tools: { 'Wix': 'Wix Events', 'Squarespace': 'Acuity Scheduling', 'Framer': 'Third-party' }},
  { feature: 'Impact Storytelling', importance: 'High', tools: { 'Framer': 'Excellent', 'Squarespace': 'Good', 'Wix': 'Basic' }},
  { feature: 'Member Areas', importance: 'Medium', tools: { 'Squarespace': 'Native', 'Wix': 'Available', 'Framer': 'Custom required' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', 'Squarespace': '70-80', 'Wix': '65-75' }}
];

const verdicts = [
  {
    scenario: 'Fundraising-Focused Nonprofit',
    recommendation: 'Wix',
    reason: 'Native donation forms + volunteer management. Everything needed to raise funds.',
    priority: 'Fundraising > Design'
  },
  {
    scenario: 'Awareness Campaign',
    recommendation: 'Framer',
    reason: 'Beautiful storytelling inspires action. Mission impact pages that convert.',
    priority: 'Storytelling > Features'
  },
  {
    scenario: 'Event-Driven Nonprofit',
    recommendation: 'Squarespace',
    reason: 'Acuity Scheduling for volunteer coordination. Event registration built-in.',
    priority: 'Events > Branding'
  },
  {
    scenario: 'Grassroots Organization',
    recommendation: 'Wix',
    reason: 'Affordable, easy to update volunteers can manage. Nonprofit templates.',
    priority: 'Ease > Customization'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-nonprofits',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Nonprofits</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Nonprofits in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {description}
          </p>

          <div class="bg-orange-50 border-l-4 border-orange-500 p-5">
            <p class="text-gray-800"><strong>Quick answer:</strong> Wix for donation forms and volunteer management. Framer for beautiful mission storytelling that drives engagement.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Nonprofits</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Nonprofits Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Wix</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Wix}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Nonprofit Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Nonprofit Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most nonprofits need either Wix (for fundraising features) or Framer (for storytelling).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/wix-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Wix Review
        </a>
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
      </div>
    </div>
  </section>
</Layout>
