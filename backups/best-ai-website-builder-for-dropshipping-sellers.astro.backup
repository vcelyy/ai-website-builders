    cons: ['Transaction fees', 'App costs add up', 'Template limits', 'Monthly pricing', 'Overkill for starters'],
    cta: 'Try Shopify'
  },
  {
    name: 'BigCommerce',
    rating: '8.8',
    badge: 'Best for Growth',
    verdict: 'Scalable dropshipping with advanced multi-channel selling and no transaction fees. Best for scaling to Amazon + eBay + own store.',
    pros: ['Multi-channel', 'No transaction fees', 'API access', 'Advanced inventory', 'Amazon sync', '$29-299/month'],
    cons: ['Steeper learning', 'App costs', 'Overkill for starters', 'Monthly pricing', 'Complex setup'],
    cta: 'Try BigCommerce'
  },
  {
    name: 'Wix AI',
    rating: '8.6',
    badge: 'Best for Starters',
