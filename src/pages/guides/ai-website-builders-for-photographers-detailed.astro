    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Required Photographer Pages</h2>

      <div class="space-y-4">
        {requiredPages.map(page => (
          <div class="border border-blue-200 bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{page.page}</h3>
            <p class="text-gray-700 mb-2"><strong>Key Elements:</strong> {page.elements.join(', ')}</p>
