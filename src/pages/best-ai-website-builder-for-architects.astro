      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'}`}>{tool.badge}</span>}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>
            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">{tool.pros.map(pro => <li class="flex items-start gap-2"><span class="text-green-600 mt-0.5">✓</span><span>{pro}</span></li>)}</ul>
            </div>
            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">{tool.cons.map(con => <li class="flex items-start gap-2"><span class="text-red-600 mt-0.5">✗</span><span>{con}</span></li>)}</ul>
            </div>
            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`} class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">{tool.cta}</a>
          </div>
        ))}
      </div>

      <div class="mt-12 bg-gradient-to-br from-orange-50 to-amber-50 border-[3px] border-orange-200 p-8">
        <h3 class="text-2xl font-black text-gray-900 mb-6">Platform Breakdown by Practice Type</h3>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-white p-5 border-l-[3px] border-orange-500">
            <h4 class="font-black text-gray-900 mb-2">Framer Best For</h4>
            <ul class="text-sm text-gray-700 space-y-1">
              <li>• Independent architects</li>
              <li>• Visual impact portfolios</li>
              <li>• Before/after showcases</li>
              <li>• Fast PageSpeed scores</li>
              <li>• Project case studies</li>
            </ul>
          </div>
          <div class="bg-white p-5 border-l-[3px] border-orange-500">
            <h4 class="font-black text-gray-900 mb-2">Webflow Best For</h4>
            <ul class="text-sm text-gray-700 space-y-1">
              <li>• Architecture firms</li>
              <li>• Complex project portfolios</li>
              <li>• Blueprint integration</li>
              <li>• Powerful CMS for many projects</li>
              <li>• Custom layouts</li>
            </ul>
          </div>
          <div class="bg-white p-5 border-l-[3px] border-orange-500">
