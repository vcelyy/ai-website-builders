---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';
import { getAffiliateCTA } from '../../config/affiliate-links';

const tools = [
  { name: '10Web AI', slug: '/reviews/10web-ai', score: '8.8', price: '$10-60/mo', bestFor: 'WordPress users' },
  { name: 'Webflow', slug: '/reviews/webflow-ai', score: '8.5', price: '$18-212/mo', bestFor: 'Designers' },
  { name: 'Durable AI', slug: '/reviews/durable-ai', score: '8.5', price: '$15-100/mo', bestFor: 'Speed' }
];
---

<Layout title="10Web vs Webflow vs Durable: WordPress, Design, or Speed?">
  <StructuredData type="WebPage" data={{ name: '10Web vs Webflow vs Durable Comparison', description: 'Compare 10Web (WordPress), Webflow (Design), and Durable (Speed). Different tools for different needs.', url: 'https://aiwebsitebuilders.com/comparisons/10web-vs-webflow-vs-durable' }} />

  <section class="bg-[#FFF8F0] py-16">
    <div class="container mx-auto px-4 max-w-5xl">
      <div class="inline-flex items-center gap-2 px-3 py-2 bg-white border-[3px] border-[#F5521A] mb-6">
        <span class="text-xs font-black">Jan 2025 · 3-WAY COMPARISON</span>
      </div>
      <h1 class="text-4xl md:text-6xl font-black">10Web vs Webflow vs Durable:<span class="block text-[#F5521A]">Different Tools, Different Goals</span></h1>
      <p class="text-xl text-gray-700 mt-6">WordPress power vs design freedom vs lightning speed.</p>
    </div>
  </section>

  <main class="max-w-5xl mx-auto px-4 py-16">
    <section class="mb-12">
      <h2 class="text-3xl font-black mb-6">Quick Comparison</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {tools.map(t => (
          <div class="bg-white rounded-xl p-6 border-[3px] border-gray-200">
            <h3 class="font-bold text-lg mb-2">{t.name}</h3>
            <div class="text-3xl font-black text-[#F5521A] mb-4">{t.score}</div>
            <div class="text-sm space-y-1">
              <div>Price: {t.price}</div>
              <div>Best For: {t.bestFor}</div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-12 bg-[#F5521A]/10 rounded-xl p-6 border-[3px] border-[#F5521A]">
      <h2 class="text-2xl font-black mb-4">Quick Verdict</h2>
      <div class="space-y-3">
        <div><strong class="text-[#F5521A]">WordPress Users:</strong> 10Web AI (8.8) - Best if you want WordPress + AI</div>
        <div><strong class="text-[#F5521A]">Designers:</strong> Webflow (8.5) - Best for total design control</div>
        <div><strong class="text-[#F5521A]">Speed:</strong> Durable AI (8.5) - Best for 30-second websites</div>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-black mb-6">Feature Comparison</h2>
      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-xl border-[3px] border-gray-200">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-bold">Feature</th>
              <th class="px-4 py-3 text-center font-bold">10Web</th>
              <th class="px-4 py-3 text-center font-bold">Webflow</th>
              <th class="px-4 py-3 text-center font-bold">Durable</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <tr><td class="px-4 py-3 font-semibold">Overall</td><td class="px-4 py-3 text-center font-bold text-[#F5521A]">8.8/10</td><td class="px-4 py-3 text-center">8.5/10</td><td class="px-4 py-3 text-center">8.5/10</td></tr>
            <tr class="bg-gray-50"><td class="px-4 py-3 font-semibold">Design</td><td class="px-4 py-3 text-center">8.5/10</td><td class="px-4 py-3 text-center font-bold text-green-600">9.5/10</td><td class="px-4 py-3 text-center">6.5/10</td></tr>
            <tr><td class="px-4 py-3 font-semibold">Speed</td><td class="px-4 py-3 text-center">8.0/10</td><td class="px-4 py-3 text-center">7.0/10</td><td class="px-4 py-3 text-center font-bold text-green-600">9.8/10</td></tr>
            <tr class="bg-gray-50"><td class="px-4 py-3 font-semibold">E-commerce</td><td class="px-4 py-3 text-center font-bold text-green-600">9.5/10</td><td class="px-4 py-3 text-center">8.0/10</td><td class="px-4 py-3 text-center">6.0/10</td></tr>
            <tr><td class="px-4 py-3 font-semibold">Price</td><td class="px-4 py-3 text-center font-bold text-green-600">$10/mo</td><td class="px-4 py-3 text-center">$18+/mo</td><td class="px-4 py-3 text-center">$15/mo</td></tr>
            <tr class="bg-gray-50"><td class="px-4 py-3 font-semibold">Learning Curve</td><td class="px-4 py-3 text-center">Medium</td><td class="px-4 py-3 text-center">Steep</td><td class="px-4 py-3 text-center font-bold text-green-600">Easy</td></tr>
          </tbody>
        </table>
      </div>
    </section>

    <section class="mb-12">
      <h2 class="text-3xl font-black mb-6">When to Choose</h2>
      <div class="space-y-6">
        <div class="bg-blue-50 p-5 rounded-xl">
          <h3 class="font-bold text-blue-700 mb-2">Choose 10Web If...</h3>
          <ul class="text-sm space-y-1"><li>✓ You love WordPress</li><li>✓ Need WooCommerce</li><li>✓ Want AI + WordPress power</li><li>✓ 70% affiliate commission exists</li></ul>
        </div>
        <div class="bg-purple-50 p-5 rounded-xl">
          <h3 class="font-bold text-purple-700 mb-2">Choose Webflow If...</h3>
          <ul class="text-sm space-y-1"><li>✓ You're a designer</li><li>✓ Want total control</li><li>✓ Building complex animations</li><li>✓ 50% first-year commission</li></ul>
        </div>
        <div class="bg-orange-50 p-5 rounded-xl">
          <h3 class="font-bold text-orange-700 mb-2">Choose Durable If...</h3>
          <ul class="text-sm space-y-1"><li>✓ You need a site NOW</li><li>✓ Want something simple</li><li>✓ Don't care about design</li><li>✓ Built-in CRM features</li></ul>
        </div>
      </div>
    </section>
  </main>
</Layout>
