---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Events & Conferences',
  description: 'Top AI website builders for event organizers, conference planners, weddings, and special events. Compare registration, ticketing, and promotion features.',
  date: 'January 2025'
};

const recommendations = [
  {
    eventType: 'Conferences & Summits',
    topPick: 'Webflow',
    reason: 'Complex CMS, speaker profiles, session scheduling, ticket integration',
    alternatives: ['Framer (marketing)', '10Web + WordPress']
  },
  {
    eventType: 'Weddings & Private Events',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), RSVP forms, photo galleries, easy setup',
    alternatives: ['Squarespace (elegant)', 'Wix (features)']
  },
  {
    eventType: 'Music & Festivals',
    topPick: 'Framer',
    reason: 'Modern aesthetic (9.5/10), lineup showcase, ticket integration, visual impact',
    alternatives: ['Squarespace (polished)', 'Webflow (custom)']
  },
  {
    eventType: 'Corporate Events',
    topPick: 'Squarespace',
    reason: 'Professional presentation, registration forms, agenda display, reliable',
    alternatives: ['Webflow (complex)', 'Durable (quick)']
  }
];

const features = [
  {
    feature: 'Registration/RSVP Forms',
    description: 'Collect attendee information, registration details, dietary requirements',
    importance: 'Essential for events',
    builders: ['Built-in forms', 'Typeform integration', 'Custom form builders']
  },
  {
    feature: 'Event Calendar/Schedule',
    description: 'Display agenda, session times, speaker information, location details',
    importance: 'Essential',
    builders: ['Calendar widgets', 'Schedule layouts', 'Timeline displays']
  },
  {
    feature: 'Ticketing Integration',
    description: 'Sell tickets, collect payments, manage attendees, QR codes',
    importance: 'Essential for paid events',
    builders: ['Eventbrite integration', 'Stripe payments', 'Third-party ticketing']
  },
  {
    feature: 'Speaker/Performer Profiles',
    description: 'Showcase speakers, performers, vendors with photos and bios',
    importance: 'Essential',
    builders: ['Profile layouts', 'Grid displays', 'Individual pages']
  }
];

const timeline = [
  {
    phase: '3-6 Months Before',
    tasks: ['Launch teaser page with date announcement', 'Email capture for interest list', 'Basic event information and vision'],
    priority: 'Build anticipation and capture early interest'
  },
  {
    phase: '2-3 Months Before',
    tasks: ['Full event website launch', 'Speaker/performer announcements', 'Early bird tickets available', 'Registration open'],
    priority: 'Drive registrations and build excitement'
  },
  {
    phase: '1-2 Months Before',
    tasks: ['Detailed agenda published', 'Venue information', 'Travel and accommodation details', 'Regular announcements'],
    priority: 'Provide information for planning attendees'
  },
  {
    phase: '2-4 Weeks Before',
    tasks: ['Final schedule confirmed', 'Last-minute updates', 'FAQ section comprehensive', 'Social media integration'],
    priority: 'Answer questions and reduce support needs'
  },
  {
    phase: 'Event Week',
    tasks: ['Live updates page', 'Check-in information', 'Emergency contact details', 'Mobile-optimized schedule'],
    priority: 'Support attendees during event'
  }
];

const tips = [
  {
    tip: 'Mobile optimization critical',
    explanation: 'Attendees check event details on phones during events. Perfect mobile experience is non-negotiable.'
  },
  {
    tip: 'Clear contact for questions',
    explanation: 'Event website generates questions. Prominent contact info or support form reduces email burden.'
  },
  {
    tip: 'Venue information prominent',
    explanation: 'Address, parking, transit, accommodations. Make it easy for attendees to plan logistics.'
  },
  {
    tip: 'Regular updates section',
    explanation: 'Dedicated area for announcements. Reduces questions and keeps everyone informed of changes.'
  },
  {
    tip: 'Social media integration',
    explanation: 'Event hashtag, social links, share buttons. Attendees promote for you when easy.'
  },
  {
    tip: 'Photo gallery from past events',
    explanation: 'Build credibility for recurring events. Show attendees what to expect.'
  },
  {
    tip: 'Sponsor/vendor showcase',
    explanation: 'If applicable, dedicated section for sponsors. Provides value and attracts support.'
  },
  {
    tip: 'Post-event follow-up page',
    explanation: 'Thank attendees, share photos, announce next event. Capture momentum for future.'
  }
];
---

<Layout title={guideData.title} description={guideData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "What is the best AI website builder for events?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "For conferences and summits with complex scheduling needs, Webflow is the top choice with powerful CMS for speaker profiles, session scheduling, and ticket integration. Mixo provides the best budget option at $9/month for weddings, private events, and simpler gatherings needing RSVP forms and photo galleries. Framer excels for music festivals and visual events needing modern aesthetic (9.5/10), lineup showcases, and high visual impact. Squarespace works well for corporate events wanting professional presentation, registration forms, and reliable performance. For event websites, prioritize: mobile optimization (attendees check on phones), clear registration/ticketing, comprehensive event information, venue details and directions, speaker/performer profiles, and FAQ section to reduce questions."
        }
      },
      {
        "@type": "Question",
        "name": "When should event websites launch?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Event website timeline: (1) 3-6 months before - Launch teaser page with date announcement, email capture for interest list, basic event information. This builds anticipation and captures early interest. (2) 2-3 months before - Full event website launch, speaker announcements, early bird tickets, registration open. Drive registrations and build excitement. (3) 1-2 months before - Detailed agenda published, venue information, travel/accommodation details, regular announcements. (4) 2-4 weeks before - Final schedule confirmed, last-minute updates, comprehensive FAQ, social media integration. (5) Event week - Live updates, check-in information, emergency contacts, mobile-optimized schedule. For recurring events, keep website live year-round and update for next event. Build SEO and traffic over time rather than starting from zero each time."
        }
      },
      {
        "@type": "Question",
        "name": "What features should event websites include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Event websites need: (1) Hero section with event name, date, location, clear CTA (register/tickets), (2) Registration/RSVP form collecting necessary attendee information, (3) Event schedule/agenda with session times and descriptions, (4) Speaker/performer profiles with photos and bios, (5) Venue information with address, parking, transit, accommodations, (6) Ticketing or registration payment integration, (7) Sponsor or vendor showcase section (if applicable), (8) FAQ section answering common questions, (9) Contact information for support and inquiries, (10) Social media links and event hashtag, (11) Photo gallery from past events (for recurring), (12) Mobile-optimized experience - attendees check on phones. Essential: make registration easy, provide comprehensive information, optimize for mobile, reduce questions through clear information."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{guideData.title}</h1>
      <p class="text-xl text-gray-600">{guideData.description}</p>
    </div>

    <!-- Quick Overview -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Best by Event Type</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Conferences & Summits:</strong> Webflow</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Weddings & Private:</strong> Mixo ($9/mo)</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Music & Festivals:</strong> Framer (9.5/10)</p>
          <p class="text-gray-700 text-lg"><strong>Corporate Events:</strong> Squarespace</p>
        </div>
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Most Powerful:</strong> Webflow</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Best Budget:</strong> Mixo</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Best Design:</strong> Framer</p>
          <p class="text-gray-700 text-lg"><strong>Most Professional:</strong> Squarespace</p>
        </div>
      </div>
    </div>

    <!-- By Event Type -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Recommended by Event Type</h2>

      <div class="grid md:grid-cols-2 gap-6">
        {recommendations.map(rec => (
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{rec.eventType}</h3>
            <p class="text-gray-700 mb-3"><strong>Top Pick:</strong> {rec.topPick}</p>
            <p class="text-gray-700 mb-3">{rec.reason}</p>
            <div class="text-sm text-gray-600">
              <p class="mb-1"><strong>Also consider:</strong></p>
              <ul class="space-y-1">
                {rec.alternatives.map(alt => (
                  <li>• {alt}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Event Launch Timeline -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Event Website Launch Timeline</h2>

      <div class="space-y-4">
        {timeline.map(phase => (
          <div class="border border-blue-200 bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{phase.phase}</h3>
            <div class="mb-3">
              <p class="text-sm text-blue-700 font-semibold mb-1">Tasks:</p>
              <ul class="space-y-1">
                {phase.tasks.map(task => (
                  <li class="text-sm text-gray-700">• {task}</li>
                ))}
              </ul>
            </div>
            <p class="text-sm text-green-700"><strong>Priority:</strong> {phase.priority}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Essential Features -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Essential Event Features</h2>

      <div class="space-y-4">
        {features.map(feature => (
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0 w-8 h-8 bg-orange-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                !
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{feature.feature}</h3>
                <p class="text-gray-600 text-sm">{feature.importance}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{feature.description}</p>
            <div>
              <p class="text-sm text-gray-600 mb-1">Available in:</p>
              <div class="flex flex-wrap gap-2">
                {feature.builders.map(b => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{b}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tips -->
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Event Website Tips</h2>
      <div class="space-y-3 text-gray-700">
        {tips.map(tip => (
          <div>
            <p class="font-semibold mb-1">{tip.tip}</p>
            <p class="text-sm">{tip.explanation}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">Event websites exist to drive registrations and provide information. Make registration easy and information comprehensive.</p>
      <a href="/guides" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        View All Guides →
      </a>
    </div>
  </div>
</Layout>
