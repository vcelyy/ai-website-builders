---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Small Business',
  description: 'Top AI website builders for small businesses, local businesses, and entrepreneurs. Compare affordable pricing, ease of use, and professional results.',
  date: 'January 2025'
};

const recommendations = [
  {
    businessType: 'Local Service Businesses',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), professional results, easy to maintain, phone-optimized',
    alternatives: ['Wix', 'Squarespace']
  },
  {
    businessType: 'E-commerce / Retail',
    topPick: 'Wix',
    reason: 'Built-in store, app marketplace, inventory management, payment processing',
    alternatives: ['Squarespace', '10Web + WooCommerce']
  },
  {
    businessType: 'Professional Services',
    topPick: 'Framer',
    reason: 'Modern design (9.5/10), fast loading, impressive portfolio, value ($5/mo)',
    alternatives: ['Webflow', 'Squarespace']
  },
  {
    businessType: 'Restaurants / Food Service',
    topPick: 'Squarespace',
    reason: 'Beautiful menus, reservations integration, polished presentation',
    alternatives: ['Wix', 'Mixo']
  }
];

const requiredPages = [
  {
    page: 'Home Page',
    elements: ['Clear business name and what you do', 'Contact info prominent', 'Key services/products', 'Location/map', 'Call-to-action (contact, visit, call)'],
    priority: 'Non-negotiable'
  },
  {
    page: 'About / Story',
    elements: ['Business history', 'Team introductions', 'Values and mission', 'Photos of people/locations', 'Community involvement'],
    priority: 'Important for trust'
  },
  {
    page: 'Products / Services',
    elements: ['Clear descriptions', 'Pricing information', 'Photos/images', 'Benefits and features', 'Call-to-action'],
    priority: 'Non-negotiable'
