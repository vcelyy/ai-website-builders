  <!-- DECISION FRAMEWORK -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Which Builder Fits Your Landscaping Business?</h2>

