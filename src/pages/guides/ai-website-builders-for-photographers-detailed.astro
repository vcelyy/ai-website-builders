  {
    strategy: 'SEO Portfolio',
    description: 'Optimize for location + photography searches',
    tactics: ['"Wedding photographer [City]"', 'Family photography [Area]', 'Commercial photography [Region]', 'Image alt text optimization'],
    effectiveness: 'High - Long-term organic traffic'
