---
/**
 * Card Component
 *
 * Specs from research:
 * - 24px padding (p-6)
 * - 12px radius ()
 * - Hover elevation (shadow-[0_6px_0_0_rgba(0,0,0,0.15)], translateY)
 * - Shadow-md default
 */
const { title, excerpt, image, badge, date, readTime } = Astro.props;
---

<article class="group bg-bg-alt p-6 shadow-[0_4px_0_0_rgba(0,0,0,0.1)] transition-all duration-300 hover:shadow-[0_6px_0_0_rgba(0,0,0,0.15)] hover:-translate-y-0.5">
	<!-- Optional Badge -->
	{badge && (
			<span class="inline-block px-3 py-1 bg-primary text-white text-xs font-black uppercase tracking-wide border-[2px] border-white/20 mb-3">
			{badge}
		</span>
	)}

	<!-- Optional Image -->
	{image && (
		<div class="mb-4 overflow-hidden">
			<img src={image} alt={title} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
		</div>
	)}

	<!-- Title -->
	<h3 class="text-xl font-black text-text mb-2 leading-tight group-hover:text-primary transition-colors">
		{title}
	</h3>

	<!-- Excerpt -->
	<p class="text-base text-text-muted leading-relaxed mb-4">
		{excerpt}
	</p>

	<!-- Meta -->
	{(date || readTime) && (
		<div class="flex items-center gap-3 text-sm text-text-light">
			{date && <time datetime={date}>{date}</time>}
			{readTime && (
				<>
					<span class="w-1 h-1 bg-text-light"></span>
					<span>{readTime} read</span>
				</>
			)}
		</div>
	)}
</article>
