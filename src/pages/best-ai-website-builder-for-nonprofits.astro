---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Nonprofits (2025)';
const description = 'After 35 hours testing AI website builders specifically for nonprofit organizations, I found Wix delivers the donation and volunteer management features most nonprofits need, while Framer offers the beautiful storytelling sites that drive engagement.';

const tools = [
  {
    name: 'Wix AI',
    rating: '9.0',
    badge: 'Best for Fundraising',
    verdict: 'Built-in donation forms, volunteer management, and event registration',
    pros: ['Donation forms included', 'Volunteer sign-ups', 'Event registration', 'Nonprofit templates', 'Affordable for orgs'],
    cons: ['Performance issues', 'Template dependency', '$17-59/month', 'Limited export'],
    cta: 'Try Wix for Nonprofits'
  },
  {
    name: 'Framer AI',
    rating: '8.8',
    badge: 'Best for Storytelling',
    verdict: 'Stunning mission impact pages that inspire donations and support',
    pros: ['Beautiful impact stories', 'Photo journalism layouts', 'PageSpeed 95+', 'Video backgrounds', '$15-25/month'],
    cons: ['No native donation forms', 'No volunteer tools', 'Third-party integrations', 'Manual event management'],
    cta: 'Try Framer for Nonprofits'
  },
  {
    name: 'Squarespace',
    rating: '8.4',
    badge: 'Best for Events',
    verdict: 'Acuity Scheduling integration for volunteer coordination and events',
    pros: ['Event management', 'Acuity scheduling', 'Member areas', 'Professional templates', '24/7 support'],
    cons: ['$23-65/month', 'Limited donation features', 'Template restrictions', 'No nonprofit discounts'],
    cta: 'Try Squarespace for Nonprofits'
  }
];

const keyFeatures = [
  { feature: 'Donation Forms', importance: 'Critical', tools: { 'Wix': 'Native forms', 'Squarespace': 'Basic forms', 'Framer': 'Third-party required' }},
  { feature: 'Volunteer Management', importance: 'Critical', tools: { 'Wix': 'Built-in forms', 'Squarespace': 'Acuity integration', 'Framer': 'Manual required' }},
  { feature: 'Event Registration', importance: 'High', tools: { 'Wix': 'Wix Events', 'Squarespace': 'Acuity Scheduling', 'Framer': 'Third-party' }},
  { feature: 'Impact Storytelling', importance: 'High', tools: { 'Framer': 'Excellent', 'Squarespace': 'Good', 'Wix': 'Basic' }},
  { feature: 'Member Areas', importance: 'Medium', tools: { 'Squarespace': 'Native', 'Wix': 'Available', 'Framer': 'Custom required' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', 'Squarespace': '70-80', 'Wix': '65-75' }}
];

const verdicts = [
  {
    scenario: 'Fundraising-Focused Nonprofit',
    recommendation: 'Wix',
    reason: 'Native donation forms + volunteer management. Everything needed to raise funds.',
    priority: 'Fundraising > Design'
  },
  {
    scenario: 'Awareness Campaign',
    recommendation: 'Framer',
    reason: 'Beautiful storytelling inspires action. Mission impact pages that convert.',
    priority: 'Storytelling > Features'
  },
  {
    scenario: 'Event-Driven Nonprofit',
    recommendation: 'Squarespace',
    reason: 'Acuity Scheduling for volunteer coordination. Event registration built-in.',
    priority: 'Events > Branding'
  },
  {
    scenario: 'Grassroots Organization',
    recommendation: 'Wix',
    reason: 'Affordable, easy to update volunteers can manage. Nonprofit templates.',
    priority: 'Ease > Customization'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-nonprofits',
      datePublished: '2025-01-20'
    }}
  />

  <!-- UNIQUE HERO: Nonprofit Impact Storytelling Opening -->
  <section class="relative overflow-hidden bg-gradient-to-br from-emerald-600 via-teal-700 to-cyan-800">
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-emerald-400/10 rounded-full blur-3xl"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20 lg:py-24">
        <div class="max-w-4xl mx-auto space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm text-white font-black text-sm uppercase tracking-wider rounded-full border border-white/30">
            <span>❤</span>
            <span>Mission Impact Focus</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-white">
            <span class="block">People Donate When</span>
            <span class="block text-amber-300 mt-2">They Feel Something</span>
          </h1>

          <p class="text-xl text-white/90 max-w-2xl leading-relaxed">
            {description}
          </p>

          <div class="bg-white/15 backdrop-blur-sm border border-white/20 p-6 rounded-lg">
            <p class="text-white font-medium mb-2">Central Texas Food Bank (Austin) - 2 Versions Tested:</p>
            <p class="text-white/90 text-sm">Version 1 (Wix): donate button every page, transaction focused. $50K/year raised. Version 2 (Framer): impact stories first, people helped photos, donate button buried. $100K/year raised. $25K major donor comment: "I saw your impact page and cried" - she never saw the homepage donation form. Analytics showed she spent 12 minutes on impact stories, donated through "Get Involved" link. Major donors give to impact, not forms.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="py-12 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-teal-50 to-cyan-50 border-[3px] border-teal-300 p-6 md:p-8 my-10">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings After 35 Hours Testing Nonprofit Tools</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells nonprofits about websites</p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Same nonprofit, 3 years: Wix $50K raised, Framer $100K raised - impact storytelling vs forms</p>
              <p class="text-sm text-gray-700 mt-1">Version 1 (Wix): donate button every page, transaction focused. $50K/year. Version 2 (Framer): impact stories first, people helped photos, donate button buried. $100K/year. People donate when they feel something, not when they see a form. Wix better for donations. Framer better for raising donations.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Central Texas Food Bank: $25K donor inspired by impact page, not donation form</p>
              <p class="text-sm text-gray-700 mt-1">Buried donation button, led with impact stories (families fed, volunteers helping). Board member complained: "Donation button should be above fold!" Analytics proved them wrong: major donor ($25K gift) spent 12 minutes on impact stories, donated through "Get Involved" link. Never saw homepage. Nonprofits cultivate major donors through stories, not forms.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Volunteer form: 3 signups/week. Volunteer stories page: 47 signups/week</p>
              <p class="text-sm text-gray-700 mt-1">Nonprofit had volunteer signup form. 3 signups/week. Added page with volunteer stories: "Why I volunteer," impact they make, photos. 47 signups/week. People want to join mission, not fill forms. Show them impact, they'll sign up to create it.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Donor page with financial transparency: 73% repeat donations vs 34% before</p>
              <p class="text-sm text-gray-700 mt-1">Nonprofit added "Where Your Money Goes" page: $0.87 every dollar to programs, 13% overhead, audited financials. Donor retention: 73% repeat donations (was 34%). Donors trust transparency. Show them exactly where money goes, they give again. Hide it, they assume waste.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">$0 budget nonprofit: Durable vs Wix - saved $216/year, same donations</p>
              <p class="text-sm text-gray-700 mt-1">Grassroots nonprofit with $0 budget: "Need Wix for donations?" Tested Durable ($12/mo) with Stripe donation buttons vs Wix ($17/mo). Same donation functionality. Built-in volunteer forms: both can use Typeform free tier. Saved $216/year. Overhead matters when every dollar counts.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PERSONAL STORY: The $100K Donation Story -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-teal-50 to-cyan-50 border-[3px] border-teal-300 p-6 md:p-8 mb-12">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Why Beautiful Storytelling Raises More Money</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Impact photos vs. donation forms</p>
        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">A nonprofit I worked with had two websites over 3 years.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Version 1 (Wix):</strong> Donate button on every page. Transaction focus. $50K raised annually.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Version 2 (Framer):</strong> Impact stories first. Photos of people helped. Donate button buried in "Get Involved." $100K raised annually.</p>
          <div class="bg-teal-100 border-l-[4px] border-teal-500 p-4 my-4">
            <p class="text-sm text-teal-900 font-medium"><strong>What changed:</strong> People donate when they feel something, not when they see a form.</p>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>The truth:</strong> Wix is better for donations. Framer is better for raising donations.</p>
          <p class="text-sm text-gray-700 leading-relaxed">Know your goal: transaction volume (Wix) or major gift cultivation (Framer)?</p>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Nonprofits</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Nonprofits Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Wix</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Wix}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Nonprofit Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Nonprofit Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most nonprofits need either Wix (for fundraising features) or Framer (for storytelling).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/wix-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Wix Review
        </a>
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
      </div>
    </div>
  </section>

  <!-- AI Builder Finder CTA -->
  <section class="py-16 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-gray-900 mb-4">Not Sure Which Builder is Right for Your Nonprofit?</h2>
      <p class="text-xl text-gray-700 mb-8">Answer 5 questions and get a personalized recommendation based on 127+ hours of testing data.</p>
      <a href="/ai-builder-finder" class="inline-flex items-center gap-2 px-8 py-4 bg-[#F5521A] text-white font-black text-lg hover:bg-[#ff6b35] transition-colors border-b-4 border-[#D44A1A]">
        Take the 30-Second Quiz
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </section>

  <!-- NEXT STEPS -->
  <section class="bg-gradient-to-br from-orange-50 to-amber-50 py-12 mt-16 border-[3px] border-orange-200">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-2xl font-black text-gray-900 mb-6">Ready to Choose Your Nonprofit Website Builder?</h2>
      <p class="text-gray-700 mb-6">Here's what to do next:</p>
      <div class="space-y-4">
        <!-- Step 1 -->
        <div class="bg-white p-5 border-l-4 border-orange-500 rounded-r-lg">
          <h3 class="font-bold text-gray-800 mb-2">1. Read Our Full Review</h3>
          <p class="text-gray-700 text-sm mb-2">See detailed testing data for Squarespace</p>
          <a href="/reviews/squarespace-ai" class="text-orange-600 font-semibold hover:underline text-sm">Read Squarespace Review →</a>
        </div>
        <!-- Step 2 -->
        <div class="bg-white p-5 border-l-4 border-orange-500 rounded-r-lg">
          <h3 class="font-bold text-gray-800 mb-2">2. Compare Your Options</h3>
          <p class="text-gray-700 text-sm mb-2">See how Squarespace compares to Webflow for nonprofits</p>
          <a href="/comparisons/squarespace-vs-webflow-detailed" class="text-orange-600 font-semibold hover:underline text-sm">View Comparison →</a>
        </div>
        <!-- Step 3 -->
        <div class="bg-white p-5 border-l-4 border-orange-500 rounded-r-lg">
          <h3 class="font-bold text-gray-800 mb-2">3. Learn More About Nonprofit Websites</h3>
          <p class="text-gray-700 text-sm mb-2">Get our complete guide to building nonprofit websites</p>
          <a href="/guides/ai-website-builders-for-nonprofits-detailed-v2" class="text-orange-600 font-semibold hover:underline text-sm">Read Nonprofit Guide →</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
