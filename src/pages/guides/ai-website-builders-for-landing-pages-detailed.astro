    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">key Landing Page Elements</h2>

      <div class="space-y-4">
        {ctaStrategies.map(element => (
          <div class="border border-blue-200 bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{element.element}</h3>
            <p class="text-gray-700 mb-2"><strong>Best Practice:</strong> {element.bestPractice}</p>
            <p class="text-gray-700 mb-3"><strong>Example:</strong> <em>{element.example}</em></p>
            <p class="text-sm text-blue-700"><strong>Tips:</strong> {element.tips}</p>
          </div>
        ))}
