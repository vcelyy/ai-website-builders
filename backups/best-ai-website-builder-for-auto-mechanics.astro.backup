<Layout title={title} description={description}>

  <StructuredData type="Article" data={{ headline: title, description: description, url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-auto-mechanics', datePublished: '2025-01-22' }} />

  <!-- BRUTALIST HERO: SERVICE VISIBILITY WINS CALLS -->
