---
import Layout from '../../layouts/Layout.astro';
import AffiliateCTA from '../../components/AffiliateCTA.astro';
import { AFFILIATE_LINKS as affiliates } from '../../config/affiliate-links';

const title = 'AI Website Builder Pricing Comparison (2025)';
const description = 'I compared pricing across all major AI website builders. Hostinger is cheapest ($2.99). Webflow is most expensive ($23+). Here is the breakdown.';
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">AI Website Builder Pricing Comparison</h1>
      <p class="text-xl text-gray-600 mb-6">
        What you actually pay, hidden costs, and who offers the best value.
      </p>
    </div>

    <div class="overflow-x-auto mb-12">
      <table class="w-full text-left border-collapse border border-gray-200">
        <thead>
          <tr class="border-b border-gray-300">
            <th class="py-3 px-4 text-gray-600 font-medium">Builder</th>
            <th class="py-3 px-4 text-gray-900 font-black">Starting Price</th>
            <th class="py-3 px-4 text-gray-900 font-black">Free Plan?</th>
            <th class="py-3 px-4 text-gray-900 font-black">Value Rating</th>
          </tr>
        </thead>
        <tbody>
          <tr class="border-b border-gray-200">
            <td class="py-3 px-4 text-gray-900">Hostinger</td>
            <td class="py-3 px-4 text-gray-900">$2.99/mo</td>
            <td class="py-3 px-4 text-red-600">No</td>
            <td class="py-3 px-4 text-green-600">Excellent</td>
          </tr>
          <tr class="border-b border-gray-200">
            <td class="py-3 px-4 text-gray-900">Durable</td>
            <td class="py-3 px-4 text-gray-900">$15/mo</td>
            <td class="py-3 px-4 text-green-600">Yes (30 days)</td>
            <td class="py-3 px-4 text-green-600">Good</td>
          </tr>
          <tr class="border-b border-gray-200">
            <td class="py-3 px-4 text-gray-900">Framer</td>
            <td class="py-3 px-4 text-gray-900">$15/mo</td>
            <td class="py-3 px-4 text-green-600">Yes</td>
            <td class="py-3 px-4 text-green-600">Good</td>
          </tr>
          <tr class="border-b border-gray-200">
            <td class="py-3 px-4 text-gray-900">Wix</td>
            <td class="py-3 px-4 text-gray-900">$16/mo</td>
            <td class="py-3 px-4 text-green-600">Yes</td>
            <td class="py-3 px-4 text-yellow-600">Fair</td>
          </tr>
          <tr class="border-b border-gray-200">
            <td class="py-3 px-4 text-gray-900">Squarespace</td>
            <td class="py-3 px-4 text-gray-900">$23/mo</td>
            <td class="py-3 px-4 text-green-600">Yes (14 days)</td>
            <td class="py-3 px-4 text-yellow-600">Fair</td>
          </tr>
          <tr>
            <td class="py-3 px-4 text-gray-900">Webflow</td>
            <td class="py-3 px-4 text-gray-900">$23/mo</td>
            <td class="py-3 px-4 text-green-600">Yes</td>
            <td class="py-3 px-4 text-yellow-600">Fair (premium)</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="text-center">
      <AffiliateCTA
        href={affiliates.hostinger.affiliateUrl}
        commission={affiliates.hostinger.commission}
        label="Try Cheapest Option"
        className="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block"
      />
    </div>
  </div>
</Layout>
