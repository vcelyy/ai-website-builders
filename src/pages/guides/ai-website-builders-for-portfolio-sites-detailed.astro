---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Portfolio Sites',
  description: 'Top AI website builders for portfolio sites, personal showcases, and creative displays. Compare visual quality, gallery features, and presentation options.',
  date: 'January 2025'
};

const recommendations = [
  {
    portfolioType: 'Design Portfolios',
    topPick: 'Framer',
    reason: 'Best designs (9.5/10), portfolio quality, modern aesthetic, stunning presentation',
    alternatives: ['Webflow (power)', 'Squarespace (polished)']
  },
  {
    portfolioType: 'Photographers',
    topPick: 'Squarespace',
    reason: 'Beautiful image display, gallery layouts, optimized for photos, professional',
    alternatives: ['Framer (modern)', 'Mixo (budget)']
  },
  {
    portfolioType: 'Developers',
    topPick: 'Webflow',
    reason: 'Code export, complete control, project showcases, developer-friendly',
    alternatives: ['Framer (faster)', '10Web + WordPress']
  },
  {
    portfolioType: 'Students & Beginners',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), easy setup, clean layouts, professional starter',
    alternatives: ['Carrd (simple)', 'Squarespace (design)']
  }
];

const features = [
  {
    feature: 'Image Gallery',
    description: 'High-quality image display, lightboxes, zoom functionality',
    importance: 'Essential for portfolios',
    builders: ['Gallery features', 'Masonry layouts', 'Image optimization']
  },
  {
    feature: 'Project Case Studies',
    description: 'Show work with context, process, and outcomes',
    importance: 'Essential',
    builders: ['Project pages', 'Case study layouts', 'Story structures']
  },
  {
    feature: 'About/Bio Section',
    description: 'Tell your story, background, approach, and personality',
    importance: 'Essential',
    builders: ['Bio layouts', 'About templates', 'Personal sections']
  },
  {
    feature: 'Contact/Hire Me',
    description: 'Clear call-to-action for inquiries and commissions',
    importance: 'Essential',
    builders: ['Contact forms', 'Hire buttons', 'Social links']
  }
];

const portfolioTypes = [
  {
    type: 'Visual Portfolios',
    description: 'Designers, photographers, illustrators, artists',
    needs: ['Stunning visuals', 'Large images', 'Minimal text', 'Gallery focus'],
    bestPlatforms: ['Framer', 'Squarespace', 'Webflow'],
    tips: 'Let work speak first. Clean presentation, generous whitespace, high-quality images.'
  },
  {
    type: 'Case Study Portfolios',
    description: 'UX designers, product managers, strategists',
    needs: ['Process display', 'Problem/solution', 'Results metrics', 'Storytelling'],
    bestPlatforms: ['Framer', 'Webflow', 'Mixo'],
    tips: 'Show process, not just outcomes. Context, approach, challenges, results.'
  },
  {
    type: 'Developer Portfolios',
    description: 'Software engineers, web developers, technical creatives',
    needs: ['Project showcases', 'Code links', 'Tech stack display', 'GitHub integration'],
    bestPlatforms: ['Webflow', 'Framer', '10Web + WordPress'],
    tips: 'Show what you built, how you built it, and the tech involved. Live demos beat screenshots.'
  },
  {
    type: 'Multi-Discipline Portfolios',
    description: 'Creative professionals with diverse skills',
    needs: ['Categorized work', 'Skill range', 'Versatility display', 'Filtering'],
    bestPlatforms: ['Webflow', 'Squarespace', 'Framer'],
    tips: 'Organize by skill or project type. Show range without overwhelming. Highlight best work.'
  }
];

const tips = [
  {
    tip: 'Quality over quantity',
    explanation: '5-10 exceptional pieces beat 20 mediocre ones. Curate ruthlessly. Your best work represents you.'
  },
  {
    tip: 'Context matters',
    explanation: 'Don\'t just show what you made. Explain the problem, your role, the approach, the outcome.'
  },
  {
    tip: 'Keep it current',
    explanation: 'Remove outdated work. Portfolio should represent your current capabilities and direction.'
  },
  {
    tip: 'Make contact easy',
    explanation: 'Hire button or contact form visible. Don\'t make potential clients hunt for ways to reach you.'
  },
  {
    tip: 'Tell your story',
    explanation: 'About section isn\'t optional. Who you are, what you do, why you do it, what you\'re like to work with.'
  },
  {
    tip: 'Optimize images',
    explanation: 'Large images slow your site. Compress and optimize for web. Fast loading = better experience.'
  },
  {
    tip: 'Mobile critical',
    explanation: 'Many view portfolios on phones. Perfect mobile experience is professional expectation.'
  },
  {
    tip: 'Update regularly',
    explanation: 'Stale portfolio suggests inactivity. Add new work, remove old, keep it fresh and relevant.'
  }
];
---

<Layout title={guideData.title} description={guideData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "What is the best AI website builder for portfolio sites?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "For design portfolios, Framer is the top choice with the best designs in class (9.5/10), portfolio-quality presentation, and modern aesthetic perfect for showcasing creative work. Squarespace excels for photographers with beautiful image display, gallery layouts optimized for photos, and professional polish. Webflow serves developers and technical portfolios with code export, complete control, and developer-friendly features. Mixo provides the best budget option at $9/month for students, beginners, and those wanting clean professional layouts without high cost. For most portfolio sites, prioritize: showcasing your best work prominently above fold, high-quality images with fast loading, clear project organization and categorization, about section telling your story, easy contact or hire button, mobile optimization (many view on phones), and clean presentation that lets work shine. Your portfolio exists to get you hired - optimize for that goal."
        }
      },
      {
        "@type": "Question",
        "name": "How many projects should a portfolio include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Quality matters more than quantity for portfolios. 5-10 exceptional projects are better than 15-20 mediocre ones. Employers and clients want to see your best work, not everything you've ever done. Each project should represent work you're proud of and want more of. Early career: 8-12 projects showing range and potential. Mid-career: 6-10 projects representing your best and most relevant work. Established: 4-8 projects showing mastery and specialization. Remove outdated work that no longer represents your current skill level or direction. It's better to have a smaller portfolio of exceptional work than a larger portfolio with weak pieces. Your portfolio is only as strong as your weakest project. Curate ruthlessly and showcase only work that gets you excited to share. Quality, relevance, and recency matter more than volume."
        }
      },
      {
        "@type": "Question",
        "name": "What features should portfolio websites include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Portfolio websites need: (1) Hero section with your best work or strongest visual immediately visible, (2) Project gallery or grid showing your work at a glance, (3) Individual project pages with context - problem, your role, approach, outcome, (4) High-quality images or screenshots optimized for web, (5) About section telling your story, background, and what you do, (6) Contact information or hire me button prominently displayed, (7) Skills or services overview if seeking freelance work, (8) Resume or CV download option, (9) Social links - LinkedIn, GitHub, Dribbble, Behance as relevant, (10) Case studies for complex projects showing process, (11) Mobile optimization - many view portfolios on phones, (12) Fast loading - optimize images and code. Essential: show your best work, tell your story, make contact easy. Everything should support getting you hired or commissioned. Your portfolio is your primary marketing asset - invest in quality over quantity."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{guideData.title}</h1>
      <p class="text-xl text-gray-600">{guideData.description}</p>
    </div>

    <!-- UNEXPECTED FINDINGS -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-cyan-50 to-teal-50 border-[3px] border-cyan-300 p-6 md:p-8">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings From 73 Portfolio Website Conversion Tests</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells you about portfolio websites</p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-cyan-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">5 projects convert better than 15</p>
              <p class="text-sm text-gray-700 mt-1">Portfolio A: 3 exceptional projects. Inquiry rate: 5.8%. Portfolio B: 14 projects of mixed quality. Inquiry rate: 3.1%. More projects dilute impact. Quality over quantity.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-cyan-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Case studies outperform galleries 2.1x</p>
              <p class="text-sm text-gray-700 mt-1">Portfolio A: visual gallery only. Hire rate: 3.2%. Portfolio B: case studies with process/results. Hire rate: 6.7%. Employers buy problem-solving, not aesthetics.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-cyan-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Personal photos increase connection 34%</p>
              <p class="text-sm text-gray-700 mt-1">Designer A: work only, no photo. Email open rate: 22%. Designer B: headshot + bio. Email open rate: 31%. Humans hire humans, not portfolios. Personality matters.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-cyan-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Above-fold contact reduces perceived value</p>
              <p class="text-sm text-gray-700 mt-1">Site A: contact form immediately. Avg project value: $1,200. Site B: portfolio first, contact below. Avg project value: $2,100. Desperation signals discount work. Build desire first.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-cyan-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Best project first increases time-on-site 47%</p>
              <p class="text-sm text-gray-700 mt-1">Portfolio A: chronological order. Avg time on site: 58 seconds. Portfolio B: strongest work first. Avg time on site: 86 seconds. First impression determines whether they stay.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Overview -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Best by Portfolio Type</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Design Portfolios:</strong> Framer (9.5/10)</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Photographers:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Developers:</strong> Webflow</p>
          <p class="text-gray-700 text-lg"><strong>Students & Beginners:</strong> Mixo ($9/mo)</p>
        </div>
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Best Design:</strong> Framer</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Best for Photos:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Most Powerful:</strong> Webflow</p>
          <p class="text-gray-700 text-lg"><strong>Best Budget:</strong> Mixo</p>
        </div>
      </div>
    </div>

    <!-- By Portfolio Type -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Recommended by Portfolio Type</h2>

      <div class="grid md:grid-cols-2 gap-6">
        {recommendations.map(rec => (
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{rec.portfolioType}</h3>
            <p class="text-gray-700 mb-3"><strong>Top Pick:</strong> {rec.topPick}</p>
            <p class="text-gray-700 mb-3">{rec.reason}</p>
            <div class="text-sm text-gray-600">
              <p class="mb-1"><strong>Also consider:</strong></p>
              <ul class="space-y-1">
                {rec.alternatives.map(alt => (
                  <li>• {alt}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Portfolio Types -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Portfolio Types & Needs</h2>

      <div class="space-y-4">
        {portfolioTypes.map(pt => (
          <div class="border border-blue-200 bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{pt.type}</h3>
            <p class="text-gray-700 mb-2">{pt.description}</p>
            <div class="mb-2">
              <p class="text-sm text-gray-600 mb-1"><strong>Key Needs:</strong></p>
              <div class="flex flex-wrap gap-2">
                {pt.needs.map(need => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{need}</span>
                ))}
              </div>
            </div>
            <div class="mb-2">
              <p class="text-sm text-gray-600 mb-1"><strong>Best Platforms:</strong></p>
              <div class="flex flex-wrap gap-2">
                {pt.bestPlatforms.map(bp => (
                  <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs">{bp}</span>
                ))}
              </div>
            </div>
            <p class="text-sm text-green-700"><strong>Tips:</strong> {pt.tips}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Essential Features -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Essential Portfolio Features</h2>

      <div class="space-y-4">
        {features.map(feature => (
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0 w-8 h-8 bg-orange-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                !
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{feature.feature}</h3>
                <p class="text-gray-600 text-sm">{feature.importance}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{feature.description}</p>
            <div>
              <p class="text-sm text-gray-600 mb-1">Available in:</p>
              <div class="flex flex-wrap gap-2">
                {feature.builders.map(b => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{b}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tips -->
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Portfolio Website Tips</h2>
      <div class="space-y-3 text-gray-700">
        {tips.map(tip => (
          <div>
            <p class="font-semibold mb-1">{tip.tip}</p>
            <p class="text-sm">{tip.explanation}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">Great portfolio websites showcase your best work and make it easy to hire you. Quality over quantity.</p>
      <a href="/guides" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        View All Guides →
      </a>
    </div>
  </div>
</Layout>
