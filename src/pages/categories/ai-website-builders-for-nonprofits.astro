---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const categoryData = {
  title: 'AI Website Builders for Nonprofits',
  description: 'Best AI website builders for nonprofit organizations and charities. Affordable options with donation tools, volunteer management, and mission-focused templates.',
  date: 'January 2025'
};

const nonprofitBuilders = [
  {
    name: 'Wix',
    score: 8.2,
    price: 'From $16/mo (50% nonprofit discount available)',
    donationTools: 'Wix Payments + third-party integrations',
    bestFor: 'Most features and templates',
    pros: ['500+ templates', 'Nonprofit discounts', 'Donation widgets', 'Volunteer forms'],
    cons: ['Can be expensive', 'No code export', 'Learning curve']
  },
  {
    name: 'Squarespace',
    score: 8.4,
    price: 'From $23/mo',
    donationTools: 'Squarespace Extensions + integrations',
    bestFor: 'Professional design',
    pros: ['Gorgeous templates', 'Professional look', 'Donation extensions', 'Good for events'],
    cons: ['Expensive', 'Steep learning curve', 'Limited nonprofit features']
  },
  {
    name: 'Durable',
    score: 8.5,
    price: 'From $15/mo',
    donationTools: 'Third-party integrations',
    bestFor: 'Quick setup + CRM',
    pros: ['Fast generation', 'Built-in CRM', 'AI copywriting', 'Affordable'],
    cons: ['New platform', 'Limited templates', 'No code export']
  },
  {
    name: 'Mixo',
    score: 8.5,
    price: 'From $9/mo',
    donationTools: 'Third-party integrations',
    bestFor: 'Budget-friendly + fast',
    pros: ['Affordable', 'Fast generation', 'Good templates', 'Easy to use'],
    cons: ['Limited customization', 'No code export', 'Basic e-commerce']
  },
  {
    name: 'Webflow',
    score: 8.6,
    price: 'From $23/mo (50% nonprofit discount)',
    donationTools: 'Custom integrations',
    bestFor: 'Design flexibility',
    pros: ['Code export', '50% nonprofit discount', 'Custom designs', 'Powerful'],
    cons: ['Steep learning curve', 'Requires design knowledge', 'Overkill for simple sites']
  }
];
---

<Layout title={categoryData.title} description={categoryData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Which AI website builder is best for nonprofits?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Webflow and Wix offer 50% nonprofit discounts, making them excellent choices. Webflow provides code export and design flexibility (8.6/10) if you have design resources. Wix offers the most features and templates (8.2/10) with easy donation widgets. For budget-conscious nonprofits, Mixo ($9/mo) and Durable ($15/mo with built-in CRM) deliver excellent value without requiring discounts."
        }
      },
      {
        "@type": "Question",
        "name": "Do AI website builders offer nonprofit discounts?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, several builders offer nonprofit discounts: Webflow offers 50% off, Wix offers 50% off (application required), and Squarespace occasionally offers nonprofit pricing. Additionally, TechSoup provides discounted software for qualifying nonprofits. Always contact the builder directly to ask about nonprofit pricing before committing."
        }
      },
      {
        "@type": "Question",
        "name": "Can I accept donations on an AI-built nonprofit website?",
        "acceptedAnswer": {
          "@type": "Answer",
          "Text": "Yes, all major AI website builders support donations through various methods: built-in payment processors (Wix Payments, Squarespace Commerce), third-party integrations (PayPal, Stripe, Donorbox), and custom embeds (Classy, Network for Good). For simple donations, Wix and Squarespace have the easiest built-in options. For advanced fundraising, integrate specialized nonprofit platforms."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">CATEGORY</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{categoryData.title}</h1>
      <p class="text-xl text-gray-600">{categoryData.description}</p>
    </div>

    <!-- Quick Answer -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Recommendations</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Webflow (8.6/10) - 50% nonprofit discount:</strong> Best for nonprofits with design resources. Code export means you own your site.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Wix (8.2/10) - 50% nonprofit discount:</strong> Most features and templates. Easiest donation setup.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Mixo (8.5/10) - $9/month:</strong> Best budget option. Fast setup, good templates, no discount needed.
      </p>
      <p class="text-gray-700">
        <strong>Durable (8.5/10) - $15/month:</strong> Best for donor management. Built-in CRM is perfect for nonprofits.
      </p>
    </div>

    <!-- Comparison Table -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Nonprofit Builder Comparison</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-200">
          <thead>
            <tr class="bg-gray-50">
              <th class="border border-gray-200 px-4 py-3 text-left">Builder</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Score</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Price</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Nonprofit Discount</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Best For</th>
            </tr>
          </thead>
          <tbody>
            {nonprofitBuilders.map(builder => (
              <tr>
                <td class="border border-gray-200 px-4 py-3 font-semibold">{builder.name}</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.score}/10</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.price}</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.nonprofitDiscount || 'No'}</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.bestFor}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- What Nonprofits Need -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">What Nonprofits Need in a Website Builder</h2>

      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Essential Features</h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start gap-3">
              <span class="text-orange-600 mt-1">●</span>
              <span><strong>Donation Processing:</strong> Easy online donations with multiple payment options</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-orange-600 mt-1">●</span>
              <span><strong>Volunteer Management:</strong> Forms and tools for volunteer recruitment</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-orange-600 mt-1">●</span>
              <span><strong>Event Management:</strong> Calendar, registration, and event promotion tools</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-orange-600 mt-1">●</span>
              <span><strong>Storytelling:</strong> Blog, photo galleries, and impact showcases</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-orange-600 mt-1">●</span>
              <span><strong>Contact/Communication:</strong> Newsletters, contact forms, social integration</span>
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Nice-to-Have Features</h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start gap-3">
              <span class="text-gray-400 mt-1">○</span>
              <span><strong>Donor Database:</strong> Built-in CRM for donor tracking</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-400 mt-1">○</span>
              <span><strong>Recurring Donations:</strong> Monthly giving options</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-400 mt-1">○</span>
              <span><strong>Peer-to-Peer Fundraising:</strong> Campaign pages for supporters</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-400 mt-1">○</span>
              <span><strong>Membership Management:</strong> Member directories and portals</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-gray-400 mt-1">○</span>
              <span><strong>Grant Management:</strong> Tracking and reporting tools</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Detailed Reviews -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Top Picks for Nonprofits</h2>

      {nonprofitBuilders.map(builder => (
        <div class="border border-gray-200 rounded-lg p-6 mb-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-2xl font-bold text-gray-900">{builder.name}</h3>
              <p class="text-gray-600">{builder.price} • {builder.score}/10</p>
              <p class="text-orange-600 mt-1 font-semibold">{builder.bestFor}</p>
            </div>
            <a href={`/reviews/${builder.name.toLowerCase()}-ai`}
               class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg font-semibold text-sm">
              Read Review →
            </a>
          </div>
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <h4 class="font-semibold text-green-700 mb-2">Pros</h4>
              <ul class="space-y-1 text-sm">
                {builder.pros.map(pro => <li class="flex items-start gap-2"><span class="text-green-500">✓</span><span>{pro}</span></li>)}
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-red-700 mb-2">Cons</h4>
              <ul class="space-y-1 text-sm">
                {builder.cons.map(con => <li class="flex items-start gap-2"><span class="text-red-500">✗</span><span>{con}</span></li>)}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Tips for Nonprofits -->
    <div class="bg-blue-50 border-l-4 border-blue-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Tips for Nonprofit Websites</h2>
      <ul class="space-y-3 text-gray-700">
        <li><strong>Always ask for nonprofit discounts:</strong> Many builders don't advertise them but will offer 30-50% off if asked</li>
        <li><strong>Check TechSoup:</strong> TechSoup.org offers deeply discounted software for qualifying nonprofits</li>
        <li><strong>Keep it simple:</strong> Focus on donations, storytelling, and volunteer recruitment. Don't overcomplicate</li>
        <li><strong>Mobile-first:</strong> Many donors will view your site on mobile. Ensure mobile optimization</li>
        <li><strong>Clear donation button:</strong> Make donating obvious and easy. Above the fold on every page</li>
        <li><strong>Tell impact stories:</strong> Show how donations help. Photos, videos, and testimonials build trust</li>
      </ul>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">All builders offer free trials. Test donation setups before committing.</p>
      <a href="/reviews" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        See All Reviews →
      </a>
    </div>
  </div>
</Layout>
