    cta: 'Try Durable for Finance'
  },
  {
    name: '10Web AI',
    rating: '7.9',
    badge: 'Best for WordPress',
    verdict: 'AI-powered WordPress with financial advisor plugins and compliance tools',
    pros: ['WordPress ecosystem', 'Plugin flexibility', 'Content generation', 'SEO tools', '$10-60/month'],
    cons: ['Requires maintenance', 'Learning curve', 'Plugin conflicts', 'Slower performance'],
    cta: 'Try 10Web for Finance'
  }
];

const keyFeatures = [
  { feature: 'FINRA Compliance', importance: 'Critical', tools: { 'Webflow': 'Full custom control', 'Squarespace': 'Template-based', 'Framer': 'Manual setup', 'Durable': 'Basic', '10Web': 'Plugin-based' }},
  { feature: 'Professional Trust', importance: 'Critical', tools: { 'Squarespace': 'Enterprise-grade', 'Webflow': 'Custom premium', 'Framer': 'Modern startup', 'Durable': 'Generic', '10Web': 'Depends on theme' }},
  { feature: 'Client Scheduling', importance: 'High', tools: { 'Squarespace': 'Acuity integrated', 'Webflow': 'Third-party', 'Framer': 'Third-party', 'Durable': 'Integration', '10Web': 'Plugin' }},
  { feature: 'Market Insights CMS', importance: 'High', tools: { 'Webflow': 'Native CMS', 'Squarespace': 'Blog built-in', 'Framer': 'Custom blog', 'Durable': 'Basic', '10Web': 'WordPress blog' }},
  { feature: 'CRM/Lead Mgmt', importance: 'High', tools: { 'Durable': 'Built-in', 'Webflow': 'Third-party', 'Squarespace': 'None', 'Framer': 'Manual', '10Web': 'Plugin' }},
  { feature: 'Performance/Speed', importance: 'Medium', tools: { 'Framer': '98+ PageSpeed', 'Webflow': '95+ PageSpeed', 'Durable': '90', '10Web': '85', 'Squarespace': '85-90' }},
  { feature: 'AUM Under Management', importance: 'Critical', tools: { 'Webflow': 'Enterprise feel', 'Squarespace': 'Professional', 'Framer': 'Modern', 'Durable': 'Basic', '10Web': 'Variable' }}
];

const verdicts = [
  {
    scenario: 'RIA Firm ($100M+ AUM)',
    recommendation: 'Webflow',
    reason: 'Custom FINRA disclaimers on every page. Enterprise design that justifies management fees. CMS for market commentary attracts qualified prospects.',
    priority: 'Compliance > Speed'
  },
  {
    scenario: 'Solo Financial Advisor',
    recommendation: 'Squarespace',
    reason: 'Professional templates communicate trust. Integrated booking for discovery calls. Easy enough to manage yourself.',
    priority: 'Professional > Custom'
  },
  {
    scenario: 'Fee-Only Planner',
    recommendation: 'Framer',
    reason: 'Fast site loads impress sophisticated prospects. Content marketing focus for blog-driven lead generation. Modern feel attracts younger clients.',
    priority: 'Performance > Features'
  },
  {
    scenario: 'Insurance Producer',
    recommendation: 'Squarespace',
    reason: 'Quick setup with compliance-friendly templates. Focus on prospect meetings not website building. Professional enough for carrier approval.',
    priority: 'Speed > Customization'
  },
  {
    scenario: 'New Advisor Building Practice',
    recommendation: 'Durable',
    reason: '30-second setup with built-in CRM for lead management. Get started fast, focus on prospect meetings. Upgrade as AUM grows.',
    priority: 'Speed > Everything'
