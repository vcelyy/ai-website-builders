    pros: ['Unlimited products', 'Plugin ecosystem', 'Custom functionality', 'No platform fees', 'Free software'],
    cons: ['Self-hosted', 'WordPress required', 'Security updates', 'Tech skills needed', 'Plugin costs'],
    cta: 'Try WooCommerce'
