    <!-- By Freelancer Type -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Recommended by Freelancer Type</h2>

      <div class="grid md:grid-cols-2 gap-6">
        {recommendations.map(rec => (
          <div class="border border-gray-200 rounded-lg p-6">
