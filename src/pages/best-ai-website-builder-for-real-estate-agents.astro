      <div class="grid md:grid-cols-3 lg:grid-cols-5 gap-4">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-5 ${index === 0 ? 'border-[#10B981] bg-[#ECFDF5]' : index === 1 ? 'border-emerald-400 bg-emerald-50' : 'border-gray-300 bg-white'}`}>
