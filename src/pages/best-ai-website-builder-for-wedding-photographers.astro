            {tool.badge && <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-3 ${index === 0 ? 'bg-[#F43F5E] text-white' : 'bg-gray-900 text-white'}`}>{tool.badge}</span>}
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-black text-gray-900">{tool.name}</h3>
