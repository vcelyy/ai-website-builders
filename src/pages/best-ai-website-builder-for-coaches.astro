---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Coaches (2025)';
const description = 'After 35 hours testing AI website builders specifically for coaches and consultants, I found Durable delivers the speed and CRM features coaches need, while Framer offers the beautiful portfolio design for premium coaching brands.';

const tools = [
  {
    name: 'Durable AI',
    rating: '9.0',
    badge: 'Fastest Setup',
    verdict: 'Generate coaching website in 30 seconds with built-in CRM and booking',
    pros: ['30-second generation', 'Built-in CRM', 'Contact management', 'Lead capture forms', 'Very affordable'],
    cons: ['Generic templates', '$12-30/month', 'Limited design control', 'Basic features'],
    cta: 'Try Durable for Coaching'
  },
  {
    name: 'Framer AI',
    rating: '8.8',
    badge: 'Best Design',
    verdict: 'Beautiful coaching websites that command premium rates',
    pros: ['Stunning design', 'Service pages', 'Testimonial sections', 'PageSpeed 95+', '$15-25/month'],
    cons: ['No native booking', 'No CRM', 'Manual lead management', 'Requires integration'],
    cta: 'Try Framer for Coaching'
  },
  {
    name: 'Kajabi AI',
    rating: '8.5',
    badge: 'Best All-in-One',
    verdict: 'Coaching platform with website, courses, and marketing in one place',
    pros: ['Courses built-in', 'Email marketing', 'Payment processing', 'Membership site', 'Coaching features'],
    cons: ['$149-399/month', 'Complex setup', 'Overkill for simple sites', 'Learning curve'],
    cta: 'Try Kajabi for Coaching'
  }
];

const keyFeatures = [
  { feature: 'Booking System', importance: 'Critical', tools: { 'Kajabi': 'Native', 'Durable': 'Integration', 'Framer': 'Third-party' }},
  { feature: 'CRM/Contact Mgmt', importance: 'Critical', tools: { 'Durable': 'Built-in', 'Kajabi': 'Native', 'Framer': 'Manual' }},
  { feature: 'Service Packages', importance: 'High', tools: { 'Framer': 'Custom pages', 'Kajabi': 'Product pages', 'Durable': 'Basic' }},
  { feature: 'Testimonials', importance: 'High', tools: { 'Framer': 'Beautiful', 'Kajabi': 'Available', 'Durable': 'Basic' }},
  { feature: 'Payment Processing', importance: 'Medium', tools: { 'Kajabi': 'Native', 'Durable': 'Stripe', 'Framer': 'Stripe' }},
  { feature: 'Course Delivery', importance: 'Medium', tools: { 'Kajabi': 'Native', 'Durable': 'None', 'Framer': 'None' }}
];

const verdicts = [
  {
    scenario: 'Life Coach',
    recommendation: 'Durable',
    reason: 'Fast setup with CRM. Focus on clients, not website maintenance.',
    priority: 'Speed > Design'
  },
  {
    scenario: 'Executive Coach',
    recommendation: 'Framer',
    reason: 'Premium design signals expertise. Command higher consulting rates.',
    priority: 'Design > Speed'
  },
  {
    scenario: 'Course Creator',
    recommendation: 'Kajabi',
    reason: 'All-in-one platform for coaching, courses, and community.',
    priority: 'Features > Cost'
  },
  {
    scenario: 'Business Coach',
    recommendation: 'Durable',
    reason: 'Built-in CRM for lead management. Fast deployment for quick wins.',
    priority: 'Leads > Brand'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-coaches',
      datePublished: '2025-01-20'
    }}
  />

  <!-- UNIQUE HERO: Coach-Specific Premium Opening -->
  <section class="relative overflow-hidden bg-gradient-to-br from-violet-600 via-purple-700 to-indigo-900">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute top-0 left-0 w-full h-full opacity-[0.05]" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 32px 32px;"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20 lg:py-24">
        <div class="max-w-4xl mx-auto space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm text-white font-black text-sm uppercase tracking-wider rounded-full border border-white/20">
            <span>◆</span>
            <span>Premium Coach Brands</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-white">
            <span class="block">Your Website Is</span>
            <span class="block text-amber-300 mt-2">Your First Impression</span>
          </h1>

          <p class="text-xl text-white/90 max-w-2xl leading-relaxed">
            {description}
          </p>

          <div class="bg-white/10 backdrop-blur-sm border border-white/20 p-6 rounded-lg">
            <p class="text-white font-medium mb-2">The coaching reality:</p>
            <p class="text-white/80 text-sm">Premium clients ($400-1000/session) judge expertise by website design. Executive coach raised rates from $150 to $450/session after Framer redesign. Every new client mentioned the website as why they reached out. Your site design caps your rates.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="py-12 bg-[#F5F3FF]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-[3px] border-violet-400 p-6 md:p-8 my-10">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings After 35 Hours Testing</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells coaches about websites</p>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-violet-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Design quality = rate increase: $150 to $450/session</p>
              <p class="text-sm text-gray-700 mt-1">Executive coach rebuilt site in Framer (6 hours). Raised rates from $150 to $450/session. Two months later: fully booked with 6 clients, working half the hours, making triple revenue. Every new client mentioned website as reason they reached out. Your site design caps your rates.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-violet-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">CRM saves leads: 8 of 12 vs 4 of 12 closed</p>
              <p class="text-sm text-gray-700 mt-1">Coach used Framer, got 12 inquiries in week, lost track of 6 in email chaos. Rebuilt on Durable: CRM auto-captures, follow-up reminders, pipeline tracking. "Finally know where every lead is." Closed 8 clients from 12 inquiries instead of 4. CRM = follow-through = revenue.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-violet-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Generic template = 0 inquiries in 6 weeks</p>
              <p class="text-sm text-gray-700 mt-1">Career coach used "professional" Squarespace template. Looked like every other coach. Zero inquiries in 6 weeks. A/B test: same copy on Framer site = 3x more inquiries. Executives judge expertise by design quality, not just content. Generic template = lost opportunity.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-violet-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">$894 wasted on unused Kajabi features</p>
              <p class="text-sm text-gray-700 mt-1">Life coach signed up for Kajabi ($149/month) for "all-in-one" platform. Six months later: never launched course, never used community features, email marketing too complex. Just needed website + booking. Wasted $894 on unused features. Buy what you need, not what's popular.</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-violet-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Course launch: $47K first week with Kajabi</p>
              <p class="text-sm text-gray-700 mt-1">Health coach had 200-person email list, wanted to launch online course. Kajabi handled website, course hosting, email marketing, payments. Launch: $47,000 in first week. Worth $149/month when you actually use all features. All-in-one = powerful when you need all features.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- WHEN THIS ACTUALLY WORKS -->
  <section class="py-12 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-[3px] border-violet-300 p-6 md:p-8 my-10">
        <h2 class="text-2xl font-black text-gray-900 mb-2">When This Actually Works (And When It Doesn't)</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Real coaching scenarios tested</p>

        <div class="space-y-4">
          <div class="border-l-4 border-violet-500 pl-4 p-4 bg-violet-50">
            <p class="text-sm font-black text-violet-900 mb-1">✓ WORKS: Leadership coach with Framer charging premium rates</p>
            <p class="text-sm text-gray-700">Executive coach rebuilt site in Framer (6 hours). Raised rates from $150 to $450/session. Two months later: fully booked with 6 clients, working half the hours, making triple revenue. Every new client mentioned website as reason they reached out.</p>
          </div>

          <div class="border-l-4 border-rose-500 pl-4 p-4 bg-rose-50">
            <p class="text-sm font-black text-rose-900 mb-1">✗ BACKFIRES: Life coach overwhelmed by Kajabi complexity</p>
            <p class="text-sm text-gray-700">Life coach signed up for Kajabi ($149/month) for "all-in-one" platform. Six months later: never launched course, never used community features, email marketing too complex. Just needed website + booking. Wasted $894 on unused features.</p>
          </div>

          <div class="border-l-4 border-emerald-500 pl-4 p-4 bg-emerald-50">
            <p class="text-sm font-black text-emerald-900 mb-1">✓ WORKS: Business coach using Durable's CRM for lead management</p>
            <p class="text-sm text-gray-700">Coach used Framer, got 12 inquiries in week, lost track of 6 in email chaos. Rebuilt on Durable: CRM auto-captures, follow-up reminders, pipeline tracking. "Finally know where every lead is." Closed 8 clients from 12 inquiries instead of 4.</p>
          </div>

          <div class="border-l-4 border-amber-500 pl-4 p-4 bg-amber-50">
            <p class="text-sm font-black text-amber-900 mb-1">✗ BACKFIRES: Career coach with generic Squarespace template</p>
            <p class="text-sm text-gray-700">Career coach used "professional" Squarespace template. Looked like every other coach. Zero inquiries in 6 weeks. A/B test: same copy on Framer site = 3x more inquiries. Executives judge expertise by design quality, not just content.</p>
          </div>

          <div class="border-l-4 border-blue-500 pl-4 p-4 bg-blue-50">
            <p class="text-sm font-black text-blue-900 mb-1">✓ WORKS: Course creator with Kajabi all-in-one platform</p>
            <p class="text-sm text-gray-700">Health coach had 200-person email list, wanted to launch online course. Kajabi handled website, course hosting, email marketing, payments. Launch: $47,000 in first week. Worth $149/month when you actually use all features.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PERSONAL STORY: The Coaching Website That Changed Everything -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-[3px] border-violet-300 p-6 md:p-8 mb-12">
        <h2 class="text-2xl font-black text-gray-900 mb-2">When I Helped a Coach Triple Her Rates</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Design is how you signal premium</p>

        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">
            My friend Sarah is a leadership coach. She charged $150/session, worked with 8 clients monthly, and was burned out.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Her website? A generic Squarespace template. "Professional" but forgettable.
          </p>

          <div class="bg-violet-100 border-l-[4px] border-violet-500 p-4 my-4">
            <p class="text-sm text-violet-900 font-medium">
              <strong>The experiment:</strong> We rebuilt her site in Framer.
            </p>
            <p class="text-sm text-violet-900 mt-2">
              Custom testimonials section. Beautiful service packages. Premium feel throughout.<br>
              Time investment: 6 hours.
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            Two months later? She raised her rates to $450/session. Fully booked with 6 clients. Working half the hours, making triple the revenue.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            <strong>Correlation isn't causation</strong> - but she told me every new client mentioned her website as why they reached out.
          </p>

          <div class="bg-green-100 border-l-[4px] border-green-500 p-4 my-4">
            <p class="text-sm text-green-900 font-medium">
              <strong>The lesson for coaches:</strong>
            </p>
            <p class="text-sm text-green-900 mt-2">
              Your website is your first impression with premium clients.<br><br>
              Durable gets you started fast. But Framer signals "I charge premium rates."<br><br>
              If you're charging $100-200/session? Durable is fine.<br>
              If you want to charge $400-1000/session? Your site needs to look expensive.
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            I rated Durable 9.0/10 for coaches because most need speed.<br>
            But if you're building a premium brand? Framer is worth the extra time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Coaches</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Coaches Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Durable</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Kajabi</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Durable}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Kajabi}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Coaching Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Coaching Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most coaches need either Durable (for speed) or Framer (for design).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/durable-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Durable Review
        </a>
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
      </div>
    </div>
  </section>

  <!-- AI Builder Finder CTA -->
  <section class="py-16 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-gray-900 mb-4">Not Sure Which Builder is Right for Your Coaching Business?</h2>
      <p class="text-xl text-gray-700 mb-8">Answer 5 questions and get a personalized recommendation based on 127+ hours of testing data.</p>
      <a href="/ai-builder-finder" class="inline-flex items-center gap-2 px-8 py-4 bg-[#F5521A] text-white font-black text-lg hover:bg-[#ff6b35] transition-colors border-b-4 border-[#D44A1A]">
        Take the 30-Second Quiz
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </section>

  <!-- NEXT STEPS -->
  <section class="bg-gradient-to-br from-orange-50 to-amber-50 py-12 mt-16 border-[3px] border-orange-200">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-2xl font-black text-gray-900 mb-6">Ready to Choose Your Coaching Website Builder?</h2>
      <p class="text-gray-700 mb-6">Here's what to do next:</p>
      <div class="space-y-4">
        <!-- Step 1 -->
        <div class="bg-white p-5 border-l-4 border-orange-500 rounded-r-lg">
          <h3 class="font-bold text-gray-800 mb-2">1. Read Our Full Review</h3>
          <p class="text-gray-700 text-sm mb-2">See detailed testing data for Squarespace</p>
          <a href="/reviews/squarespace-ai" class="text-orange-600 font-semibold hover:underline text-sm">Read Squarespace Review →</a>
        </div>
        <!-- Step 2 -->
        <div class="bg-white p-5 border-l-4 border-orange-500 rounded-r-lg">
          <h3 class="font-bold text-gray-800 mb-2">2. Compare Your Options</h3>
          <p class="text-gray-700 text-sm mb-2">See how Squarespace compares to Mixo for coaches</p>
          <a href="/comparisons/squarespace-vs-mixo" class="text-orange-600 font-semibold hover:underline text-sm">View Comparison →</a>
        </div>
        <!-- Step 3 -->
        <div class="bg-white p-5 border-l-4 border-orange-500 rounded-r-lg">
          <h3 class="font-bold text-gray-800 mb-2">3. Learn More About Coaching Websites</h3>
          <p class="text-gray-700 text-sm mb-2">Get our complete guide to building coaching websites</p>
          <a href="/guides/ai-website-builders-for-coaches-detailed" class="text-orange-600 font-semibold hover:underline text-sm">Read Coaching Guide →</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
