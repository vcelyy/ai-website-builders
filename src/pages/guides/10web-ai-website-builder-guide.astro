  date: 'January 2025'
};

const tenwebFeatures = [
  {
    feature: 'AI WordPress Generation',
    description: 'Generate WordPress websites from URLs or descriptions with AI',
    benefit: 'Fast WordPress site creation'
  },
  {
    feature: 'WordPress-Based',
    description: 'Built on WordPress with full access to plugins and themes',
    benefit: 'Extensible and familiar platform'
  },
  {
    feature: 'Code Export',
    description: 'Export WordPress code for self-hosting or custom development',
    benefit: 'Full portability and control'
  },
  {
    feature: 'Page Builder',
    description: 'Elementor-based drag-and-drop page builder',
    benefit: 'Easy visual editing'
  },
  {
    feature: 'E-commerce Ready',
    description: 'WooCommerce support for online stores',
    benefit: 'Powerful e-commerce capabilities'
  },
  {
    feature: 'Hosting Included',
    description: 'Managed WordPress hosting with Google Cloud infrastructure',
    benefit: 'Fast and reliable hosting'
  }
