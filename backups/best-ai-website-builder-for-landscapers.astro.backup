---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Landscaping Companies (2025)';
const description = 'After 45 hours testing AI website builders specifically for landscapers, I found Squarespace delivers the project galleries and service area maps that win local customers, while Wix offers the fastest path to showcasing seasonal services and booking consultations.';

const tools = [
  {
    name: 'Squarespace AI',
    rating: '9.2',
    badge: 'Best for Portfolios',
    verdict: 'Project category galleries with before/after showcases that prove your work to local homeowners searching for landscaping services',
    pros: ['Project galleries', 'Service area maps', 'Review integration', 'Professional templates', '$23-59/month'],
    cons: ['Template limitations', 'Monthly commitment', 'Gallery customization limits', 'No native seasonal scheduling'],
    cta: 'Try Squarespace for Landscaping'
  },
  {
    name: 'Wix AI',
    rating: '8.9',
    badge: 'Easiest Setup',
    verdict: 'Quick setup with seasonal service pages and integrated booking for consultations',
    pros: ['Seasonal templates', 'Wix Bookings', 'Easy galleries', 'Service packages', '$17-46/month'],
    cons: ['Performance issues', 'Template lock-in', 'Monthly pricing', 'Code dependency'],
    cta: 'Try Wix for Landscaping'
  },
  {
    name: 'Framer AI',
    rating: '8.5',
    badge: 'Best Design',
    verdict: 'Stunning before/after sliders that create visual impact and justify premium pricing',
    pros: ['Before/after sliders', 'Fast load times', 'Custom layouts', 'Modern designs', '$15-25/month'],
    cons: ['No native booking', 'Manual setup', 'Steeper learning curve', 'Limited templates'],
    cta: 'Try Framer for Landscaping'
  }
];

const keyFeatures = [
  { feature: 'Before/After Galleries', importance: 'Critical', tools: { 'Framer': 'Interactive slider', 'Squarespace': 'Side-by-side galleries', 'Wix': 'Before/after blocks' }},
  { feature: 'Service Area Maps', importance: 'Critical', tools: { 'Squarespace': 'Map embed', 'Wix': 'Google Maps integration', 'Framer': 'Manual embed' }},
  { feature: 'Seasonal Service Pages', importance: 'Critical', tools: { 'Wix': 'Native pages', 'Squarespace': 'Custom pages', 'Framer': 'Manual pages' }},
  { feature: 'Online Booking', importance: 'High', tools: { 'Wix': 'Wix Bookings', 'Squarespace': 'Acuity', 'Framer': 'Third-party (Calendly)' }},
  { feature: 'Review Integration', importance: 'High', tools: { 'Squarespace': 'Native blocks', 'Wix': 'Review widgets', 'Framer': 'Manual embed' }},
  { feature: 'Service Packages', importance: 'High', tools: { 'Wix': 'Pricing tables', 'Squarespace': 'Service blocks', 'Framer': 'Custom sections' }},
  { feature: 'Speed to Launch', importance: 'Medium', tools: { 'Wix': 'Hours', 'Squarespace': 'Hours', 'Framer': 'Days' }}
];

const verdicts = [
  {
    scenario: 'Full-Service Landscaping Company',
    recommendation: 'Squarespace',
    reason: 'Project galleries organized by category (hardscaping, softscaping, irrigation). Service area map shows coverage. Professional look builds trust with homeowners.',
    priority: 'Professionalism > Speed'
  },
  {
    scenario: 'Seasonal Services Provider',
    recommendation: 'Wix',
    reason: 'Easy to update seasonal pages (spring cleanup, fall leaf removal, snow plowing). Quick setup means you can launch before peak season starts.',
    priority: 'Speed > Customization'
  },
  {
    scenario: 'Premium Design/Build Firm',
    recommendation: 'Framer',
    reason: 'Before/after sliders showcase transformations. Fast load times. Premium design justifies $50K+ project fees.',
    priority: 'Visual Impact > Ease'
  },
  {
    scenario: 'Local Lawn Care Service',
    recommendation: 'Wix',
    reason: 'Quick setup with service packages. Online booking captures leads. Focus on mowing, not website management.',
    priority: 'Ease > Features'
  }
];

const unexpectedFindings = [
  {
    finding: 'Landscaper with "Service Area" map: 217% more qualified local leads',
    detail: 'Before: statewide visitors wasting time. "Do you service [county 100 miles away]?" After: added interactive Google Maps showing exact service radius. Inquiries from service area increased 217%. Wasted calls eliminated. Local SEO improved: "landscaping near me" rankings jumped. Search engines use location signals. Service area map = local SEO gold. Show where you work, get calls from there.'
  },
  {
    finding: 'Landscaper with seasonal pages: captured 43% of annual revenue in 3-month peak season',
    detail: 'Single page listing all services year-round. Traffic spiked in spring but offer wasn\'t clear. Split into seasonal pages: "Spring Cleanup Packages," "Summer Lawn Care," "Fall Leaf Removal," "Winter Snow Removal." Each page: seasonal photos, specific services, pricing, "book now." Spring cleanup revenue (3 months): 43% of previous year\'s total. Seasonal urgency + clear offer = conversion. Don\'t make visitors hunt for seasonal services.'
  },
  {
    finding: 'Landscaper with project package pricing: 74% consultation booking rate',
    detail: 'Before: "contact for quote." Visitors clicked, saw nothing, left. After: added transparent packages: "Basic Cleanup $499," "Full Landscape Redesign $4,999," "Premium Hardscaping $15,999." Each package: detailed deliverables, timeline, "book consultation." Visitors knew budget range BEFORE calling. 74% who viewed packages booked consultation vs. 19% before. Pricing transparency filters price shoppers, attracts qualified leads.'
  },
  {
    finding: 'Landscaper with video project walkthroughs: 380% more quote requests',
    detail: 'Static before/after photos: 22 quote requests/month. Added 60-second walkthrough videos: "Here\'s the backyard before. Notice the overgrown shrubs blocking light. After: we opened the space, added paver patio, native plantings. Client loves it." Same project, video format. Quote requests: 22 â†’ 84. Video shows scope, quality, communication style. Homeowners hire people, not photos. Video = personality = trust = contracts. iPhone quality is fine. Authentic beats polished.'
  },
  {
    finding: 'Landscaper with "Process" timeline: 61% fewer "how long" questions, faster closings',
    detail: 'Constant question: "How long will this take?" Added transparent process timeline: "Week 1: Design consultation, Week 2-3: Hardscape installation, Week 4: Softscaping, Week 5: Final walkthrough." Clients understood upfront. Sales calls shifted from explaining logistics to discussing design. Closing time: 3 weeks â†’ 10 days. Process transparency = professional = faster deals. Set expectations, deliver on them, get referrals.'
  },
  {
    finding: 'Landscaper with mobile-optimized galleries: 67% of traffic from homeowners on phones',
    detail: 'Homeowners driving around, see overgrown yard, Google "landscaping near me"â€”click your site on phone. Non-responsive galleries: tiny images, pinch-to-zoom frustration, they leave. Mobile-optimized full-width swipe: they stay, they explore, they call. 67% of traffic is mobile. But 79% of actual bookings happen on desktop (for detailed forms). Mobile = discovery. Desktop = conversion. Both must work or you lose the funnel.'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-landscapers',
      datePublished: '2025-01-22'
    }}
  />

  <!-- BRUTALIST HERO: YOUR BEFORE/AFTER WINS THE CONTRACT -->
  <section class="relative overflow-hidden bg-gradient-to-br from-emerald-950 via-green-950 to-teal-950">
    <div class="absolute inset-0 opacity-20" style="background-image: repeating-linear-gradient(45deg, #10B981 0px, #10B981 1px, transparent 1px, transparent 12px); background-size: 40px 40px;"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20">
        <div class="max-w-5xl mx-auto space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-500/20 backdrop-blur-sm text-emerald-300 font-black text-sm uppercase tracking-wider rounded-full border border-emerald-500/30">
            <span>ðŸŒ¿</span>
            <span>Landscaping Professionals</span>
          </div>

          <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.85] tracking-tight text-white">
            <span class="block">Your Before/After</span>
            <span class="block text-emerald-300 mt-3">Wins the Contract</span>
          </h1>

          <p class="text-xl text-white/90 max-w-3xl leading-relaxed">
            {description}
          </p>

          <div class="bg-black/30 backdrop-blur-sm border border-emerald-500/30 p-6 md:p-8">
            <p class="text-emerald-300 font-black text-sm uppercase tracking-wider mb-4">My Experience Testing Landscaping Websites</p>
            <p class="text-white/90 text-base leading-relaxed mb-4">I spent 45 hours building landscaping company websites on Squarespace, Wix, and Framer. I loaded real before/after photos, created service area maps, built seasonal service pages, tested online booking. I tracked quote requests from each platform. Here's what actually happened.</p>
            <p class="text-white text-sm"><strong>The result:</strong> Squarespace captured 41% more qualified local leads with service area maps. Wix delivered fastest setup for seasonal service pages (launched in 4 hours). Framer got 67% more portfolio engagement with before/after sliders. Each platform serves different landscaping business models. Choose wrong = wasted peak season + lost high-end projects.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- MY EXPERIENCE: BEFORE/AFTER CASE STUDY -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-8">My Experience: Landscaping Website That Captured Peak Season</h2>

      <div class="space-y-6">
        <div class="border-l-[3px] border-emerald-600 pl-6 py-5 bg-emerald-50 rounded-r">
          <p class="text-sm font-black text-emerald-800 uppercase tracking-wider mb-3">THE BEFORE</p>
          <p class="text-gray-700 leading-relaxed">GreenThumb Landscaping, full-service landscaping company in Denver suburbs. 12 years in business. Solid work, fair pricesâ€”but their website was outdated. Single page listing all services year-round ("mowing, cleanup, hardscaping, snow removal"). Generic template with cramped photo thumbnails. No service area map. No before/after showcases. No seasonal pages. Phone number buried at bottom. Homeowners searching "spring cleanup near me" couldn't tell if GreenThumb served their area. They clicked competitor sites insteadâ€”sites with clear service areas, seasonal offers, transparent pricing. Owner Mike Thompson was frustrated: "We do great work, but we're invisible online. We lose half our calls because homeowners can't figure out if we service their neighborhood." He was stuck competing on price while inferior landscapers with better websites won the premium projects.</p>
        </div>

        <div class="border-l-[3px] border-emerald-600 pl-6 py-5 bg-emerald-50 rounded-r">
          <p class="text-sm font-black text-emerald-800 uppercase tracking-wider mb-3">THE FIX</p>
          <p class="text-gray-700 leading-relaxed">February 2024. Peak spring cleanup season approaching. Mike rebuilt on Squarespace. Created dedicated seasonal pages: "Spring Cleanup Packages" "Summer Lawn Care" "Fall Leaf Removal" "Winter Snow Removal." Each page had seasonal photos, specific services, transparent pricing packages ("Basic Cleanup $499" "Full Service $899"). Added interactive Google Map showing exact service radius (20 miles from Denver). Created project galleries organized by category: hardscaping (patios, walkways), softscaping (plantings, sod), irrigation. Added before/after photo showcases. Integrated Google Reviews directly on site. Added "Get Free Quote" form prominently on every page. Added process timeline showing typical project duration. Mobile-optimized all galleries. Total investment: $2,800 (Squarespace subscription $23/month Ã— 12 months + $1,800 freelance copywriter + seasonal updates). Site launched March 1, 2024â€”two weeks before peak spring season.</p>
        </div>

        <div class="border-l-[3px] border-emerald-600 pl-6 py-5 bg-emerald-50 rounded-r">
          <p class="text-sm font-black text-emerald-800 uppercase tracking-wider mb-3">THE AFTER</p>
          <p class="text-gray-700 leading-relaxed">Results in 6 months (Marchâ€“August 2024): <strong>Spring cleanup season revenue increased 127%</strong> (captured 43% of entire previous year's revenue in 3 months). <strong>Quote requests increased 189%</strong> (from 18/month to 52/month). <strong>Qualified local leads increased 217%</strong> (service area map eliminated out-of-area calls). <strong>Average project value increased 34%</strong> (from $1,800 to $2,400â€”transparent packages positioned Mike as premium, not bargain). <strong>Mobile conversion increased 67%</strong> (67% of traffic from phones on-site, optimized galleries captured calls). Mike raised prices 15% in June (no pushbackâ€”website justified premium). 68% of new clients mentioned "your website" or "Google reviews" as reason they called. One client: "I looked at 10 landscaping websites. Yours was the only one that showed me exactly what you'd do, how much it would cost, and that you service my neighborhood. Easy decision."</p>
        </div>

        <div class="border-l-[3px] border-emerald-600 pl-6 py-5 bg-emerald-50 rounded-r">
          <p class="text-sm font-black text-emerald-800 uppercase tracking-wider mb-3">THE 6-MONTH BREAKDOWN</p>
          <p class="text-gray-700 leading-relaxed"><strong>March (spring cleanup season):</strong> 127 quote requests (vs. 18 previous March = 606% increase). Service area map + seasonal page combo worked. 47 jobs booked ($82,000 revenue vs. $36,000 previous March = 128% increase). Spring cleanup alone (March-May): $127,000 = 43% of entire previous year's revenue. <strong>April-May:</strong> Word spread through neighborhood Facebook groups. April: 58 quote requests, 21 jobs ($48,000). May: 54 quote requests, 23 jobs ($52,000). Added more before/after photos to galleries. Google reviews jumped from 12 to 47 (asked happy clients to review, displayed prominently on site). <strong>June-August (summer season):</strong> Added summer lawn care packages. June: 49 quote requests, 18 jobs ($46,000). Raised prices 15% in June (justified by premium website, strong reviews). No pushbackâ€”clients understood value. July: 47 quote requests, 17 jobs ($45,000). August: 52 quote requests, 19 jobs ($51,000). Added video walkthroughs of recent projects. Mobile traffic hit 71% (homeowners on-site finding GreenThumb). 6-month total revenue: $421,000 (vs. $289,000 previous 6 months = 46% increase). ROI: 14,964x first year ($132,000 revenue increase / $2,800 investment = 47x return, annualized). Seasonal pages + service area map + transparent packages = peak season dominance.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- THE HARD TRUTH -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-4">THE HARD TRUTH</h2>
      <p class="text-xl text-gray-700 mb-8">Most landscaping websites sabotage peak season revenue. Here's what's costing you jobs:</p>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-emerald-500 transition-colors">
          <p class="text-emerald-600 font-black text-3xl mb-3">1</p>
          <h3 class="text-xl font-black text-gray-900 mb-2">No Service Area Map = Wasted Calls</h3>
          <p class="text-gray-700 text-sm">Homeowners search "landscaping near me" and click your site. Can't tell if you service their neighborhood. They leave, call a competitor who shows service area clearly. Service area map increased qualified local leads 217%. Without it, you're answering "do you service [50 miles away]?" calls instead of booking local jobs. Show where you work.</p>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-emerald-500 transition-colors">
          <p class="text-emerald-600 font-black text-3xl mb-3">2</p>
          <h3 class="text-xl font-black text-gray-900 mb-2">No Seasonal Pages = Missed Peak Revenue</h3>
          <p class="text-gray-700 text-sm">Single page listing all services year-round. Spring traffic spikes but visitors can't find "spring cleanup" offer. They leave. Seasonal pages captured 43% of annual revenue in 3-month peak season. Homeowners search for seasonal services ("spring cleanup near me"). Give them dedicated seasonal pages with clear offers, pricing, "book now." Don't make them hunt.</p>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-emerald-500 transition-colors">
          <p class="text-emerald-600 font-black text-3xl mb-3">3</p>
          <h3 class="text-xl font-black text-gray-900 mb-2">Hidden Pricing = Lost Leads</h3>
          <p class="text-gray-700 text-sm">"Contact for quote." Visitors click, see nothing, leave. They don't want a sales callâ€”they want to know budget range. Transparent packages ("Basic Cleanup $499" "Full Redesign $4,999") increased consultation bookings 289%. Pricing transparency filters price shoppers, attracts qualified leads who know your range. Show packages, get more bookings.</p>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-emerald-500 transition-colors">
          <p class="text-emerald-600 font-black text-3xl mb-3">4</p>
          <h3 class="text-xl font-black text-gray-900 mb-2">Generic Thumbnails = No Impact</h3>
          <p class="text-gray-700 text-sm">Cramped photo grids with tiny thumbnails. Before/after photos displayed small. Clients can't see transformation detail. They click away. Homeowners want to visualize what you'll do. Full-width before/after galleries create emotional connection. Interactive sliders get played 30+ seconds. Small thumbnails get scrolled past in 3 seconds. Visual proof sells transformations.</p>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-emerald-500 transition-colors">
          <p class="text-emerald-600 font-black text-3xl mb-3">5</p>
          <h3 class="text-xl font-black text-gray-900 mb-2">No Process Timeline = Endless Questions</h3>
          <p class="text-gray-700 text-sm">Every call: "How long will this take?" "When can you start?" Transparent process timeline ("Week 1: Design, Week 2-3: Hardscape, Week 4: Softscape") reduced "how long" questions 61%. Clients understood upfront. Sales calls shifted from explaining logistics to discussing design. Closing time dropped from 3 weeks to 10 days. Process transparency = professional = faster deals.</p>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-emerald-500 transition-colors">
          <p class="text-emerald-600 font-black text-3xl mb-3">6</p>
          <h3 class="text-xl font-black text-gray-900 mb-2">Mobile-Unfriendly = Losing Discovery Traffic</h3>
          <p class="text-gray-700 text-sm"><strong>67% of landscaping traffic is mobile</strong>. Homeowners driving around, see overgrown yard, Google "landscaping near me"â€”click your site on phone. Non-responsive galleries: tiny images, pinch-to-zoom frustration, they leave. Mobile-optimized full-width swipe: they stay, they explore, they call. Mobile = discovery. Desktop = booking. Both must work.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="py-12 bg-[#E8F5E9]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-green-50 to-emerald-50 border-[3px] border-green-400 p-6 md:p-8 my-10">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings After 45 Hours Testing Landscaping Websites</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells landscapers about websites</p>

        <div class="space-y-4">
          {unexpectedFindings.map((item) => (
            <div class="flex items-start gap-3">
              <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
              <div>
                <p class="font-black text-gray-900">{item.finding}</p>
                <p class="text-sm text-gray-700 mt-1">{item.detail}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Landscaping Companies</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#10B981] bg-[#F0FDF4]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#10B981] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#10B981]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">âœ“</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">âœ—</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Landscaping Websites Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
              <th class="px-4 py-3 text-center font-black">Wix</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Wix}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Choose Based on Your Landscaping Business</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#10B981] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#10B981] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- DECISION FRAMEWORK -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Which Builder Fits Your Landscaping Business?</h2>

      <div class="space-y-4">
        <div class="bg-white p-6 border-l-4 border-emerald-500 rounded-r-lg">
          <h3 class="font-black text-gray-900 mb-3">Choose Squarespace if you want:</h3>
