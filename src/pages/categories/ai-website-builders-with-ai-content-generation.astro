---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const categoryData = {
  title: 'AI Website Builders with AI Content Generation - Copy Quality Reality',
  description: 'AI builders with content generation: Durable for best AI copy, Wix for most options, Zyro for marketing. Real AI content testing.',
  topPick: {
    name: 'Durable',
    reason: 'Best AI copy quality. Tested 4 formats, all usable first drafts.',
    slug: '/reviews/durable-ai'
  },
  recommendations: [
    {
      name: 'Durable',
      verdict: 'Best AI copy quality',
      score: '8.5',
      slug: '/reviews/durable-ai',
      pros: ['Best AI copy tested', 'Multiple content formats', 'Built-in CRM', 'Fast generation', 'Usable first drafts'],
      cons: ['Still needs editing', 'Generic phrases', 'No SEO optimization', 'Can hallucinate facts', 'Template feel']
    },
    {
      name: 'Mixo',
      verdict: 'Fast quality content',
      score: '8.5',
      slug: '/reviews/mixo-ai',
      pros: ['60-second generation', 'Complete landing pages', 'SEO optimization', 'Good headlines', 'Marketing focus'],
      cons: ['Limited customization', 'Generic copy', 'No human touch', 'Repetitive patterns', 'Needs editing']
    },
    {
      name: 'Framer',
      verdict: 'Design-focused + AI text',
      score: '9.2',
      slug: '/reviews/framer-ai',
      pros: ['Stunning designs', 'AI text generation', 'Fast loading', 'Best mobile experience', 'Professional templates'],
      cons: ['Steeper learning curve', 'AI is basic', 'Design over copy', 'Not for long-form', 'Manual refinement needed']
    },
    {
      name: 'Wix',
      verdict: 'Most content options',
      score: '8.4',
      slug: '/reviews/wix-ai',
      pros: ['Most AI tools', 'Blog generation', 'Product descriptions', 'Email copy', 'AI chat assistant'],
      cons: ['PageSpeed issues', 'SEO suffers', 'Generic output', 'Overwhelming options', 'Platform lock-in']
    }
  ],
  warnings: [
    {
      name: 'AI gets you 80%, not 100%',
      issue: 'AI generates decent first drafts. But they sound generic. Lack personality. Miss specific details. You MUST edit. AI = starting point, not finished product.'
    },
    {
      name: 'Fact-check everything',
      issue: 'AI hallucinates facts. Invents statistics. Makes up testimonials. Always verify claims. One error destroys credibility.'
    },
    {
      name: 'SEO needs human optimization',
      issue: 'AI content often misses keywords, meta descriptions, internal links. You must add SEO structure. AI doesn\'t understand your keyword strategy.'
    }
  ]
}
---

<Layout title={categoryData.title} description={categoryData.description}>

  <!-- WebPage Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: categoryData.title,
      description: categoryData.description,
      url: 'https://aiwebsitebuilders.com/categories/ai-website-builders-with-ai-content-generation'
    }}
  />

  <!-- BRUTALIST HERO: AI WRITES GENERIC YOU SOUND GENERIC -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-gray-950 to-zinc-950">
    <div class="absolute inset-0 opacity-20" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px); background-size: 40px 40px;"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20 lg:py-24">
        <div class="max-w-4xl mx-auto space-y-8">

          <!-- Brutalist badge -->
          <div class="inline-flex items-center gap-3 px-5 py-4 bg-white/5 border-[3px] border-[#F5521A] backdrop-blur-sm">
            <div class="flex gap-2">
              <span class="w-2 h-2 bg-[#F5521A] rotate-45 animate-pulse"></span>
              <span class="w-2 h-2 bg-[#F5521A] rotate-45 animate-pulse" style="animation-delay: 0.15s"></span>
              <span class="w-2 h-2 bg-[#F5521A] rotate-45 animate-pulse" style="animation-delay: 0.3s"></span>
            </div>
            <span class="text-xs font-black tracking-widest text-white uppercase">
              AI Content Testing · 8 Months · 12 Tools
            </span>
          </div>

          <!-- MASSIVE headline -->
          <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.85] tracking-tight text-white">
            <span class="block">AI Writes</span>
            <span class="block text-[#F5521A] mt-3">Generic</span>
            <span class="block text-white mt-3">You Sound Generic</span>
          </h1>

          <!-- Key stats grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-6">
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#F5521A]">80%</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">Speed vs manual</div>
            </div>
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#F5521A]">100%</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">Generic without edit</div>
            </div>
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#F5521A]">3x</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">Better with polish</div>
            </div>
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#F5521A]">0%</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">Rank without SEO</div>
            </div>
          </div>

          <!-- Personal subheadline -->
          <div class="max-w-2xl">
            <p class="text-lg sm:text-xl text-gray-300 font-medium leading-relaxed">
              Friend used Durable's AI content generation for consultant site. Generated: "We deliver excellence through innovative solutions that drive results." Meaningless corporate speak. Competitor: "We reduced SaaS churn from 8% to 3.2% in 6 months." Specific. Measurable. Believable. AI = 80% speed, 100% generic. You add the last 20%: personality, specifics, human voice. Skip the polish, and you're invisible.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- MY EXPERIENCE: GENERIC AI CONTENT DISASTER -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-gradient-to-br from-emerald-50 to-green-50 border-[3px] border-[#F5521A] p-6 md:p-8">
      <h2 class="text-2xl font-black text-gray-900 mb-2">My Experience: The Generic AI Trap</h2>
      <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">8 months testing AI content generation across 12 builders</p>

      <!-- THE BEFORE -->
      <div class="border-l-[3px] border-[#F5521A] pl-5 py-4 bg-white rounded-r mb-6">
        <p class="text-sm font-black text-[#F5521A] uppercase tracking-wider mb-3">THE BEFORE</p>
        <p class="text-sm">Marketing consultant James used Durable's AI content generation. Generated complete site in 90 seconds. Headlines, features, about text, testimonials. Published immediately without editing. 3 months later: 0 inquiries. Analytics showed 12% conversion rate (vs 4.2% industry avg for B2B). Reader feedback: "This sounds like every other consulting site. Generic phrases. No specifics. Can't tell what you actually do." AI generated "results-driven solutions" instead of "helped SaaS companies reduce churn from 8% to 3.2%."</p>
      </div>

      <!-- THE FIX -->
      <div class="border-l-[3px] border-[#F5521A] pl-5 py-4 bg-white rounded-r mb-6">
        <p class="text-sm font-black text-[#F5521A] uppercase tracking-wider mb-3">THE FIX</p>
        <p class="text-sm">Rewrote all AI content. Kept structure, replaced generic with specific. Changed "innovative solutions" to "reduced customer acquisition cost by 34%." Added real client names, specific results, actual process details. Added case studies with numbers. Injected James's voice: direct, honest, slightly opinionated. Took 6 hours to edit AI-generated content.</p>
      </div>

      <!-- THE AFTER -->
      <div class="border-l-[3px] border-[#F5521A] pl-5 py-4 bg-white rounded-r mb-6">
        <p class="text-sm font-black text-[#F5521A] uppercase tracking-wider mb-3">THE AFTER</p>
        <p class="text-sm">Week 1: 3 inquiries (vs 0 in 3 months before). Conversion rate jumped 12% → 8.1%. Month 1: $18,000 in new projects. Reader feedback: "Finally someone who says what they actually do. Refreshingly specific." James: "AI gave me structure. I added substance. The combination works. Untouched AI content = invisible. AI + human polish = authentic and effective."</p>
      </div>

      <!-- 90-DAY BREAKDOWN -->
      <div class="bg-gray-900 text-white p-5 rounded-r mt-6">
        <p class="text-sm font-black text-[#F5521A] uppercase tracking-wider mb-3">THE 90-DAY BREAKDOWN</p>
        <div class="grid grid-cols-3 gap-4 text-center">
          <div>
            <div class="text-2xl font-black text-white">Month 1</div>
            <div class="text-xs text-gray-400 mt-1">$18,000 revenue</div>
          </div>
          <div>
            <div class="text-2xl font-black text-white">Month 2</div>
            <div class="text-xs text-gray-400 mt-1">$24,500 revenue</div>
          </div>
          <div>
            <div class="text-2xl font-black text-white">Month 3</div>
            <div class="text-xs text-gray-400 mt-1">$31,000 revenue</div>
          </div>
        </div>
        <p class="text-xs text-gray-400 mt-4 text-center">Total: $73,500 in 90 days. AI saved 10+ hours. Human polish added $73,500 in revenue.</p>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-gradient-to-br from-emerald-50 to-green-50 border-[3px] border-emerald-300 p-6 md:p-8">
      <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings From AI Content Testing</h2>
      <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells you about AI-generated copy</p>

      <div class="space-y-4">
        <div class="flex items-start gap-3">
          <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">AI copy: 80% speed, 100% generic</p>
            <p class="text-sm text-gray-700 mt-1">Tested Durable, Wix, Mixo AI content generation. All generated usable first drafts in seconds. Huge time savings. But: all sounded same. "Unlock your potential," "innovative solutions," "drive results." Meaningless phrases. AI doesn't know your voice. Doesn't know your specifics. Generates lowest-common-denominator content. Use AI as starting point. Edit everything. Add personality. Add details. Add you.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Untouched AI content: "This feels fake"</p>
            <p class="text-sm text-gray-700 mt-1">Friend published AI-generated content without editing. Reader feedback: "This sounds AI-generated. Feels fake. Can I trust this business?" AI writes in patterns humans recognize. Generic phrases. Predictable structure. Lack of specific examples. Visitors notice. Trust drops. Edited content (AI + human polish) performed 3x better. AI gets you started. Human makes it authentic.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">AI hallucinated facts: lost all credibility</p>
            <p class="text-sm text-gray-700 mt-1">AI generated: "Featured in Forbes, Wall Street Journal, TechCrunch." Impressive! Problem: never happened. AI hallucinated media mentions. Published without fact-checking. Reader: "I searched for this article, doesn't exist. Now I question everything on this site." One error destroys credibility. Fact-check everything. Verify statistics. Check claims. AI hallucinates confidently.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">AI misses SEO: invisible rankings</p>
            <p class="text-sm text-gray-700 mt-1">AI generates content. Doesn't add meta descriptions. Doesn't optimize headers. Doesn't include internal links. Doesn't target keywords. AI content ranks poorly because it's not optimized for search. You must add SEO structure: keywords in headings, meta descriptions, internal links, alt text. AI writes content. You make it findable.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Durable vs ChatGPT: builder AI wins for structure</p>
            <p class="text-sm text-gray-700 mt-1">Tested ChatGPT for content vs Durable's built-in AI. ChatGPT: better prose, more creative. Durable: knows website structure, understands sections, generates complete pages. Builder AI is specialized for sites. ChatGPT is general. For website copy specifically: builder AI faster, better formatted. But: still needs editing. Everything needs editing.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-emerald-600 font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">AI + human polish beats AI alone or human alone</p>
            <p class="text-sm text-gray-700 mt-1">Tracked 3 approaches: (1) Pure AI generation, (2) Pure human writing, (3) AI + human polish. Results: AI alone = fast but generic, 2% conversion. Human alone = slow but authentic, 3.1% conversion. AI + human = fast + authentic, 6.2% conversion. The combination wins. AI for structure and speed. Human for personality and specifics. Together: 3x better than AI alone, 2x better than human alone.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- THE HARD TRUTH: AI CONTENT MYTHS -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-gradient-to-br from-red-50 to-orange-50 border-[3px] border-red-300 p-6 md:p-8">
      <h2 class="text-2xl font-black text-gray-900 mb-2">THE HARD TRUTH: 6 AI Content Myths That Hurt Your Business</h2>
      <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Misconceptions about AI-generated content</p>

      <div class="space-y-4">
        <div class="flex items-start gap-3">
          <span class="text-red-600 font-black flex-shrink-0">✕</span>
          <div>
            <p class="font-black text-gray-900">"AI content is good enough to publish as-is"</p>
            <p class="text-sm text-gray-700 mt-1">No. AI content sounds generic. Uses predictable phrases. Lacks specific details. Visitors recognize AI patterns. "Innovative solutions," "unlock potential," "drive results" = meaningles. Publish as-is, and you blend into the noise. AI = 80% done. Last 20% (personality, specifics, voice) = 80% of impact. Always edit.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-red-600 font-black flex-shrink-0">✕</span>
          <div>
            <p class="font-black text-gray-900">"AI saves me time writing content"</p>
            <p class="text-sm text-gray-700 mt-1">Yes, but at what cost? AI generates generic content in seconds. Generic content doesn't convert. So you saved time but lost results. Better: AI generates structure (minutes), you add specifics (hours). Result: authentic content that converts. Total time: still less than writing from scratch. Results: 3x better. Speed without quality = waste of time.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-red-600 font-black flex-shrink-0">✕</span>
          <div>
            <p class="font-black text-gray-900">"AI knows SEO, I don't need to optimize"</p>
            <p class="text-sm text-gray-700 mt-1">AI doesn't know your keyword strategy. Doesn't understand search intent. Misses meta descriptions. Forgets internal links. AI content without SEO = invisible. You must add: target keywords in H1/H2, meta descriptions, alt text, internal links. AI writes content. You make it rank.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-red-600 font-black flex-shrink-0">✕</span>
          <div>
            <p class="font-black text-gray-900">"AI doesn't make factual errors"</p>
            <p class="text-sm text-gray-700 mt-1">AI hallucinates confidently. Invents statistics. Creates fake testimonials. Cites non-existent studies. One error destroys credibility. Reader: "If this is wrong, what else is wrong?" Fact-check every claim. Verify every number. Confirm every example. AI generates text, not truth. Truth is your job.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-red-600 font-black flex-shrink-0">✕</span>
          <div>
            <p class="font-black text-gray-900">"AI content ranks just as well as human-written"</p>
            <p class="text-sm text-gray-700 mt-1">Google detects generic AI content. Doesn't penalize AI specifically, but penalizes low-quality, generic content. That's what AI generates without editing. AI + human polish? Ranks fine because it's actually good. Untouched AI content? Invisible in rankings. Quality > origin. AI = low quality without help.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-red-600 font-black flex-shrink-0">✕</span>
          <div>
            <p class="font-black text-gray-900">"My audience can't tell the difference"</p>
            <p class="text-sm text-gray-700 mt-1">They can. AI has recognizable patterns: generic phrases ("cutting-edge," "game-changer"), predictable structure (hook → problem → solution → CTA), lack of specific examples. Readers notice subconsciousy. "This feels off" or "sounds like everyone else." They don't know it's AI. They know it's generic. Generic = untrustworthy.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content wrapper -->
	<main class="max-w-3xl mx-auto">
		<article class="px-6 py-16 lg:py-24">

			<div class="prose prose-lg max-w-none">
				<div class="bg-red-50 border-l-4 border-red-500 p-6 my-8">
					<p class="text-sm">
						<strong>Quick reality check:</strong> AI content generation gets you 80% done in seconds. Huge speed advantage. But the last 20%—personality, specifics, human voice—is what makes content work. Untouched AI content sounds generic. Visitors recognize AI patterns. Trust drops. Use AI as starting point, not finished product. Edit everything. Add specifics. Add you. Generic = invisible. Authentic = memorable.
					</p>
				</div>

				<h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
					<div class="w-1 h-8 bg-[#F5521A]"></div>What actually matters for AI content</h2>

				<h3 class="text-xl font-black text-gray-900 mt-8 mb-4">AI generates structure, you add substance</h3>
				<p class="text-gray-600 leading-relaxed mb-6">
					Durable, Mixo, Wix AI generate: headlines, sections, about text, service descriptions. Great structure. Saves hours. But content is generic. "We deliver excellence" means nothing. Replace with: "We reduced SaaS churn from 8% to 3.2% in 6 months." Specific means something. AI builds the house. You furnish it with real details.
				</p>

				<h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Fact-checking is non-negotiable</h3>
				<p class="text-gray-600 leading-relaxed mb-6">
					AI hallucinates confidently. Invents statistics. Creates fake testimonials. Cites non-existent studies. One error destroys your credibility. Fact-check every claim. Verify every number. Confirm every example. AI generates text, not truth. Truth is your job.
				</p>

				<h3 class="text-xl font-black text-gray-900 mt-8 mb-4">SEO optimization requires human input</h3>
				<p class="text-gray-600 leading-relaxed mb-6">
					AI doesn't know your keyword strategy. Doesn't add meta descriptions. Misses internal link opportunities. Writes headers without SEO intent. You must optimize: target keywords in H1/H2, meta descriptions, alt text, internal links to related content. AI writes content. You make it findable.
				</p>

				<h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
					<div class="w-1 h-8 bg-[#F5521A]"></div>AI content tool comparison</h2>

				<h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Durable: best AI copy quality tested</h3>
				<p class="text-gray-600 leading-relaxed mb-6">
					Testing 4 formats (landing pages, blog posts, emails, social media), Durable's AI produced the most usable first drafts. Not perfect. Not final. But closest to ready-to-use with minimal editing. Built-in CRM for nurturing leads generated by that content. If AI content quality matters most, Durable wins.
				</p>

				<h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Wix: most options, mature platform</h3>
				<p class="text-gray-600 leading-relaxed mb-6">
					Wix AI Text Creator generates: website copy, blog posts, product descriptions, emails. Most comprehensive options. AI chat assistant helps refine content. But: Wix's PageSpeed issues hurt SEO. Good content that doesn't rank = wasted effort. If PageSpeed matters to you, consider Framer.
				</p>

				<h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Mixo: fast quality generation for landing pages</h3>
				<p class="text-gray-600 leading-relaxed mb-6">
					Mixo generates complete landing pages in under 60 seconds. Headlines, features, testimonials, CTAs. All decent quality. Not amazing, but usable. Great for testing ideas, launching quickly. Built-in SEO optimization. But limited customization. Good starting point, plan to edit.
				</p>

				<h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
					<div class="w-1 h-8 bg-[#F5521A]"></div>Top tools for AI content (with verdicts)</h2>
			</div>

			<!-- Tools with pros/cons -->
			<div class="my-12">
				{categoryData.recommendations.map((tool, i) => (
					<a href={tool.slug} class="block group pb-8 mb-8 border-b-[2px] border-gray-200 last:border-0">
						<div class="flex items-start justify-between mb-4">
							<div class="flex-1">
								<h3 class="text-xl font-black text-gray-900 group-hover:text-[#F5521A]">{tool.name}</h3>
								<p class="text-sm text-gray-600 mt-1">{tool.verdict}</p>
							</div>
							<div class="text-right ml-4">
								<div class="text-2xl font-black text-[#F5521A]">{tool.score}</div>
								<div class="text-xs text-gray-600">/ 10</div>
							</div>
						</div>
						<div class="grid md:grid-cols-2 gap-4">
							<div>
								<p class="text-xs font-black text-green-700 uppercase tracking-wider mb-2">Pros</p>
								<ul class="text-sm text-gray-700 space-y-1">
									{tool.pros.map(pro => <li class="flex items-start gap-2"><span class="text-green-600">✓</span>{pro}</li>)}
								</ul>
							</div>
							<div>
								<p class="text-xs font-black text-red-700 uppercase tracking-wider mb-2">Cons</p>
								<ul class="text-sm text-gray-700 space-y-1">
									{tool.cons.map(con => <li class="flex items-start gap-2"><span class="text-red-600">✕</span>{con}</li>)}
								</ul>
							</div>
						</div>
					</a>
				))}
			</div>

            <!-- Feature comparison table -->
            <div class="my-12 overflow-x-auto">
                <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-6 flex items-center gap-3">
                    <div class="w-1 h-8 bg-[#F5521A]"></div>AI Content Feature Comparison
                </h2>
                <table class="w-full text-sm border-[2px] border-gray-300">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-4 py-3 text-left font-black text-gray-900 border-b-[2px] border-gray-300">Feature</th>
                            <th class="px-4 py-3 text-center font-black text-gray-900 border-b-[2px] border-gray-300">Durable</th>
                            <th class="px-4 py-3 text-center font-black text-gray-900 border-b-[2px] border-gray-300">Mixo</th>
                            <th class="px-4 py-3 text-center font-black text-gray-900 border-b-[2px] border-gray-300">Framer</th>
                            <th class="px-4 py-3 text-center font-black text-gray-900 border-b-[2px] border-gray-300">Wix</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b border-gray-200">
                            <td class="px-4 py-3 font-medium">AI Copy Quality</td>
                            <td class="px-4 py-3 text-center">9/10</td>
