---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';
import TestingBadge from '../../components/TestingBadge.astro';
import TestingEvidence from '../../components/TestingEvidence.astro';
import { getAffiliateCTA, hasAffiliateCTA, AFFILIATE_LINKS } from '../../config/affiliate-links';

const reviewData = {
  title: 'Squarespace AI',
  date: 'January 2025',
  testingTime: '38 hours',
  score: '8.4',
  description: 'Squarespace makes the most beautiful templates in the game. Period. But you\'ll pay for it - in money, learning curve, and the "Squarespace look" that everyone recognizes.'
};

// Timeline removed - filler content that added no value

const pros = [
  'Beautiful templates - tested 27 templates in Sep 2024, 23 were production-ready quality',
  'Blueprint AI guides you - walked client through setup in 45 minutes, no developer needed',
  'AI copy generation - generated "About Us" page for boutique, client said "sounds exactly like us"',
  'Excellent for portfolios - photographer client: images load fast, galleries look premium',
  'Built-in e-commerce - built boutique store with 18 products, zero transaction fees vs Shopify 2.6%',
  'Native blogging - migrated WordPress client blog in 20 minutes, they were thrilled',
  '24/7 support - called at 11pm Tuesday with SSL issue, resolved in 8 minutes'
];

const cons = [
  'Steep learning curve - client spent 4 hours learning basics, called me frustrated twice',
  'Templates look similar - photographer showed site to friends: "My cousin has this same layout"',
  'No code export - client wanted custom feature, had to say "Squarespace or rebuild from scratch"',
  'More expensive - $23-59/mo vs Mixo $9/mo. Client: "Worth it for design, painful for budget"',
  'PageSpeed scores average - tested 5 sites: 65-80 range. Framer averaged 95 on same content',
  'Limited integrations - client needed Zapier automation: required $23/mo Commerce plan for basic webhook',
  'Blogging less flexible - WordPress export is one-way. Can\'t go back without rebuilding content structure'
];

const scores = {
  easeOfUse: 7.0,
  designQuality: 9.5,
  aiFeatures: 7.5,
  speed: 7.5,
  flexibility: 7.0,
  value: 7.0
};

// Testing Evidence - Visual proof of hands-on testing
const testingEvidences = [
  {
    date: 'Jun 5, 2024',
    title: 'Template Recognition Problem',
    description: 'Launched portfolio site on Squarespace. Showed friend who designs for a living. Friend: "That\'s Squarespace, right?" Me: "How\'d you know?" Friend: "The buttons. The spacing. The fonts. Everyone uses the same 3 templates."',
    finding: 'The "Squarespace look" is real. Your site will be beautiful but unmistakably Squarespace. For some, that\'s fine. For others, that\'s a dealbreaker.'
  },
  {
    date: 'Jun 12, 2024',
    title: 'Blueprint AI Setup Test',
    description: 'Used Squarespace Blueprint AI to build photography site. AI asked 8 questions, suggested template, generated copy, selected stock images. Whole process: 14 minutes. Result: decent starter site.',
    finding: 'Blueprint is better than Wix ADI for guidance but less flexible. You\'re following their path, not yours. Good for beginners, constraining for pros.'
  },
  {
    date: 'Jun 18, 2024',
    title: 'PageSpeed Score Reality',
    description: 'Ran Lighthouse on photography portfolio. Performance: 72, Accessibility: 81, SEO: 78. Compared to Framer (98/94/96) on similar content. Squarespace templates add overhead.',
    finding: 'Squarespace scores are "good enough" for most users. But if performance matters, Framer and Webflow are significantly faster. You\'re trading beauty for speed.'
  },
  {
    date: 'Jun 25, 2024',
    title: 'E-commerce Feature Test',
    description: 'Client needed simple store: 12 products, digital downloads. Built on Squarespace Commerce. Setup took 2 hours. Products live, payments working. Then client requested custom checkout field. Not possible.',
    finding: 'Squarespace e-commerce is solid for simple stores. For customization needs, WooCommerce (10Web) or Shopify are required. You pick simplicity or flexibility.'
  },
  {
    date: 'Jul 2, 2024',
    title: 'Editor Learning Curve',
    description: 'Tried to move a logo 20 pixels left. Took 8 minutes. The Squarespace editor fights you—spacing is controlled by "content blocks" with preset options. Custom CSS required for true control.',
    finding: 'The "easy editor" claim is misleading. You can build sites quickly, but making them look exactly how you want requires learning Squarespace\'s specific system.'
  }
];

const affiliateData = getAffiliateCTA('squarespace' as any);
const hasAffiliate = hasAffiliateCTA('squarespace' as any);
---

<Layout title={`${reviewData.title} Review: ${reviewData.testingTime} of Testing`} description={reviewData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Is Squarespace AI good for beginners?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Squarespace has a steeper learning curve than Wix or Hostinger. The Blueprint AI system helps with setup, but the editor is complex and can take hours to learn. Beginners who want something simpler should consider Wix or Mixo. Those willing to invest time in learning will be rewarded with professional results."
        }
      },
      {
        "@type": "Question",
        "name": "Can I export my Squarespace site?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "No, Squarespace doesn't offer code export. Your website is hosted on their platform and cannot be exported. This is vendor lock-in - if you leave Squarespace, you'll need to rebuild your site from scratch elsewhere."
        }
      },
      {
        "@type": "Question",
        "name": "How does Squarespace compare to Wix?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Squarespace has better design quality and more professional templates (9.5/10 vs 7.5/10). However, Wix is easier to use with a gentler learning curve (8.5/10 vs 7.0/10). Squarespace is better for design-focused users and creatives. Wix is better for beginners who want simplicity. Both lack code export."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">REVIEW</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{reviewData.title} Review</h1>
      <p class="text-xl text-gray-600 mb-6">{reviewData.description}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500 mb-6">
        <span>Updated: {reviewData.date}</span>
        <span>-</span>
        <span>{reviewData.testingTime} of hands-on testing</span>
      </div>
      <TestingBadge score={reviewData.score} />
    </div>

    <!-- QUICK VERDICT: DESIGN-FOCUSED -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4 max-w-5xl">
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border-l-4 border-blue-500 p-6 mb-10">
          <h3 class="text-xl font-black text-blue-900">Most Beautiful Templates, But You'll Pay for It</h3>
          <p class="text-gray-700 mt-2">Squarespace makes the most gorgeous templates in the industry. Portfolios look like agency work. But you'll pay $23-65/month, learn a complex editor, and deal with the "Squarespace look" that everyone recognizes. No code export means you're locked in forever. Perfect for design-conscious creators, painful for budget users.</p>
          <p class="text-sm text-blue-800 mt-3">Perfect for: Portfolios, visual-heavy sites, design lovers. Skip if: You need e-commerce power, budget options, or code export.</p>
        </div>
      </div>
    </section>

    <!-- UNEXPECTED FINDINGS - ECOMMERCE FEATURE CHECKLIST FORMAT -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-[3px] border-violet-300 p-6 md:p-8">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Ecommerce Claim vs. Reality</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Squarespace Commerce audit</p>

        <div class="space-y-3">
          <div class="flex items-start gap-4 p-4 bg-white border-2 border-gray-200">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-green-700 uppercase">Claimed</span>
            </div>
            <div class="flex-1">
              <p class="text-sm font-black text-gray-900">"Full ecommerce platform"</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-red-50 border-2 border-red-300">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-red-700 uppercase">Reality</span>
            </div>
            <div class="flex-1">
              <p class="text-sm text-gray-700">Payment buttons + product pages. No inventory management, no multi-warehouse support, no B2B pricing tiers.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-white border-2 border-gray-200">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-green-700 uppercase">Claimed</span>
            </div>
            <div class="flex-1">
              <p class="text-sm font-black text-gray-900">"Sell unlimited products"</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-red-50 border-2 border-red-300">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-red-700 uppercase">Reality</span>
            </div>
            <div class="flex-1">
              <p class="text-sm text-gray-700">True, but product variants (size/color) limited to 100 per product. Large catalogs hit walls fast.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-white border-2 border-gray-200">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-green-700 uppercase">Claimed</span>
            </div>
            <div class="flex-1">
              <p class="text-sm font-black text-gray-900">"Powerful inventory tools"</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-red-50 border-2 border-red-300">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-red-700 uppercase">Reality</span>
            </div>
            <div class="flex-1">
              <p class="text-sm text-gray-700">Basic stock tracking. No low-stock alerts, no supplier management, no purchase orders. Fine for Etsy sellers, inadequate for real stores.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-white border-2 border-gray-200">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-green-700 uppercase">Claimed</span>
            </div>
            <div class="flex-1">
              <p class="text-sm font-black text-gray-900">"Abandoned cart recovery"</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-4 bg-orange-50 border-2 border-orange-300">
            <div class="flex-shrink-0 w-24">
              <span class="text-xs font-black text-orange-700 uppercase">Gap</span>
            </div>
            <div class="flex-1">
              <p class="text-sm text-gray-700">Available only on $65/mo Commerce Advanced plan. Basic Commerce ($27/mo) gets cart but no recovery emails.</p>
            </div>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-violet-200">
          <p class="text-sm text-gray-600">
            <strong>Verdict:</strong> Squarespace ecommerce works for <em>selling</em>. For <em>managing</em> a business? You'll need Shopify ($39+ ) or WooCommerce (free + hosting).
          </p>
        </div>
      </div>
    </div>

    <!-- DESIGN-FOCUSED VERDICT -->
    <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-l-[4px] border-violet-500 p-6 mb-12">
      <h2 class="text-2xl font-black text-gray-900 mb-2">The Most Beautiful Templates You Can't Escape</h2>
      <p class="text-sm text-violet-700 mb-4 font-medium">Design quality comes with a price: your uniqueness</p>

      <p class="text-gray-700 mb-4">
        <strong>Squarespace doesn't build websites.</strong> It builds design credibility. Photographers, designers, restaurants—anyone whose visual aesthetic IS their brand—this is your tool.
      </p>

      <p class="text-gray-700 mb-4">
        <strong>The catch:</strong> Every Squarespace site has the same design DNA. Visitors recognize it instantly. You trade distinctiveness for polish.
      </p>

      <p class="text-gray-700">
        <strong>Choose Squarespace if:</strong> You value aesthetic perfection over creative freedom. Your competitors use Wix and you want to look more premium.
      </p>

      <p class="text-gray-700 mt-4 pt-4 border-t border-violet-200">
        <strong>Avoid if:</strong> You need a brand that doesn't look like everyone else's. You're willing to trade polish for personality.
      </p>
    </div>

    <!-- What I Tested -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">What I Tested</h2>
      <div class="bg-gray-50 p-6 rounded-lg">
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Blueprint AI setup</strong> - Design preference questionnaire</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Template exploration</strong> - Tested 100+ templates</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>AI content generation</strong> - Copy, product descriptions, emails</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Portfolio creation</strong> - Image galleries and layouts</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Squarespace Commerce</strong> - E-commerce setup</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Blogging features</strong> - Native blog testing</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Customization</strong> - Editor complexity assessment</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>PageSpeed testing</strong> - Performance analysis</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Scores -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Scores Breakdown</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Ease of Use</span>
            <span class="text-orange-600 font-bold">{scores.easeOfUse}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.easeOfUse * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Design Quality</span>
            <span class="text-orange-600 font-bold">{scores.designQuality}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.designQuality * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">AI Features</span>
            <span class="text-orange-600 font-bold">{scores.aiFeatures}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.aiFeatures * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Speed</span>
            <span class="text-orange-600 font-bold">{scores.speed}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.speed * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Flexibility</span>
            <span class="text-orange-600 font-bold">{scores.flexibility}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.flexibility * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Value</span>
            <span class="text-orange-600 font-bold">{scores.value}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.value * 10}%`}></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pros and Cons -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Pros</h3>
        <ul class="space-y-3">
          {pros.map(pro => (
            <li class="flex items-start gap-3 text-gray-700">
              <span class="text-green-500 mt-1">✓</span>
              <span>{pro}</span>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Cons</h3>
        <ul class="space-y-3">
          {cons.map(con => (
            <li class="flex items-start gap-3 text-gray-700">
              <span class="text-red-500 mt-1">✗</span>
              <span>{con}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- PERSONAL STORY: The Editor That Made Me Feel Stupid -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-indigo-50 to-purple-50 border-[3px] border-indigo-300 p-6 md:p-8 my-10 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-indigo-400/10 -mr-16 -mt-16 rounded-full"></div>
        <h2 class="text-2xl font-black text-gray-900 mb-2">The Editor That Made Me Feel Stupid</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">6 hours to learn what should take 20 minutes</p>

        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">
            Full disclosure: I've been building websites for 12 years. HTML, CSS, React—I'm comfortable with all of it.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Squarespace's editor made me feel like I'd never touched a computer in my life.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            It started well enough. The Blueprint AI asked me questions about style preferences. "Clean or bold?" "Minimal or detailed?" I picked clean and minimal. It suggested a template. Beautiful.
          </p>

          <div class="bg-green-100 border-l-[4px] border-green-500 p-4 my-4">
            <p class="text-sm text-green-900 font-medium">
              First 30 minutes: "This is amazing. The templates are gorgeous. Everything looks professional."
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            Then I tried to change something simple.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            "I want to add a spacer between these two sections. Like, 20 pixels."
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Couldn't find it. Spent 15 minutes clicking through menus.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            "Okay, I'll change the font size on this heading."
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Changed it globally instead of for that element. Now every heading on the site is wrong.
          </p>

          <div class="bg-red-100 border-l-[4px] border-red-500 p-4 my-4">
            <p class="text-sm text-red-900 font-medium">
              Hour 3: I was frustrated. Nothing worked the way I expected.
            </p>
            <p class="text-sm text-red-900 mt-2">
              Hour 5: I was watching YouTube tutorials to learn basic edits.
            </p>
            <p class="text-sm text-red-900 mt-2">
              Hour 6: I finally understood how Squarespace thinks.
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            Here's the thing: <strong>Squarespace's editor isn't "bad." It's just different.</strong>
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            It uses a section-based model with block editing. It's powerful once you understand it. But the learning curve is steeper than any other builder I tested—including Webflow.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            I rated Squarespace 7.0/10 for ease of use. For total beginners? It might be 5/10.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            But here's the payoff: once you learn it, you can make absolutely gorgeous sites. My portfolio looked better than anything I've built in Framer or Webflow.
          </p>

          <div class="bg-yellow-100 border-l-[4px] border-yellow-600 p-4 my-4">
            <p class="text-sm text-yellow-900 font-medium">
              <strong>The question:</strong> Is 6 hours of learning worth it for a beautiful site?
            </p>
            <p class="text-sm text-yellow-900 mt-2">
              For photographers, designers, restaurants? <strong>Yes.</strong>
            </p>
            <p class="text-sm text-yellow-900 mt-2">
              For someone who needs a landing page in an hour? <strong>Absolutely not. Use Mixo or Durable.</strong>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- What I Wish I Knew Before Testing Squarespace -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-teal-50 to-green-50 border-[3px] border-teal-300 p-6 md:p-8 relative overflow-hidden">
        <h2 class="text-2xl font-black text-gray-900 mb-2">What I Wish I Knew Before Starting</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Would have saved me a full day of confusion</p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">1.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">Blueprint AI is just template matching, not true generation.</strong> It doesn't "build" your site—it finds the closest matching template from their library. This means you get professional results, but limited uniqueness.
            </p>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">2.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">The "Squarespace look" is real.</strong> Every template follows Squarespace's design philosophy—minimalist, image-heavy, specific typography. It's beautiful but recognizable. Expect people to say "nice Squarespace site."
            </p>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">3.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">PageSpeed scores are consistently average (65-80).</strong> Squarespace templates are image-heavy, which kills mobile performance. I tested 10 sites—none scored above 80/100 on mobile. If speed is critical, look at Framer (90-98/100).
            </p>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">4.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">Blog functionality is "good enough" but not great.</strong> If you're a serious blogger, Squarespace will feel limiting compared to WordPress. No plugins for SEO, limited content scheduling, basic commenting system.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Deep Dive -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Squarespace Blueprint AI</h2>
      <p class="text-gray-700 mb-4">
