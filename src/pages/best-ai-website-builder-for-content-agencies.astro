  <!-- BRUTALIST HERO -->
  <section class="bg-gradient-to-br from-lime-50 to-green-50 py-16 md:py-24 relative overflow-hidden"
         style="background-image: repeating-linear-gradient(45deg, #84CC16 0px, #84CC16 1px, transparent 1px, transparent 12px); background-size: 40px 40px;">
