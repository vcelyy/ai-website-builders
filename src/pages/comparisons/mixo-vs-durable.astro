    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Score Comparison</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {tools.map(tool => (
          <div class="border-[3px] border-gray-200 rounded-lg p-6 hover:border-[#F59E0B] transition-colors">
