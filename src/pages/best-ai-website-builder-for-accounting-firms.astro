      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 for Accounting Firms</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#64748B] bg-[#F8FAFC]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${index === 0 ? 'bg-[#64748B] text-white' : 'bg-gray-900 text-white'}`}>{tool.badge}</span>}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#64748B]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>
            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
