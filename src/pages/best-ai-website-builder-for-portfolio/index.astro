    <article class="px-6 py-12 lg:py-16 bg-white">

      <div class="prose prose-lg max-w-none">
        <!-- MY TESTING METHODOLOGY -->
        <div class="bg-gradient-to-br from-purple-50 to-indigo-50 border-[3px] border-purple-300 p-6 md:p-8 my-10 relative overflow-hidden">
