    verdict: 'Beautiful travel templates with destination galleries, itinerary showcases, and inquiry forms',
    pros: ['Travel templates', 'Destination galleries', 'Itinerary displays', 'Email capture', '$23-59/month'],
    cons: ['Template limits', 'Limited customization', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Webflow AI',
    rating: '8.7',
    badge: 'Best for Custom',
    verdict: 'Custom travel experience with destination CMS and booking integration',
    pros: ['Custom design', 'Destination CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
