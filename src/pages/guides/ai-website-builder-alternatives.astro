---
import Layout from '../../layouts/Layout.astro';
import AffiliateCTA from '../../components/AffiliateCTA.astro';
import { AFFILIATE_LINKS as affiliates } from '../../config/affiliate-links';

const title = 'AI Website Builder Alternatives (2025)';
const description = 'Looking for alternatives to the big builders? Here are lesser-known AI website builders worth considering.';
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">AI Website Builder Alternatives</h1>
      <p class="text-xl text-gray-600 mb-6">
        Beyond Wix and Squarespace - AI builders you might not know about.
      </p>
    </div>

    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Hidden Gems</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Durable</strong> - fastest AI generation, built for service businesses.
      </p>
      <p class="text-gray-700">
        <strong>Dorik</strong> - unique regen feature, good multilingual support.
      </p>
    </div>

    <div class="text-center">
      <AffiliateCTA
        href={affiliates.durable.affiliateUrl}
        commission={affiliates.durable.commission}
        label="Try Durable Alternative"
        className="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block"
      />
    </div>
  </div>
</Layout>
