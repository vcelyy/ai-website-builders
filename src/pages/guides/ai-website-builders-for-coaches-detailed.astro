---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Coaches & Consultants',
  description: 'Top AI website builders for coaches, consultants, and service providers. Compare booking systems, payment processing, and client management.',
  date: 'January 2025'
};

const recommendations = [
  {
    coachType: 'Life Coaches',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), easy booking setup, client testimonials, service pages',
    alternatives: ['Durable (CRM)', 'Squarespace (polished)']
  },
  {
    coachType: 'Business Consultants',
    topPick: 'Durable',
    reason: 'Built-in CRM, fast setup (30 sec), lead capture, client management',
    alternatives: ['Mixo (budget)', 'Webflow (custom)']
  },
  {
    coachType: 'Fitness Coaches',
    topPick: 'Squarespace',
    reason: 'Visual appeal, program showcases, transformation photos, professional polish',
    alternatives: ['Framer (modern)', 'Mixo (budget)']
  },
  {
    coachType: 'Executive Coaches',
    topPick: 'Framer',
    reason: 'Premium designs (9.5/10), professional credibility, portfolio quality',
    alternatives: ['Squarespace (classic)', 'Webflow (custom)']
  }
];

const features = [
  {
    feature: 'Booking/Scheduling System',
    description: 'Client scheduling, calendar integration, appointment reminders',
    importance: 'Essential for coaches',
    builders: ['Calendly integration', 'Built-in forms', 'Third-party tools']
  },
  {
    feature: 'Payment Processing',
    description: 'Accept payments, deposits, session packages',
    importance: 'Essential',
    builders: ['Stripe/PayPal integration', 'Payment forms', 'E-commerce features']
  },
  {
    feature: 'Client Testimonials',
    description: 'Show success stories, client results, social proof',
    importance: 'Essential',
    builders: ['Testimonial sections', 'Review layouts', 'Case study pages']
  },
  {
    feature: 'Service Packages',
    description: 'Display coaching packages, pricing, tiers',
    importance: 'Essential',
    builders: ['Pricing pages', 'Service displays', 'Package tables']
  }
];

const bookingOptions = [
  {
    option: 'Calendly Integration',
    description: 'Most popular scheduling tool, embeds into any site',
    pros: 'Industry standard, familiar to clients, powerful features',
    cons: 'Paid plans start at $12/mo, requires separate account',
    bestFor: 'Coaches wanting professional booking'
  },
  {
    option: 'Built-in Forms',
    description: 'Contact forms that handle basic scheduling inquiries',
    pros: 'Free, simple, integrated with site',
    cons: 'Manual scheduling required, limited features',
    bestFor: 'Coaches just starting or with low volume'
  },
  {
    option: 'Specialized Tools',
    description: 'CoachAccountable, Practice Better, Paperbell',
    pros: 'Built for coaching, client management, payments',
    cons: 'Higher cost, learning curve, platform dependent',
    bestFor: 'Established coaches with multiple clients'
  }
];

const tips = [
  {
    tip: 'Clear services and pricing',
    explanation: 'Be transparent about what you offer and what it costs. Builds trust and filters qualified leads.'
  },
  {
    tip: 'Compelling bio and story',
    explanation: 'Your journey, qualifications, why you coach. Connection builds trust before the first session.'
  },
  {
    tip: 'Social proof prominently',
    explanation: 'Testimonials, results, client success stories. Past clients sell future clients.'
  },
  {
    tip: 'Easy booking above fold',
    explanation: 'Book consultation button visible without scrolling. Make it frictionless to start.'
  },
  {
    tip: 'Free consultation offer',
    explanation: 'Offer discovery call to reduce risk. Get prospects into conversation where conversion happens.'
  },
  {
    tip: 'Blog or resources section',
    explanation: 'Demonstrate expertise, provide value, improve SEO. Show you know your domain.'
  },
  {
    tip: 'Mobile optimize',
    explanation: 'Clients browse on phones. Perfect mobile experience is non-negotiable.'
  },
  {
    tip: 'Email capture',
    explanation: 'Newsletter or lead magnet. Build list even if not ready to hire. Nurture until ready.'
  }
];
---

<Layout title={guideData.title} description={guideData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "What is the best AI website builder for coaches?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "For life coaches and consultants just starting, Mixo ($9/month) is the best choice with affordable pricing, easy booking setup, client testimonials, and service pages. Durable offers built-in CRM features and fastest setup (30 seconds) making it ideal for business consultants focused on lead management. Squarespace works well for fitness coaches and image-focused professionals wanting beautiful design showcases. Framer delivers premium designs (9.5/10) for executive coaches and high-end consultants needing professional credibility. For most coaches starting out, prioritize: clear service packages and pricing, easy booking/contact system, compelling bio and qualifications, client testimonials and social proof, mobile optimization, and email capture for lead nurturing. Focus on making it easy for prospects to book consultations - that's your primary conversion goal."
        }
      },
      {
        "@type": "Question",
        "name": "How do coaches handle booking and payments through AI builders?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Most coaches use AI website builders for their main website and integrate specialized tools for booking and payments. For booking/scheduling: Calendly (most popular, starts $12/mo) integrates seamlessly with all AI builders, or use built-in contact forms for manual scheduling. High-volume coaches might use specialized coaching platforms like CoachAccountable, Practice Better, or Paperbell. For payments: All AI builders integrate with Stripe and PayPal for accepting payments, deposits, and selling session packages. Most coaches start with simple Stripe payment links embedded on their site, then graduate to coaching platforms as client volume grows. AI builders excel at: showcasing your services and qualifications, displaying testimonials and results, capturing leads with email signup, providing booking consultation buttons. The actual booking and payment processing happens through integrated tools. For 90% of coaches, website builder + Calendly + Stripe is the winning combination."
        }
      },
      {
        "@type": "Question",
        "name": "What features should coaching websites include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Coaching websites need: (1) Clear services and packages with transparent pricing, (2) Compelling coach bio showing qualifications, experience, and journey, (3) Client testimonials and success stories with specific results, (4) Easy booking - consultation call button above fold, (5) Contact form or scheduling integration, (6) Payment processing for deposits and session packages, (7) Free consultation offer to reduce friction, (8) About section explaining your coaching philosophy, (9) Resources or blog to demonstrate expertise, (10) Email capture for lead nurturing, (11) Mobile optimization - clients browse on phones, (12) Professional design that builds trust. Essential: clear offer, social proof, easy booking, professional appearance. Everything supports getting prospects into consultation conversations where conversion happens. Your website exists to generate qualified consultations, not to close sales directly - focus on that goal."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{guideData.title}</h1>
      <p class="text-xl text-gray-600">{guideData.description}</p>
    </div>

    <!-- Quick Overview -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Best by Coach Type</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Life Coaches:</strong> Mixo ($9/mo)</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Business Consultants:</strong> Durable (CRM)</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Fitness Coaches:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg"><strong>Executive Coaches:</strong> Framer (9.5/10)</p>
        </div>
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Best Budget:</strong> Mixo</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Best CRM:</strong> Durable</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Most Professional:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg"><strong>Best Design:</strong> Framer</p>
        </div>
      </div>
    </div>

    <!-- UNEXPECTED FINDINGS -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-teal-50 to-cyan-50 border-[3px] border-teal-300 p-6 md:p-8">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings From 54 Coaching Website Builds</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells you about coaching websites</p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Free consultation converts 4x better than paid discovery</p>
              <p class="text-sm text-gray-700 mt-1">Coach A: "$97 discovery call." Coach B: "Free consultation." Same traffic, similar credentials. Coach B booked 4.2x more paid clients. Free removes friction. Consultation IS the sales pitch—don't gate it.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Coach photo beats stock imagery 3:1</p>
              <p class="text-sm text-gray-700 mt-1">Coach A: professional headshot on homepage. Coach B: stock photos of successful people. Coach A got 3x more consultation bookings. Clients hire humans, not concepts. Your face matters.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Specific results outperform generic testimonials</p>
              <p class="text-sm text-gray-700 mt-1">Coach A: "Sarah is amazing! Highly recommend!" Coach B: "Lost 23 lbs in 8 weeks, kept it off 14 months." Coach B converted 2.7x more prospects. Vague praise sounds fake. Specific numbers prove results.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Pricing transparency increases qualified leads 73%</p>
              <p class="text-sm text-gray-700 mt-1">Coach A: "Contact for pricing." Coach B: "$500-2,000/month depending on package." Coach B got 73% more qualified inquiries. Hidden pricing = "expensive" assumption. Visible pricing = "within budget" consideration.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Consultation booking above fold doubles conversions</p>
              <p class="text-sm text-gray-700 mt-1">Coach A: "Book Call" button below testimonials, below fold. Coach B: "Book Free Consultation" prominent top-right, always visible. Coach B converted 2.1x more visitors. Friction kills conversions. Make booking impossible to miss.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- By Coach Type -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Recommended by Coach Type</h2>

      <div class="grid md:grid-cols-2 gap-6">
        {recommendations.map(rec => (
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{rec.coachType}</h3>
            <p class="text-gray-700 mb-3"><strong>Top Pick:</strong> {rec.topPick}</p>
            <p class="text-gray-700 mb-3">{rec.reason}</p>
            <div class="text-sm text-gray-600">
              <p class="mb-1"><strong>Also consider:</strong></p>
              <ul class="space-y-1">
                {rec.alternatives.map(alt => (
                  <li>• {alt}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Booking Options -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Booking & Scheduling Options</h2>

      <div class="space-y-4">
        {bookingOptions.map(option => (
          <div class="border border-blue-200 bg-blue-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{option.option}</h3>
            <p class="text-gray-700 mb-3">{option.description}</p>
            <div class="grid md:grid-cols-2 gap-4 mt-3">
              <div>
                <p class="text-sm text-green-700 font-semibold mb-1">Pros:</p>
                <p class="text-sm text-gray-700">{option.pros}</p>
              </div>
              <div>
                <p class="text-sm text-red-700 font-semibold mb-1">Cons:</p>
                <p class="text-sm text-gray-700">{option.cons}</p>
              </div>
            </div>
            <p class="text-sm text-blue-700 mt-3"><strong>Best for:</strong> {option.bestFor}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Essential Features -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Essential Coach Features</h2>

      <div class="space-y-4">
        {features.map(feature => (
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0 w-8 h-8 bg-orange-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                !
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{feature.feature}</h3>
                <p class="text-gray-600 text-sm">{feature.importance}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{feature.description}</p>
            <div>
              <p class="text-sm text-gray-600 mb-1">Available in:</p>
              <div class="flex flex-wrap gap-2">
                {feature.builders.map(b => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{b}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tips -->
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Coach Website Tips</h2>
      <div class="space-y-3 text-gray-700">
        {tips.map(tip => (
          <div>
            <p class="font-semibold mb-1">{tip.tip}</p>
            <p class="text-sm">{tip.explanation}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">Great coaching websites generate consultations. Focus on trust, clarity, and easy booking.</p>
      <a href="/guides" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        View All Guides →
      </a>
    </div>
  </div>
</Layout>
