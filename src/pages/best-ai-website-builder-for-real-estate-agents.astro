---
import Layout from '../layouts/Layout.astro';
import AffiliateCTA from '../components/AffiliateCTA.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Real Estate Agents (2025)';
const description = 'I tested AI website builders for real estate agents and brokerages. 10Web + WordPress wins for IDX/MLS integration. Framer for agent portfolios.';
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">REAL ESTATE USE CASE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">Best AI Website Builder for Real Estate Agents</h1>
      <p class="text-xl text-gray-600 mb-6">
        Real estate agents need property listings, MLS/IDX integration, agent profiles, and lead capture forms.
      </p>
    </div>

    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Recommendation</h2>
      <p class="text-gray-700 text-lg">
        <strong>10Web + WordPress</strong> - best for real estate with IDX/MLS plugins, property listings, and CRM integration.
      </p>
      <p class="text-gray-700">
        <strong>Framer</strong> - for luxury agent portfolios and personal branding sites.
      </p>
    </div>

    <div class="text-center">
      <AffiliateCTA
        href={affiliates['10web'].affiliateUrl}
        commission={affiliates['10web'].commission}
        label="Try 10Web for Real Estate"
        className="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block"
      />
    </div>
  </div>
</Layout>
