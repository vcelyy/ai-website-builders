          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="py-12 bg-[#E0F2FE]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-sky-50 to-cyan-50 border-[3px] border-sky-400 p-6 md:p-8 my-10">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings After 35 Hours Testing Cleaning Service Websites</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells cleaning services about websites</p>

        <div class="space-y-4">
          {unexpectedFindings.map((item) => (
            <div class="flex items-start gap-3">
              <span class="text-sky-600 font-black text-xl flex-shrink-0">!</span>
              <div>
                <p class="font-black text-gray-900">{item.finding}</p>
                <p class="text-sm text-gray-700 mt-1">{item.detail}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Cleaning Services</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
