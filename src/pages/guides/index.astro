---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const allGuides = [
	{
		title: 'Best AI Website Builders 2025',
		excerpt: 'Complete rankings based on 127+ hours of hands-on testing. Which tools actually deliver?',
		badge: 'Updated for 2025',
		slug: '/guides/best-ai-website-builders-2025',
		readTime: '12 min',
	},
	{
		title: 'How to Choose the Right AI Builder',
		excerpt: 'Don\'t start with "which is best." Start with these 5 questions to find your perfect match.',
		slug: '/guides/how-to-choose',
		readTime: '8 min',
	},
	{
		title: 'Common Mistakes to Avoid',
		excerpt: 'The traps everyone falls into when using AI website builders (and how to avoid them).',
		slug: '/guides/common-mistakes',
		readTime: '6 min',
	},
	{
		title: 'Free AI Website Builders',
		excerpt: 'Which free plans are actually usable? I tested them all so you don\'t have to.',
		slug: '/guides/free-ai-website-builders',
		readTime: '7 min',
	},
	{
		title: 'AI Builders for E-commerce',
		excerpt: 'Can AI build a real online store? I tested the top contenders with actual products.',
		slug: '/guides/ai-builders-for-ecommerce',
		readTime: '10 min',
	},
	{
		title: 'Speed Optimization Guide',
		excerpt: 'AI sites can be slow. Here\'s how to make yours load under 1 second.',
		slug: '/guides/speed-optimization',
		readTime: '9 min',
	},
	{
		title: 'SEO for AI-Generated Sites',
		excerpt: 'Do AI-built sites rank? Yes, if you do these things first.',
		slug: '/guides/seo-for-ai-sites',
		readTime: '11 min',
	},
	{
		title: 'When NOT to Use AI Builders',
		excerpt: 'Sometimes AI is the wrong tool. Here\'s when you should hire a pro instead.',
		slug: '/guides/when-not-to-use-ai-builders',
		readTime: '5 min',
	},
	{
		title: 'AI vs Traditional Website Builders',
		excerpt: 'Is it time to switch? Direct comparison of AI tools vs Squarespace, Webflow, etc.',
		slug: '/guides/ai-vs-traditional',
		readTime: '8 min',
	},
	{
		title: 'Custom Domain Setup',
		excerpt: 'Step-by-step guides for connecting your domain to every major AI builder.',
		slug: '/guides/custom-domain-setup',
		readTime: '15 min',
	},
	{
		title: 'Pricing Comparison',
		excerpt: 'Hidden fees, upgrade traps, and which plans are actually worth it.',
		slug: '/guides/pricing-comparison',
		readTime: '7 min',
	},
	{
		title: 'Relume + Framer Workflow',
		excerpt: 'How to combine the best AI wireframing with the best AI site builder.',
		slug: '/guides/relume-framer-workflow',
		readTime: '6 min',
	},
	{
		title: 'Truly Free AI Builders',
		excerpt: 'No credit card required. These tools are actually free forever.',
		slug: '/guides/truly-free-ai-builders',
		readTime: '5 min',
	},
];
---

<Layout title="All Guides - AI Website Builders">

  <!-- WebPage Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: 'All Guides - AI Website Builders',
      description: 'Complete collection of guides for AI website builders. Learn how to choose, optimize, and make the most of AI-generated websites.',
      url: 'https://aiwebsitebuilders.com/guides'
    }}
  />

  <!-- BRUTALIST HERO - Coupon site style -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <!-- Geometric accent -->
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">

          <!-- Brutalist badge -->
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-white border-[3px] border-[#F5521A] shadow-[0_4px_0_0_rgba(245,82,26,0.3)]">
            <div class="flex gap-2">
              <span class="w-2 h-2 bg-[#F5521A] rotate-45"></span>
              <span class="w-2 h-2 bg-[#F5521A] rotate-45" style="animation-delay: 0.15s"></span>
              <span class="w-2 h-2 bg-[#F5521A] rotate-45" style="animation-delay: 0.3s"></span>
            </div>
            <span class="text-xs font-black tracking-widest text-gray-800" style="font-family: 'Space Mono', monospace;">
              13 GUIDES • HANDS-ON TESTING
            </span>
          </div>

          <!-- MASSIVE headline -->
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900 text-center">
            <span class="block">AI Website</span>
            <span class="block text-[#F5521A] mt-2">Builder Guides</span>
          </h1>

          <!-- Personal subheadline -->
          <div class="max-w-2xl mx-auto">
            <p class="text-lg sm:text-xl text-gray-800/95 font-medium leading-relaxed text-center">
              Practical guides based on real testing. No fluff, no marketing talk—just what you need to know to build better sites with AI.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

	<!-- Guides Grid - brutalist style -->
	<section class="py-16 md:py-24 bg-white">
		<div class="container mx-auto px-4 sm:px-6 max-w-7xl">
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">

        {allGuides.map((guide) => (
					<a href={guide.slug} class="group bg-white overflow-hidden p-6 border-[3px] border-gray-300 hover:border-[#F5521A] transition-all duration-300">
            {guide.badge && (
              <span class="inline-block px-3 py-1 bg-[#F5521A] text-white text-xs font-black uppercase tracking-wider mb-4">
                {guide.badge}
              </span>
            )}
            <h3 class="text-xl font-black text-gray-900 leading-tight mb-3">{guide.title}</h3>
            <p class="text-gray-600 leading-relaxed mb-4">{guide.excerpt}</p>
            <div class="flex items-center gap-2 text-sm text-gray-500">
              <span>{guide.readTime} read</span>
              <svg class="w-4 h-4 ml-auto text-[#F5521A] group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}

			</div>
		</div>
	</section>

	<!-- Brutalist CTA -->
	<section class="py-16 md:py-20 bg-gray-900 relative overflow-hidden">
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: repeating-linear-gradient(45deg, #fff 0px, #fff 1px, transparent 1px, transparent 12px);"></div>
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl relative">
      <div class="text-center">
        <h2 class="text-3xl md:text-4xl font-black text-white leading-tight mb-6">
          Want more guides?
        </h2>
        <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
          I publish new guides weekly based on my testing. Get them in your inbox.
        </p>
        <a
          href="/#newsletter"
          class="inline-block px-8 py-4 bg-[#F5521A] text-white font-black text-lg uppercase tracking-wider border-[3px] border-white shadow-[0_6px_0_0_rgba(0,0,0,0.2)] hover:shadow-[0_8px_0_0_rgba(0,0,0,0.25)] hover:-translate-y-0.5 transition-all duration-300"

        >
          Get Weekly Guides
        </a>
      </div>
    </div>
  </section>
</Layout>
