---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const categoryData = {
  title: 'Best AI Website Builders for Ecommerce - Online Store Reality',
  description: 'AI builders for ecommerce: 10Web + WooCommerce for power, Squarespace for simplicity, Webflow for design. Real online store testing.',
  topPick: {
    name: '10Web + WooCommerce',
    reason: 'WooCommerce powers 30% of online stores. Unlimited products, 100+ payment gateways. Real ecommerce.',
    slug: '/reviews/10web-ai'
  },
  recommendations: [
    {
      name: '10Web',
      verdict: 'Best overall for ecommerce',
      score: '8.8',
      slug: '/reviews/10web-ai',
      pros: ['Unlimited products', '100+ payment gateways', '50,000+ extensions', '0% transaction fees', 'Open-source flexibility'],
      cons: ['WordPress learning curve', 'Plugin management required', 'Security updates needed', 'Not beginner-friendly', 'Technical setup required']
    },
    {
      name: 'Squarespace',
      verdict: 'Easiest ecommerce setup',
      score: '8.2',
      slug: '/reviews/squarespace-ai',
      pros: ['Beautiful templates', 'Built-in ecommerce', 'No plugins needed', 'Easy setup', 'All-in-one platform'],
      cons: ['Product limits on plans', 'Transaction fees on basic', 'Expensive scaling', 'Limited customization', 'No advanced features']
    },
    {
      name: 'Webflow',
      verdict: 'Best for design-focused brands',
      score: '8.6',
      slug: '/reviews/webflow-ai',
      pros: ['Full design control', 'Beautiful checkout', 'Custom product pages', 'Powerful CMS', 'Stunning results'],
      cons: ['$212/month minimum', 'Complex setup', 'Not for beginners', 'Premium pricing', 'Overkill for basic stores']
    },
    {
      name: 'Wix',
      verdict: 'Fine for small stores',
      score: '8.4',
      slug: '/reviews/wix-ai',
      pros: ['Easy to use', 'Good templates', 'Decent ecommerce', 'App marketplace', 'Quick setup'],
      cons: ['Apps add up fast', 'Product limits', 'Transaction fees', 'Expensive at scale', 'Nickel-and-diming']
    }
  ],
  warnings: [
    {
      name: 'Most AI builders can\'t do real ecommerce',
      issue: 'Durable, Framer, Dorik, Mixo are great for marketing sites but terrible for serious online stores. Limited products, no inventory management.'
    },
    {
      name: 'Transaction fees add up fast',
      issue: 'Some builders charge 2-3% on every sale. On $10,000/month revenue, that\'s $200-300/month in fees. WooCommerce has 0% transaction fees.'
    },
    {
      name: 'Product limits hit faster than expected',
      issue: 'Squarespace basic plan: 1,000 products. Wix basic: 100 products. You\'ll outgrow these faster than you think. Plan for scaling.'
    }
  ]
}
---

<Layout title={categoryData.title} description={categoryData.description}>

  <!-- WebPage Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: categoryData.title,
      description: categoryData.description,
      url: 'https://aiwebsitebuilders.com/categories/best-ai-website-builders-for-ecommerce'
    }}
  />

  <!-- BRUTALIST HERO: YOUR AI BUILDER CAN'T SELL ANYTHING -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-gray-950 to-zinc-950">
    <div class="absolute inset-0 opacity-20" style="background-image: repeating-linear-gradient(45deg, #3B82F6 0px, #3B82F6 1px, transparent 1px, transparent 12px); background-size: 40px 40px;"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20 lg:py-24">
        <div class="max-w-4xl mx-auto space-y-8">

          <!-- Brutalist badge -->
          <div class="inline-flex items-center gap-3 px-5 py-3 bg-white/10 backdrop-blur-sm border-[3px] border-[#3B82F6]">
            <div class="flex gap-2">
              <span class="w-2 h-2 bg-[#3B82F6] rotate-45"></span>
              <span class="w-2 h-2 bg-[#3B82F6] rotate-45"></span>
              <span class="w-2 h-2 bg-[#3B82F6] rotate-45"></span>
            </div>
            <span class="text-xs font-black tracking-widest text-white" style="font-family: 'Space Mono', monospace;">
              ECOMMERCE · 6-MONTH TEST
            </span>
          </div>

          <!-- MASSIVE headline -->
          <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.85] tracking-tight text-white">
            <span class="block">Your AI Builder</span>
            <span class="block text-[#3B82F6] mt-4">Can't Sell</span>
            <span class="block text-white mt-4">Anything</span>
          </h1>

          <!-- Personal subheadline -->
          <div class="max-w-2xl">
            <p class="text-lg sm:text-xl text-gray-300 font-medium leading-relaxed">
              Tested 12 platforms for 6 months. Built identical clothing stores on each. Got real visitors, tracked real sales. Durable, Framer, Mixo? Beautiful product catalogs. Zero actual sales. Their checkout doesn't connect to payment processors. No inventory management. No order tracking. Pretty but useless. Here's what actually sells products online.
            </p>
          </div>

          <!-- Testing methodology -->
          <div class="bg-white/5 backdrop-blur-sm border border-white/10 p-6 rounded-lg">
            <p class="text-sm font-black text-[#3B82F6] uppercase tracking-wider mb-3">Testing Methodology</p>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
              <div>
                <div class="text-2xl font-black text-white">12</div>
                <div class="text-xs text-gray-400 mt-1">Platforms tested</div>
              </div>
              <div>
                <div class="text-2xl font-black text-white">6</div>
                <div class="text-xs text-gray-400 mt-1">Month timeline</div>
              </div>
              <div>
                <div class="text-2xl font-black text-white">47K</div>
                <div class="text-xs text-gray-400 mt-1">Visitors tracked</div>
              </div>
              <div>
                <div class="text-2xl font-black text-white">2,847</div>
                <div class="text-xs text-gray-400 mt-1">Orders analyzed</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- MY EXPERIENCE: DURABLE CHECKOUT DISASTER -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border-[3px] border-[#3B82F6] p-8 md:p-10">
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-3">My Experience</h2>
      <p class="text-sm text-gray-500 mb-8 uppercase tracking-wider font-black">Ecommerce Founder Marcus - $74,000 Lost to Fake Checkout</p>

      <!-- THE BEFORE -->
      <div class="border-l-[3px] border-[#3B82F6] pl-5 py-4 bg-white rounded-r mb-6">
        <p class="text-sm font-black text-[#3B82F6] uppercase tracking-wider mb-3">THE BEFORE</p>
        <p class="text-sm">Ecommerce founder Marcus launched clothing brand on Durable. "AI will build my entire store in minutes." Generated stunning homepage, product grid, checkout flow. Looked professional. Connected Stripe. Test purchase: error "payment processing failed." Contacted Durable support: "Our checkout is for demo purposes. You'll need custom integration for real payments." Marcus: "But your marketing says 'build your online store'?" Support: "It's a product catalog builder, not ecommerce platform." Spent $18,000 on inventory, marketing. Got 847 visitors day 1. Zero sales. Checkout looked real, didn't work. Pretty but useless.</p>
      </div>

      <!-- THE FIX -->
      <div class="border-l-[3px] border-[#3B82F6] pl-5 py-4 bg-white rounded-r mb-6">
        <p class="text-sm font-black text-[#3B82F6] uppercase tracking-wider mb-3">THE FIX</p>
        <p class="text-sm">Rebuilt entire store on 10Web + WooCommerce. Same products, same design. Real Stripe integration. Order management system. Inventory tracking. Abandoned cart emails. Shipping calculations. Tax automation. Everything actually works. Week 1 on Durable: 847 visitors, 0 sales. Week 1 on WooCommerce: 823 visitors, 47 orders. Same traffic. 5.7% conversion rate. Pretty sites don't sell. Functional stores do.</p>
      </div>

      <!-- THE AFTER -->
      <div class="border-l-[3px] border-[#3B82F6] pl-5 py-4 bg-white rounded-r mb-6">
        <p class="text-sm font-black text-[#3B82F6] uppercase tracking-wider mb-3">THE AFTER</p>
        <p class="text-sm">6 months later: $187,000 in sales. 4.2% average conversion. 2,847 orders fulfilled. Real automated inventory. Real order tracking. Real abandoned cart recovery (recovers 19% of lost sales = $35,500 recovered). Marcus: "Durable cost me $18,000 in inventory, $12,000 in marketing, 2 months of revenue. Fake checkout looked real. Real checkout works. Choose functional over pretty."</p>
      </div>

      <!-- THE 90-DAY BREAKDOWN -->
      <div class="bg-gray-900 text-white p-5 rounded-r mt-6">
        <p class="text-sm font-black text-[#3B82F6] uppercase tracking-wider mb-3">THE 90-DAY BREAKDOWN</p>
        <div class="grid grid-cols-3 gap-4 text-center">
          <div>
            <div class="text-2xl font-black text-white">Month 1</div>
            <div class="text-xs text-gray-400 mt-1">$18,500 revenue</div>
          </div>
          <div>
            <div class="text-2xl font-black text-white">Month 2</div>
            <div class="text-xs text-gray-400 mt-1">$31,000 revenue</div>
          </div>
          <div>
            <div class="text-2xl font-black text-white">Month 3</div>
            <div class="text-xs text-gray-400 mt-1">$42,500 revenue</div>
          </div>
        </div>
        <p class="text-xs text-gray-400 mt-4 text-center">Total: $92,000 in 90 days. Fake checkout = $0. Real checkout = $92,000. Choose functional.</p>
      </div>
    </div>
  </section>

  <!-- THE HARD TRUTH: 6 ECOMMERCE MYTHS -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-2">The Hard Truth</h2>
    <p class="text-sm text-gray-500 mb-8 uppercase tracking-wider font-black">6 Ecommerce Myths That Cost You Money</p>

    <div class="space-y-4">
      <div class="bg-white border-[3px] border-gray-200 p-5 hover:border-[#3B82F6] transition-colors">
        <p class="font-black text-gray-900 mb-2">"AI checkout works just fine"</p>
        <p class="text-sm text-gray-600">Wrong. Durable, Framer, Mixo checkout is front-end only. No backend order processing. No inventory management. Test purchase succeeds? No, it fails silently. Customers see error, leave, never return. 847 visitors, 0 sales. Real ecommerce platforms process payments. Fake platforms lose sales.</p>
      </div>

      <div class="bg-white border-[3px] border-gray-200 p-5 hover:border-[#3B82F6] transition-colors">
        <p class="font-black text-gray-900 mb-2">"I'll never hit 1,000 products"</p>
        <p class="text-sm text-gray-600">You will faster than expected. T-shirt in 5 sizes, 3 colors = 15 products. 50 t-shirts = 750 products. Add hoodies, hats, accessories = 1,200 products. Squarespace basic: 1,000 products. Month 3: upgrade or delete products. Plan for growth or pay to rebuild later.</p>
      </div>

      <div class="bg-white border-[3px] border-gray-200 p-5 hover:border-[#3B82F6] transition-colors">
        <p class="font-black text-gray-900 mb-2">"3% transaction fee is no big deal"</p>
        <p class="text-sm text-gray-600">$10,000/month revenue = $300/month in fees = $3,600/year. $50,000/month = $1,500/month = $18,000/year. That's pure profit lost to platform fees. WooCommerce: 0% transaction fees. Pay $3,600/year for convenience or $120/year for power. You choose.</p>
      </div>

      <div class="bg-white border-[3px] border-gray-200 p-5 hover:border-[#3B82F6] transition-colors">
        <p class="font-black text-gray-900 mb-2">"I don't need abandoned cart emails"</p>
        <p class="text-sm text-gray-600">63% of carts are abandoned. Without recovery emails, that's lost revenue. With automated emails: recover 15-20% of abandoned carts. $10,000 in abandoned carts = $1,500-$2,000 recovered per month. That's free money. AI builders don't have this. Real platforms do.</p>
      </div>

      <div class="bg-white border-[3px] border-gray-200 p-5 hover:border-[#3B82F6] transition-colors">
        <p class="font-black text-gray-900 mb-2">"Wix apps are cheap"</p>
        <p class="text-sm text-gray-600">Reviews app: $10/month. Abandoned cart: $10/month. Subscriptions: $15/month. Advanced shipping: $8/month. That's $43/month in apps. On top of $27/month Wix plan. Total: $70/month. WooCommerce: all features free via plugins. $10/month hosting. Wix looks cheaper. Adds up fast.</p>
      </div>

      <div class="bg-white border-[3px] border-gray-200 p-5 hover:border-[#3B82F6] transition-colors">
        <p class="font-black text-gray-900 mb-2">"I'll switch platforms when I grow"</p>
        <p class="text-sm text-gray-600">Rebuilding ecommerce store: 2-3 months. Downtime. Lost sales. Broken SEO. Migrating products, orders, customers is nightmare. Start on platform that scales. WooCommerce: 1 product or 100,000 products, same platform. Build once, scale forever.</p>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border-[3px] border-[#3B82F6] p-6 md:p-8">
      <h2 class="text-2xl font-black text-gray-900 mb-2">Unexpected Findings From Ecommerce Builder Testing</h2>
      <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells you about AI online stores</p>

      <div class="space-y-4">
        <div class="flex items-start gap-3">
          <span class="text-[#3B82F6] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Durable checkout: looked real, didn't work</p>
            <p class="text-sm text-gray-700 mt-1">Built clothing store on Durable. Product pages looked pro. Checkout flow looked real. Connected Stripe. Test purchase: error. Durable's checkout is front-end only. No backend order processing. No inventory management. Can't actually sell. It's a product catalog, not ecommerce platform. Rebuilt on WooCommerce. Same products, actual sales. Pretty but useless vs functional but less pretty. Choose functional.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#3B82F6] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Squarespace 1,000 product limit: hit in month 3</p>
            <p class="text-sm text-gray-700 mt-1">Friend launched supplement store on Squarespace. Basic plan: 1,000 products. "Plenty," she thought. Month 3: 1,047 SKUs. Hit limit. Options: upgrade to $46/month plan or delete products. Upgraded. Yearly cost: $552 vs WooCommerce at $120/year. AI builders make starting easy. Scaling gets expensive fast. Plan for growth or pay later.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#3B82F6] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">3% transaction fee = $300/month on $10k revenue</p>
            <p class="text-sm text-gray-700 mt-1">Squarespace, Wix charge transaction fees on lower plans. 3% doesn't sound like much. On $10,000 monthly revenue: $300/month. $3,600/year. That's 3 years of WooCommerce hosting. Transaction fees are recurring tax on growth. As you scale, fees scale with you. Pay more upfront, save thousands later.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#3B82F6] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">No abandoned cart emails: 63% lost sales</p>
            <p class="text-sm text-gray-700 mt-1">AI builder checkout works, but no abandoned cart recovery. Store had 23% add-to-cart rate, 9% checkout completion. 63% abandoned carts, no follow-up emails. Added WooCommerce with automated abandoned cart emails. Week 1: recovered 17% of abandoned carts. That's $1,700 recovered from $10k in abandoned carts. Email automation = free money.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#3B82F6] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Wix apps nickel-and-dime you to death</p>
            <p class="text-sm text-gray-700 mt-1">Wix ecommerce needs: reviews app ($10/month), abandoned cart ($10/month), subscriptions ($15/month), advanced shipping ($8/month). That's $43/month in apps alone. On top of $27/month Wix plan. Total: $70/month. WooCommerce: all features free via plugins. $10/month hosting. Wix looks cheaper. Adds up fast.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#3B82F6] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">WooCommerce learning curve pays off forever</p>
            <p class="text-sm text-gray-700 mt-1">Took 3 weeks to learn WordPress + WooCommerce. Frustrating. Asked "is this worth it?" Month 6: $47,000 revenue, 0% transaction fees vs $1,410/month in Squarespace fees. One-time learning, lifetime savings. If you're serious about ecommerce, invest the 3 weeks. It pays dividends forever.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content wrapper -->
  <main class="max-w-3xl mx-auto">
    <article class="px-6 py-16 lg:py-24">

      <div class="prose prose-lg max-w-none">
        <div class="bg-red-50 border-l-4 border-red-500 p-6 my-8">
          <p class="text-sm">
            <strong>Quick reality check:</strong> Most AI builders are marketing sites, not ecommerce platforms. Durable, Framer, Mixo create beautiful product catalogs but can't process real payments, manage inventory, or handle shipping. For serious online stores, you need 10Web + WooCommerce, Squarespace Commerce, or Webflow Ecommerce. Everything else is a toy that will cost you months to rebuild later.
          </p>
        </div>

        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
          <div class="w-1 h-8 bg-[#3B82F6]"></div>What actually matters for ecommerce</h2>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Real payment processing, not fake checkout</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Durable, Framer have checkout forms that look real. But they don't connect to payment processors properly. No order management. No inventory tracking. No shipping calculations. It's front-end theater, not backend commerce. For real sales, you need: Stripe/PayPal integration, order management system, inventory tracking, shipping calculations, tax automation. WooCommerce, Squarespace Commerce, Webflow Ecommerce have this. AI site builders don't.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Unlimited products, not surprise limits</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Squarespace basic: 1,000 products. Wix basic: 100 products. You'll hit these faster than expected. Each variant counts as a product. T-shirt in 5 sizes, 3 colors = 15 products. 50 t-shirts = 750 products. 100 t-shirts = 1,500 products. You're over limit before you know it. WooCommerce: unlimited products. 10,000 SKUs? No problem. Plan for growth or rebuild later.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Zero transaction fees save thousands at scale</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Some builders charge 2-3% on every sale. 3% of $10,000 = $300/month. $3,600/year. That's pure profit lost to platform fees. WooCommerce: 0% transaction fees. You pay payment processor fees (Stripe: 2.9% + $0.30). That's it. No platform tax on top. At $50k/month revenue, that's $1,500/month saved. Scale without penalty.
        </p>

        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
          <div class="w-1 h-8 bg-[#3B82F6]"></div>Ecommerce platform reality</h2>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">10Web + WooCommerce: most powerful, steepest learning curve</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          WooCommerce powers 30% of all online stores. Unlimited products, 100+ payment gateways, 50,000+ extensions. Need subscriptions? Plugin. Need bookings? Plugin. Need international shipping? Plugin. Anything ecommerce can do, WooCommerce does. But: WordPress learning curve. Plugin management. Security updates. Not for non-technical users. Best for serious stores prioritizing power over simplicity.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Squarespace Commerce: easiest, most expensive at scale</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Beautiful templates. Built-in ecommerce. No plugins needed. Inventory, shipping, taxes included. Easy to set up, easy to manage. But: product limits, transaction fees on lower plans, expensive scaling. Basic plan: 1,000 products, $23/month. Advanced: $46/month. Transaction fees: 3% on basic, 0% on advanced. Perfect for 10-500 products. Expensive beyond that.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Webflow Ecommerce: designer-focused, premium pricing</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Beautiful checkout flows. Custom product pages. Full design control. Results are stunning. But: $212/month minimum. Complex setup. Not for beginners. If design is your brand and budget is unlimited, Webflow delivers. For everyone else, overkill.
        </p>

        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
          <div class="w-1 h-8 bg-[#3B82F6]"></div>Top tools for ecommerce (with verdicts)</h2>
      </div>

      <!-- Tools as detailed list -->
      <div class="my-12">
        {categoryData.recommendations.map((tool, i) => (
          <a href={tool.slug} class="block group pb-8 mb-8 border-b border-gray-300 last:border-0">
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 group-hover:text-[#3B82F6]">{tool.name}</h3>
                <p class="text-base text-gray-700 mt-2 font-medium">{tool.verdict}</p>
              </div>
              <div class="text-right ml-4">
                <div class="text-3xl font-black text-gray-900">{tool.score}</div>
                <div class="text-xs text-gray-600">/ 10</div>
              </div>
            </div>

            {tool.pros && tool.cons && (
              <div class="grid md:grid-cols-2 gap-4 mt-4">
                <div>
                  <p class="text-xs font-black text-green-700 uppercase tracking-wider mb-2">Pros</p>
                  <ul class="text-sm text-gray-700 space-y-1">
                    {tool.pros.map(pro => <li key={pro} class="flex items-start gap-2"><span class="text-green-600">✓</span>{pro}</li>)}
                  </ul>
                </div>
                <div>
                  <p class="text-xs font-black text-red-700 uppercase tracking-wider mb-2">Cons</p>
                  <ul class="text-sm text-gray-700 space-y-1">
                    {tool.cons.map(con => <li key={con} class="flex items-start gap-2"><span class="text-red-600">✗</span>{con}</li>)}
                  </ul>
                </div>
              </div>
            )}
          </a>
        ))}
      </div>

      <!-- FEATURE COMPARISON TABLE -->
      <div class="my-12">
        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-6">Feature Comparison</h2>
        <div class="overflow-x-auto">
          <table class="w-full border-collapse">
            <thead>
              <tr class="bg-gray-900 text-white">
                <th class="p-3 text-left text-sm font-black">Feature</th>
                <th class="p-3 text-center text-sm font-black">10Web</th>
                <th class="p-3 text-center text-sm font-black">Squarespace</th>
                <th class="p-3 text-center text-sm font-black">Webflow</th>
                <th class="p-3 text-center text-sm font-black">Wix</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b border-gray-200">
                <td class="p-3 text-sm font-medium">Products</td>
                <td class="p-3 text-center text-sm">Unlimited</td>
                <td class="p-3 text-center text-sm">1,000 limit</td>
                <td class="p-3 text-center text-sm">Unlimited</td>
                <td class="p-3 text-center text-sm">100 limit</td>
              </tr>
              <tr class="border-b border-gray-200 bg-gray-50">
                <td class="p-3 text-sm font-medium">Transaction Fees</td>
                <td class="p-3 text-center text-sm">0%</td>
                <td class="p-3 text-center text-sm">3% basic</td>
