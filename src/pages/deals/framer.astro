---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const dealData = {
  tool: 'Framer',
  title: 'Framer AI - 50% Off First 2 Months',
  description: 'Get 50% off your first 2 months of Framer. The #1 AI website builder for stunning portfolios and marketing sites.',
  discount: '50% off first 2 months',
  regularPrice: '$15-25/month',
  discountedPrice: '$7.50-12.50/month for 2 months',
  freeTrial: true,
  freeTrialDuration: '14 days',
  features: [
    'Exceptional design quality',
    'AI-powered layout generation',
    'Free custom domain',
    'Unlimited pages on paid plans',
    'PageSpeed scores 95+',
    'CMS included',
    '14-day free trial'
  ],
  expiry: 'Limited time offer',
  affiliateNote: 'We may earn a commission if you sign up through our link, at no cost to you.',
  ctaUrl: 'https://framer.com/website-builder'
};
---

<Layout title={`${dealData.tool} Deal: ${dealData.discount}`} description={dealData.description}>

  <!-- Deal Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: `${dealData.tool} Deal: ${dealData.discount}`,
      description: dealData.description,
      url: 'https://aiwebsitebuilders.com/deals/framer'
    }}
  />

  <!-- HERO -->
  <section class="relative overflow-hidden bg-gradient-to-br from-[#FFF8F0] to-white">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative py-12 md:py-16 lg:py-20">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider mb-6">
          <span class="animate-pulse">●</span>
          <span>Limited Time Offer</span>
        </div>

        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900 mb-6">
          <span class="block">{dealData.tool}</span>
          <span class="block text-[#F5521A] mt-2">{dealData.discount}</span>
        </h1>

        <p class="text-xl text-gray-700 max-w-2xl mx-auto mb-8">
          {dealData.description}
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={dealData.ctaUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-10 py-5 bg-[#F5521A] text-white font-black text-xl shadow-[0_8px_0_0_rgba(0,0,0,0.2)] hover:shadow-[0_10px_0_0_rgba(0,0,0,0.25)] active:shadow-[0_4px_0_0_rgba(0,0,0,0.15)] hover:-translate-y-1 transition-all border-b-4 border-[#D44A1A]">
            <span>Claim Your 50% Off</span>
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
          <span class="text-sm text-gray-500">No credit card required</span>
        </div>
      </div>
    </div>
  </section>

  <!-- PRICING COMPARISON -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-8 text-center">What You'll Pay</h2>
      <div class="bg-gray-50 border-[3px] border-[#F5521A]/20 p-8">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div class="text-center">
            <p class="text-sm text-gray-500 uppercase tracking-wider mb-2">Regular Price</p>
            <p class="text-3xl font-black text-gray-400 line-through">{dealData.regularPrice}</p>
          </div>
          <div class="text-center">
            <p class="text-sm text-[#F5521A] uppercase tracking-wider mb-2">Your Price (2 months)</p>
            <p class="text-4xl font-black text-[#F5521A]">{dealData.discountedPrice}</p>
            <p class="text-sm text-gray-500 mt-2">Then regular price applies</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURES -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-8 text-center">What's Included</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {dealData.features.map(feature => (
          <div class="flex items-start gap-3 bg-white p-4 border-[3px] border-gray-200">
            <svg class="w-6 h-6 text-[#F5521A] flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 font-medium">{feature}</span>
          </div>
        ))}
      </div>

      <!-- FINAL CTA -->
      <div class="text-center mt-12">
        <a href={dealData.ctaUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-10 py-5 bg-[#F5521A] text-white font-black text-xl shadow-[0_8px_0_0_rgba(0,0,0,0.2)] hover:shadow-[0_10px_0_0_rgba(0,0,0,0.25)] hover:-translate-y-1 transition-all border-b-4 border-[#D44A1A]">
          <span>Get 50% Off Now →</span>
        </a>
        <p class="text-xs text-gray-500 mt-4 max-w-md mx-auto">
          {dealData.affiliateNote}
        </p>
      </div>
    </div>
  </section>

  <!-- COMPARE -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-black text-gray-900 mb-4">Compare Other Builders</h2>
      <p class="text-gray-600 mb-8">Not sure if Framer is right for you? Check out our other reviews:</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/reviews/10web-ai" class="px-6 py-3 border-[3px] border-[#F5521A] text-[#F5521A] font-black hover:bg-[#F5521A] hover:text-white transition-colors">
          10Web AI →
        </a>
        <a href="/reviews/durable-ai" class="px-6 py-3 border-[3px] border-[#F5521A] text-[#F5521A] font-black hover:bg-[#F5521A] hover:text-white transition-colors">
          Durable AI →
        </a>
        <a href="/reviews/relume-ai" class="px-6 py-3 border-[3px] border-[#F5521A] text-[#F5521A] font-black hover:bg-[#F5521A] hover:text-white transition-colors">
          Relume AI →
        </a>
      </div>
    </div>
  </section>
</Layout>
