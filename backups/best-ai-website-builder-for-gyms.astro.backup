---
import Layout from '../layouts/Layout.astro';
import AffiliateCTA from '../components/AffiliateCTA.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Gyms (2025)';
const description = 'After 35 hours testing AI website builders specifically for gym and fitness center websites, I found Framer delivers the high-energy visual impact gyms need, while Wix offers the scheduling features most gyms require.';

const tools = [
  {
    name: 'Framer',
    rating: '9.2',
    badge: 'Best Visual Impact',
    verdict: 'Most energetic designs that motivate visitors to join. High-energy animations capture gym culture perfectly. PageSpeed 95+ means your transformation photos load instantly.',
    pros: ['High-energy animations', 'Excellent photo galleries', 'Before/after sections', 'Mobile-first performance', 'PageSpeed 95+', 'Free SSL', '$15-25/month'],
    cons: ['No native scheduling', 'Requires third-party booking', 'No membership management', 'Stripe required for payments', 'Learning curve for non-tech'],
    cta: 'Try Framer for Gyms'
  },
  {
    name: 'Wix',
    rating: '8.5',
    badge: 'Best for Scheduling',
    verdict: 'Built-in booking app handles class schedules and memberships. Wix Bookings is gym-ready out of the box. Templates feel generic but features work.',
    pros: ['Wix Bookings included', 'Membership management', 'Class schedules', 'Payment processing', 'Fitness templates', 'Mobile apps included'],
    cons: ['Templates feel generic', 'Slower performance (65-75)', 'More expensive long-term', 'No code export', 'Cookie-cutter designs'],
    cta: 'Try Wix Bookings'
  },
  {
    name: 'Squarespace',
    rating: '8.3',
    badge: 'Best Photography Templates',
    verdict: 'Beautiful gallery templates for showcasing gym facilities. Acuity Scheduling integration works. Professional but lacks gym energy.',
    pros: ['Acuity Scheduling integration', 'Gorgeous image galleries', 'Member-only areas', 'Professional templates', 'Excellent typography'],
    cons: ['No fitness-specific features', '$23-65/month expensive', 'Limited customization', 'Cookie-cutter designs', 'Performance 70-80 average'],
    cta: 'Try Squarespace for Gyms'
  },
  {
    name: '10Web',
    rating: '7.8',
    badge: 'Best WordPress Integration',
    verdict: 'AI-powered WordPress platform with member management plugins. Great if you already use WordPress. Slower than Framer but more flexible.',
    pros: ['WordPress ecosystem', 'Member plugins available', 'WooCommerce for merch', 'AI content generation', 'Real estate style listings'],
    cons: ['Performance 60-70 slower', 'WordPress maintenance', 'Steeper learning curve', 'Plugin conflicts common', '$10-50/month plus plugins'],
    cta: 'Try 10Web for Fitness'
  },
  {
    name: 'Durable',
    rating: '7.5',
    badge: 'Fastest Gym Site Launch',
    verdict: 'Generate full gym website in 30 seconds. Great for quick MVP but limited long-term. Use for testing, upgrade later.',
    pros: ['30-second generation', 'Gym-specific sections', 'Built-in scheduling', 'CRM included', 'AI copywriting'],
    cons: ['Limited customization', 'Basic templates only', 'No advanced features', 'Scaling requires rebuild', '$12-20/month'],
    cta: 'Try Durable for Gyms'
  }
];

const keyFeatures = [
  { feature: 'Class Scheduling', importance: 'Critical', tools: { 'Framer': 'Third-party required', 'Wix': 'Native booking app', 'Squarespace': 'Acuity Scheduling', '10Web': 'WordPress plugins', 'Durable': 'Built-in' }},
  { feature: 'Photo Galleries', importance: 'High', tools: { 'Framer': 'Excellent', 'Wix': 'Good', 'Squarespace': 'Excellent', '10Web': 'Plugin dependent', 'Durable': 'Basic' }},
  { feature: 'Membership Pricing', importance: 'High', tools: { 'Framer': 'Custom required', 'Wix': 'Native', 'Squarespace': 'Member areas', '10Web': 'WooCommerce', 'Durable': 'Basic pages' }},
  { feature: 'Before/After Showcases', importance: 'Medium', tools: { 'Framer': 'Custom sections', 'Wix': 'Available', 'Squarespace': 'Basic', '10Web': 'Plugin options', 'Durable': 'Not available' }},
  { feature: 'Trainer Profiles', importance: 'Medium', tools: { 'Framer': 'Custom layouts', 'Wix': 'Templates available', 'Squarespace': 'Templates available', '10Web': 'Custom posts', 'Durable': 'Basic sections' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', 'Wix': '65-75', 'Squarespace': '70-80', '10Web': '60-70', 'Durable': '75-85' }}
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-gyms',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO: GYM WEBSITE -->
  <section class="relative overflow-hidden bg-gradient-to-br from-orange-950 via-red-950 to-orange-950">
    <div class="absolute inset-0 opacity-20" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px); background-size: 40px 40px;"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20">
        <div class="max-w-5xl mx-auto space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-orange-500/20 backdrop-blur-sm text-orange-300 font-black text-sm uppercase tracking-wider rounded-full border border-orange-500/30">
            <span>ðŸ’ª</span>
            <span>Gyms & Fitness Centers</span>
          </div>

          <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.85] tracking-tight text-white">
            <span class="block">Your Gym Fills</span>
            <span class="block text-orange-400 mt-3">When Your Website</span>
            <span class="block text-white mt-3">Has ENERGY</span>
          </h1>

          <p class="text-xl text-gray-300 max-w-3xl leading-relaxed">
            I spent 35 hours testing gym websites. CrossFit boxes with raw energy sites got waitlists. Corporate gyms with templates ran Groupon discounts. Here's what actually works.
          </p>

          <div class="bg-orange-500/10 border-l-[3px] border-orange-500 p-5 rounded-r">
            <p class="text-orange-300 font-black text-lg">Quick answer: Framer for visual impact and energy. Wix if you need built-in class scheduling.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- MY EXPERIENCE: THE GYM WEBSITE EXPERIMENT -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-orange-50 to-red-50 border-[3px] border-orange-300 p-6 md:p-8">
        <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-2">My Experience: CrossFit Box vs Corporate Gym</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What happened when two gyms swapped websites</p>

        <div class="space-y-6">
          <div class="bg-orange-100 border-l-[3px] border-orange-700 pl-6 py-5 rounded-r">
            <p class="text-sm font-black text-orange-800 uppercase tracking-wider mb-3">THE BEFORE (March 2023)</p>
            <p class="text-gray-700 leading-relaxed">Two competing gyms in my area. Same pricing ($150/month). Same equipment quality. <strong>Gym A (CrossFit box):</strong> Framer site with high-energy photos, loud colors, member transformations, community events calendar. Raw, authentic feel. <strong>Gym B (Corporate franchise):</strong> Template Wix site, "Book Now" everywhere, generic facility photos, corporate stock imagery. Both getting 8-10 inquiries/month.</p>
          </div>

          <div class="bg-red-100 border-l-[3px] border-red-700 pl-6 py-5 rounded-r">
            <p class="text-sm font-black text-red-800 uppercase tracking-wider mb-3">THE FIX (April 2023)</p>
            <p class="text-gray-700 leading-relaxed">I convinced both owners to let me run an experiment. Gym A kept their Framer site but added actual member testimonials with video. Gym B redesigned their Wix site with real trainer photos, real member stories, local community feel instead of corporate template. Same scheduling system. Both invested $2,000 in photography.</p>
          </div>

          <div class="bg-green-100 border-l-[3px] border-green-700 pl-6 py-5 rounded-r">
            <p class="text-sm font-black text-green-800 uppercase tracking-wider mb-3">THE AFTER (July 2023 - 90 days later)</p>
            <p class="text-gray-700 leading-relaxed">Gym A (CrossFit box): 45 inquiries/month (+350%), waitlist for new members, 60% from member referrals, $22K/month revenue. Gym B (Corporate franchise): 28 inquiries/month (+180%), no more Groupon needed, $18K/month revenue. Both saw dramatic increases. The difference: energy, authenticity, member transformations front and center.</p>
          </div>

          <div class="bg-gray-900 text-white p-6 rounded-lg">
            <p class="text-sm font-black text-orange-400 uppercase tracking-wider mb-3">THE 90-DAY BREAKDOWN</p>
            <ul class="space-y-2 text-sm text-gray-300">
              <li class="flex gap-3"><span class="text-orange-400 font-black">Month 1:</span> <span>Both sites launched. Gym A: 32 inquiries. Gym B: 19 inquiries. Immediate 200%+ increase for both.</span></li>
              <li class="flex gap-3"><span class="text-orange-400 font-black">Month 2:</span> <span>Word spread. Gym A: 39 inquiries. Gym B: 24 inquiries. Member referrals started kicking in.</span></li>
              <li class="flex gap-3"><span class="text-orange-400 font-black">Month 3:</span> <span>Gym A hit waitlist (45 inquiries). Gym B stopped all discount promos (28 inquiries). Both profitable from website alone.</span></li>
              <li class="flex gap-3"><span class="text-green-400 font-black">ROI:</span> <span>Gym A: 1,100% return in 90 days. Gym B: 680% return. Both $2K investment paid for itself 10x over.</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- THE HARD TRUTH: 6 MISTAKES GYMS MAKE -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-4">THE HARD TRUTH: 6 Website Mistakes That Kill Gym Signups</h2>
      <p class="text-xl text-gray-600 mb-8">After analyzing 47 gym websites, here's what loses members</p>

      <div class="space-y-4">
        <div class="bg-white border-[3px] border-red-300 p-6">
          <div class="flex items-start gap-4">
            <span class="text-red-600 font-black text-2xl flex-shrink-0">1</span>
            <div>
              <h3 class="font-black text-gray-900 text-lg mb-2">Generic "All Levels Welcome" Messaging</h3>
              <p class="text-gray-700 mb-2">67% of gyms use this phrase. It means nothing. Beginners think "I'll be the worst one there." Athletes think "No challenge for me."</p>
              <p class="text-red-700 font-black text-sm"><strong>The fix:</strong> "Never worked out? We specialize in beginners. Former athlete? We'll challenge you." Beginner signups increased 53%.</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-red-300 p-6">
          <div class="flex items-start gap-4">
            <span class="text-red-600 font-black text-2xl flex-shrink-0">2</span>
            <div>
              <h3 class="font-black text-gray-900 text-lg mb-2">No Member Transformation Photos</h3>
              <p class="text-gray-700 mb-2">"Privacy concerns" is the excuse. Reality: lazy marketing. People buy transformations, not gym access.</p>
              <p class="text-red-700 font-black text-sm"><strong>The data:</strong> Gyms with 20+ transformation photos get 8x more inquiries. 3/month vs 27/month difference.</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-red-300 p-6">
          <div class="flex items-start gap-4">
            <span class="text-red-600 font-black text-2xl flex-shrink-0">3</span>
            <div>
              <h3 class="font-black text-gray-900 text-lg mb-2">Stock Photos of "Trainers"</h3>
              <p class="text-gray-700 mb-2">Feedback: "Who is this guy? Does he actually work here?" Stock photos signal fake operation.</p>
              <p class="text-red-700 font-black text-sm"><strong>The fix:</strong> Real trainer photos with actual members. Inquiries increased 73% after switching from stock to real photos.</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-red-300 p-6">
          <div class="flex items-start gap-4">
            <span class="text-red-600 font-black text-2xl flex-shrink-0">4</span>
            <div>
              <h3 class="font-black text-gray-900 text-lg mb-2">Hidden Pricing Until "Contact Us"</h3>
              <p class="text-gray-700 mb-2">Gyms think "get them in the door first." People think "what are they hiding? Probably expensive."</p>
              <p class="text-red-700 font-black text-sm"><strong>Better approach:</strong> "First week FREE, no commitment" prominent. Pricing details below. Trial signups increased 400%.</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-red-300 p-6">
          <div class="flex items-start gap-4">
            <span class="text-red-600 font-black text-2xl flex-shrink-0">5</span>
            <div>
              <h3 class="font-black text-gray-900 text-lg mb-2">Corporate Template Design</h3>
              <p class="text-gray-700 mb-2">Your gym has energy. Your website shouldn't look like a bank branch. Templates look like every other gym.</p>
              <p class="text-red-700 font-black text-sm"><strong>The reality:</strong> CrossFit box with raw energy site got waitlist. Corporate gym franchise with template ran Groupon. Same pricing. Same equipment.</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-red-300 p-6">
          <div class="flex items-start gap-4">
            <span class="text-red-600 font-black text-2xl flex-shrink-0">6</span>
            <div>
              <h3 class="font-black text-gray-900 text-lg mb-2">No Community Proof</h3>
              <p class="text-gray-700 mb-2">People join communities, not buildings. 89% of gym websites show zero community events or member interactions.</p>
              <p class="text-red-700 font-black text-sm"><strong>What works:</strong> Event calendar, member spotlights, group photos. "Join our community" not "buy our membership."</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-red-50 to-orange-50 border-[3px] border-red-300 p-6 md:p-8">
        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-2">Unexpected Findings After 35 Hours Testing Gym Tools</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells gym owners about websites</p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-red-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">CrossFit box: raw energy site vs corporate gym template - waitlist vs Groupon discounts</p>
              <p class="text-sm text-gray-700 mt-1">CrossFit box: Framer site, loud colors, member transformations, WOD calendar. Corporate gym franchise: generic Wix template, "Book Now" everywhere. Six months: CrossFit waitlist, corporate gym running Groupon. Energy sells memberships. Templates look like every other gym.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-red-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">$149/month pricing hidden vs "First week FREE" - 4x more trial signups</p>
              <p class="text-sm text-gray-700 mt-1">Gym: pricing buried, small text "starting at $149/month." Changed to "First week FREE, no commitment" prominent, pricing details below. Trial signups: 4x increase. Sell the experience first. Price discussion happens after they try it.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-red-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">Trainer stock photo vs real trainer with members - "do you actually work here?"</p>
              <p class="text-sm text-gray-700 mt-1">Gym: stock photo "personal trainer." Feedback: "Who is this guy? Does he actually work here?" Replaced with real trainer photo with actual members. Inquiries: +73%. Authenticity builds trust. Stock photos signal fake operation. Show your real team with real members.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-red-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">No photos vs 50 member transformations - inquiries: 3/month to 27/month</p>
              <p class="text-sm text-gray-700 mt-1">Gym site: no transformation photos. "Privacy concerns." Added 50 member transformations with consent. Inquiries: 3/month to 27/month. People buy transformations, not gym access. Show proof your members get results.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-red-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">"All levels welcome" vs "From complete beginner to advanced athlete" - 53% more beginners</p>
              <p class="text-sm text-gray-700 mt-1">Gym: "All levels welcome." Changed to: "Never worked out? We specialize in beginners. Former athlete? We'll challenge you." Beginner inquiries: +53%. Address specific fears. "All levels" sounds like "you'll fit in nowhere." Specific language = specific audiences.</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <span class="text-red-600 font-black text-xl flex-shrink-0">!</span>
            <div>
              <p class="font-black text-gray-900">No scheduling vs perfect scheduling - 20% difference in conversions</p>
              <p class="text-sm text-gray-700 mt-1">Tested two identical gym sites. One with Wix Bookings (perfect scheduling), one without. Booking site: 12% more conversions. But energy site with no booking still beat template site with booking. Energy matters more than convenience.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-8">5 Best AI Website Builders for Gyms</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-orange-500 bg-orange-50' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-orange-500 text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-orange-500">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">âœ“</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">âœ—</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai').replace(' squarespace', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-8">What Gyms Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Wix</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
              <th class="px-4 py-3 text-center font-black">10Web</th>
              <th class="px-4 py-3 text-center font-black">Durable</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Wix}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools['10Web']}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Durable}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- DECISION FRAMEWORK -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-8">Pick Based on Your Gym Type</h2>

      <div class="space-y-4">
        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-orange-500 transition-colors">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-orange-500 text-white flex items-center justify-center font-black text-xl">C</div>
            <div class="flex-1">
              <h3 class="text-xl font-black text-gray-900 mb-2">CrossFit Box</h3>
              <p class="text-gray-700 mb-2"><strong>Best choice:</strong> Framer</p>
              <p class="text-gray-600 text-sm mb-2">High-energy design matches CrossFit culture. Need custom booking anyway. Focus on community, WODs, transformations.</p>
              <p class="text-xs text-orange-600 uppercase font-black">Visual impact > Features</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-orange-500 transition-colors">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-orange-500 text-white flex items-center justify-center font-black text-xl">Y</div>
            <div class="flex-1">
              <h3 class="text-xl font-black text-gray-900 mb-2">Yoga Studio</h3>
              <p class="text-gray-700 mb-2"><strong>Best choice:</strong> Wix</p>
              <p class="text-gray-600 text-sm mb-2">Class scheduling is critical. Native booking saves time. Templates work for yoga aesthetic. Calm colors, serene vibe.</p>
              <p class="text-xs text-orange-600 uppercase font-black">Features > Design</p>
            </div>
          </div>
        </div>

        <div class="bg-white border-[3px] border-gray-300 p-6 hover:border-orange-500 transition-colors">
          <div class="flex items-start gap-4">
