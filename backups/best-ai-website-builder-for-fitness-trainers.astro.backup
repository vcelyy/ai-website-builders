  <!-- MY EXPERIENCE: THE BEFORE, THE FIX, THE AFTER -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-5xl">
      <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-3">MY EXPERIENCE</h2>
