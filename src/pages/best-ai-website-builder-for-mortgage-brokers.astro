  <section class="py-16 bg-[#EFF6FF]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Platform-by-Platform: Mortgage Broker Showdown</h2>

      <!-- Webflow -->
      <div class="bg-white border-[3px] border-blue-400 p-6 md:p-8 mb-6">
        <div class="flex items-center justify-between mb-4">
