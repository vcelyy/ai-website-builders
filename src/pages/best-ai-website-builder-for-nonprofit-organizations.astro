const tools = [
  {
    name: 'Wix',
    rating: '9.1',
    badge: 'Best for Fundraising',
    verdict: 'Donation forms, volunteer management, event registration - everything nonprofits need to raise funds in one platform. No third-party integrations required.',
    pros: ['Native donation forms built-in', 'Volunteer sign-up forms included', 'Event registration with Wix Events', 'Nonprofit-specific templates', '$17-59/month within org budgets', '17-59/month affordable', 'Email marketing included'],
    cons: ['Performance issues (65-75 PageSpeed)', 'Template dependency limits creativity', 'Limited export functionality', 'Can feel generic without customization'],
