const keyFeatures = [
  { feature: 'Event Calendars', importance: 'Critical', tools: { '10Web': 'Native plugins', 'Squarespace': 'Acuity', 'Webflow': 'Third-party', 'Wix': 'Wix Events', 'Durable': 'No' }},
  { feature: 'Faculty Profiles', importance: 'Critical', tools: { '10Web': 'Custom post type', 'Webflow': 'CMS powered', 'Squarespace': 'Templates', 'Wix': 'Templates', 'Durable': 'Basic' }},
  { feature: 'Program Pages', importance: 'Critical', tools: { '10Web': 'Custom pages', 'Webflow': 'CMS', 'Squarespace': 'Templates', 'Wix': 'Subpages', 'Durable': 'Limited' }},
  { feature: 'Multi-user Access', importance: 'High', tools: { '10Web': 'Native roles', 'Webflow': 'Enterprise plan', 'Squarespace': 'Basic', 'Wix': 'Contributors', 'Durable': 'No' }},
