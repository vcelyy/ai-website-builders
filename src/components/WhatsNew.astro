---
/**
 * WhatsNew Component
 * Shows recent updates to keep content fresh and signals active maintenance
 */
interface Update {
  date: string;
  update: string;
}

const { updates } = Astro.props;
---

<div class="bg-gradient-to-br from-green-50 to-emerald-50 border-[3px] border-green-300 p-4 md:p-6 my-8">
  <h3 class="text-sm font-black text-gray-900 mb-3 flex items-center gap-2">
    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>
    WHAT'S NEW
  </h3>
  <p class="text-xs text-gray-500 mb-4">Recent updates to this review</p>

  <div class="space-y-2">
    {updates.map((update: Update) => (
      <div class="flex items-start gap-3 text-sm">
        <div class="flex-shrink-0 w-16 text-right">
          <span class="text-xs text-gray-500 font-medium">{update.date}</span>
        </div>
        <div class="flex-1 text-gray-700">
          {update.update}
        </div>
      </div>
    ))}
  </div>

  <div class="mt-4 pt-3 border-t border-green-200">
    <p class="text-xs text-gray-600">
      <strong class="text-gray-900">Last reviewed:</strong> January 2025. I re-test major tools quarterly or when significant features launch.
    </p>
  </div>
</div>
