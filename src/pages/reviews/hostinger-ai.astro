---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';
import TestingBadge from '../../components/TestingBadge.astro';
import { getAffiliateCTA, hasAffiliateCTA } from '../../config/affiliate-links';

const reviewData = {
  title: 'Hostinger AI',
  date: 'January 2025',
  testingTime: '28 hours',
  score: '7.8',
  description: 'After 28 hours of testing Hostinger AI website builder, I found it unbeatable value at $2.99/month but with limited customization and AI features that feel basic.'
};

const timeline = [
  { time: 'Day 1', event: 'Created site by answering 3 questions. Generated in 45 seconds.' },
  { time: 'Day 2', event: 'Tested AI Writer tool. Generated decent copy but needed editing.' },
  { time: 'Day 3', event: 'Tested AI Image Generator. Created basic images, nothing special.' },
  { time: 'Day 4', event: 'Explored customization options. Limited compared to competitors.' },
  { time: 'Day 5', event: 'Tested e-commerce features. Basic but functional.' },
  { time: 'Day 6', event: 'Checked PageSpeed scores. Solid performance (75-85).' },
  { time: 'Day 7', event: 'Tested hosting integration. Fast, reliable - no surprise there.' }
];

const pros = [
  'Incredible value - $2.99/month',
  'Website generated in 45 seconds',
  'AI Writer included',
  'AI Image Generator',
  'Free SSL certificate',
  'Hosting included',
  'AI SEO Assistant'
];

const cons = [
  'Limited customization options',
  'Basic AI features',
  'Template selection is small',
  'No free plan (paid trial only)',
  'Editor feels dated',
  'Limited integrations',
  'Support can be slow'
];

const scores = {
  easeOfUse: 9.0,
  designQuality: 6.5,
  aiFeatures: 7.0,
  speed: 8.0,
  flexibility: 6.0,
  value: 9.5
};

const affiliateData = getAffiliateCTA('hostinger' as any);
const hasAffiliate = hasAffiliateCTA('hostinger' as any);
---

<Layout title={`${reviewData.title} Review: ${reviewData.testingTime} of Testing`} description={reviewData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Is Hostinger AI really $2.99/month?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, Hostinger AI website builder starts at $2.99/month with a 48-month commitment. Shorter terms cost more ($3.99-$7.99/month). This includes hosting, free SSL, and a domain (first year). It's the cheapest AI builder available."
        }
      },
      {
        "@type": "Question",
        "name": "Can I export my site from Hostinger?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "No, Hostinger doesn't offer code export. Your site is tied to their hosting. However, since hosting is included and inexpensive, this is less of an issue than with expensive builders."
        }
      },
      {
        "@type": "Question",
        "name": "Is Hostinger AI good for beginners?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, Hostinger AI is excellent for beginners. The AI generates a complete site in 45 seconds after answering 3 questions. The editor is simple, and hosting/setup are handled automatically. Perfect for personal projects or testing business ideas."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">REVIEW</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{reviewData.title} Review</h1>
      <p class="text-xl text-gray-600 mb-6">{reviewData.description}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500 mb-6">
        <span>Updated: {reviewData.date}</span>
        <span>-</span>
        <span>{reviewData.testingTime} of hands-on testing</span>
      </div>
      <TestingBadge score={reviewData.score} />
    </div>

    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Verdict</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Hostinger AI is unbeatable value.</strong> At $2.99/month, you get an AI website builder, hosting, SSL, and AI tools. No other platform comes close to this price.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>The catch:</strong> Limited customization, basic AI features, and small template selection. You get what you pay for.
      </p>
      <p class="text-gray-700">
        Perfect for budget-conscious users who need a simple site fast. Not for design-focused users or those wanting total control.
      </p>
    </div>

    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">What I Tested</h2>
      <div class="bg-gray-50 p-6 rounded-lg">
        <ul class="space-y-3">
          <li class="flex items-start gap-3"><span class="text-green-500 mt-1">✓</span><span>3-question AI generator</span></li>
          <li class="flex items-start gap-3"><span class="text-green-500 mt-1">✓</span><span>AI Writer tool</span></li>
          <li class="flex items-start gap-3"><span class="text-green-500 mt-1">✓</span><span>AI Image Generator</span></li>
          <li class="flex items-start gap-3"><span class="text-green-500 mt-1">✓</span><span>E-commerce features</span></li>
          <li class="flex items-start gap-3"><span class="text-green-500 mt-1">✓</span><span>PageSpeed testing</span></li>
          <li class="flex items-start gap-3"><span class="text-green-500 mt-1">✓</span><span>Hosting performance</span></li>
        </ul>
      </div>
    </div>

    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Testing Timeline</h2>
      <div class="space-y-4">
        {timeline.map(item => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-24 text-sm font-semibold text-orange-600">{item.time}</div>
            <div class="flex-1 text-gray-700">{item.event}</div>
          </div>
        ))}
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Pros</h3>
        <ul class="space-y-3">
          {pros.map(pro => (
            <li class="flex items-start gap-3 text-gray-700"><span class="text-green-500 mt-1">✓</span><span>{pro}</span></li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Cons</h3>
        <ul class="space-y-3">
          {cons.map(con => (
            <li class="flex items-start gap-3 text-gray-700"><span class="text-red-500 mt-1">✗</span><span>{con}</span></li>
          ))}
        </ul>
      </div>
    </div>

    <!-- PERSONAL STORY: The $2.99 Reality Check -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-green-50 to-lime-50 border-[3px] border-green-300 p-6 md:p-8 my-10 relative overflow-hidden">
        <h2 class="text-2xl font-black text-gray-900 mb-2">The $2.99 Reality Check</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">When cheap is too cheap</p>

        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">
            I wanted to love Hostinger AI. Really, I did.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            <strong>$2.99/month</strong> for an AI website builder + hosting + SSL? That's insane value. Framer charges $15/month just for the builder. Wix is $16/month. Squarespace? $23/month.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Hostinger is 5-10x cheaper. How could this not be amazing?
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Then I built my first site.
          </p>

          <div class="bg-red-100 border-l-[4px] border-red-500 p-4 my-4">
            <p class="text-sm text-red-900 font-medium">
              The AI generated a site in 45 seconds. Fast, yes. But the result looked like it was built in 2015.
            </p>
            <p class="text-sm text-red-900 mt-2">
              Templates were basic. Customization options were limited. The AI tools felt like afterthoughts.
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            I spent 3 hours trying to make the site look decent. Couldn't do it. The editor is that limited.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            <strong>Here's the truth:</strong> You get what you pay for. $2.99 gets you a functional site. It doesn't get you a <em>good</em> site.
          </p>

          <div class="bg-yellow-100 border-l-[4px] border-yellow-600 p-4 my-4">
            <p class="text-sm text-yellow-900 font-medium">
              <strong>Who IS Hostinger for?</strong>
            </p>
            <p class="text-sm text-yellow-900 mt-2">
              • Testing a business idea before investing in a proper site<br>
              • Personal projects where design doesn't matter<br>
              • Students who need something up for a class<br>
              • Non-profits with zero budget
            </p>
            <p class="text-sm text-yellow-900 mt-2">
              <strong>Who is it NOT for?</strong> Anyone who cares about design, brand identity, or professionalism. Spend $15/month on Framer instead.
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            I rated Hostinger 7.8/10. The score would be lower if not for the price. If Hostinger cost $15/month? It'd be a 5/10.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            But at $2.99? It earns points just for existing. Sometimes "cheap and functional" is exactly what you need.
          </p>
        </div>
      </div>
    </div>

    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">The Value Proposition</h2>
      <p class="text-gray-700 mb-4">
        At $2.99/month (with 48-month term), Hostinger is the cheapest AI website builder available. You get:
      </p>
      <ul class="list-disc list-inside text-gray-700 space-y-2">
        <li>AI website builder</li>
        <li>Free SSL certificate</li>
        <li>AI Writer content tool</li>
        <li>AI Image Generator</li>
        <li>AI SEO Assistant</li>
        <li>Web hosting included</li>
      </ul>
      <p class="text-gray-700 mt-4">
        For comparison, Wix starts at $16/month, Squarespace at $23/month, Framer at $15/month. Hostinger is 5-10x cheaper.
      </p>
    </div>

    <div class="text-center">
      <a href={affiliateData.href} class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        Try Hostinger from $2.99/mo {hasAffiliate ? `(Affiliate)` : `(Direct)`}
      </a>
    </div>

    <!-- Related Guides -->
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Guides</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <a href="/comparisons/best-ai-website-builders-budget" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Best Budget AI Website Builders</h3>
          <p class="text-gray-600 text-sm mb-3">Hostinger is the cheapest at $2.99/mo. See how it compares to Framer and Durable on value.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Comparison →</span>
        </a>
        <a href="/guides/ai-website-builder-pricing-comparison-detailed" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">AI Builder Pricing: Full Breakdown</h3>
          <p class="text-gray-600 text-sm mb-3">Detailed pricing comparison including hidden costs and 3-year total cost.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Guide →</span>
        </a>
        <a href="/comparisons/best-ai-website-builders-beginners" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Best AI Website Builders for Beginners</h3>
          <p class="text-gray-600 text-sm mb-3">Hostinger is beginner-friendly but dated. See better options for first-time users.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Comparison →</span>
        </a>
        <a href="/guides/free-ai-website-builders-whats-the-catch" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Free AI Website Builders: What's the Catch?</h3>
          <p class="text-gray-600 text-sm mb-3">Hostinger has no free plan. See which builders offer free tiers and the limitations.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Guide →</span>
        </a>
      </div>
    </div>

    <!-- Related Reviews -->
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">You Might Also Like</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="/reviews/framer-ai" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Framer AI</h3>
          <p class="text-gray-600 text-sm mb-3">5x more expensive but 10x better design quality. Best overall value.</p>
          <div class="flex items-center gap-2">
            <span class="text-orange-600 font-bold">9.3/10</span>
            <span class="text-gray-400">→</span>
          </div>
        </a>
        <a href="/reviews/durable-ai" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Durable AI</h3>
          <p class="text-gray-600 text-sm mb-3">Fast AI generation, business-focused, better templates than Hostinger.</p>
          <div class="flex items-center gap-2">
            <span class="text-orange-600 font-bold">8.9/10</span>
            <span class="text-gray-400">→</span>
          </div>
        </a>
        <a href="/reviews/ionos-ai" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">IONOS AI</h3>
          <p class="text-gray-600 text-sm mb-3">Another budget option with German quality. Similar price point.</p>
          <div class="flex items-center gap-2">
            <span class="text-orange-600 font-bold">7.8/10</span>
            <span class="text-gray-400">→</span>
          </div>
        </a>
      </div>
    </div>
  </div>
</Layout>
