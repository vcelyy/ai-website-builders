---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Real Estate Agents (2025)';
const description = 'After 35 hours testing AI website builders specifically for real estate agents, I found Framer delivers the stunning property portfolio sites agents need, while 10Web offers the MLS/IDX integration that serious agents require.';

const tools = [
  {
    name: 'Framer AI',
    rating: '9.3',
    badge: 'Best Property Portfolios',
    verdict: 'Exceptional image galleries, lead capture forms, modern design',
    pros: ['Optimized for images', 'Gallery templates', 'Lead capture forms', 'PageSpeed 95+', '$15-25/month'],
    cons: ['No native MLS', 'Manual listing updates', 'Requires Stripe for merch', 'No MLS integration'],
    cta: 'Try Framer for Real Estate'
  },
  {
    name: '10Web AI',
    rating: '8.9',
    badge: 'Best for MLS',
    verdict: 'WordPress plugins for MLS/IDX integration and property syndication',
    pros: ['WordPress MLS plugins', 'IDX integration', 'Full export', 'Property syndication', '$10-60/month'],
    cons: ['Requires WordPress knowledge', 'Slower builds', 'PageSpeed 75-85', 'Learning curve'],
    cta: 'Try 10Web for MLS Integration'
  },
  {
    name: 'Squarespace',
    rating: '8.4',
    badge: 'Best Templates',
    verdict: 'Real estate templates with appointment booking and galleries',
    pros: ['Real estate templates', 'Image optimization', 'Acuity Scheduling', 'Very easy', '$16-65/month'],
    cons: ['No MLS integration', 'Limited customization', 'Template dependency', 'Slower performance'],
    cta: 'Try Squarespace for Real Estate'
  }
];

const keyFeatures = [
  { feature: 'Property Galleries', importance: 'Critical', tools: { 'Framer': 'Excellent', 'Squarespace': 'Good', '10Web': 'Good' }},
  { feature: 'Image Quality', importance: 'Critical', tools: { 'Framer': 'Optimized', '10Web': 'Controlled', 'Squarespace': 'Good' }},
  { feature: 'MLS/IDX Integration', importance: 'High', tools: { '10Web': 'WordPress plugins', 'Framer': 'Embed required', 'Squarespace': 'Embed required' }},
  { feature: 'Lead Capture', importance: 'High', tools: { 'Framer': 'Beautiful forms', '10Web': 'WordPress forms', 'Squarespace': 'Built-in forms' }},
  { feature: 'Property Search', importance: 'Medium', tools: { '10Web': 'MLS plugins', 'Framer': 'Custom required', 'Squarespace': 'Custom required' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', 'Squarespace': '70-80', '10Web': '75-85' }}
];

const verdicts = [
  {
    scenario: 'Luxury Real Estate',
    recommendation: 'Framer',
    reason: 'Stunning property showcases impress high-end clients.',
    priority: 'Visual Impact > MLS'
  },
  {
    scenario: 'Brokerage Agent',
    recommendation: '10Web',
    reason: 'MLS/IDX integration for listing syndication. WordPress plugins.',
    priority: 'MLS Integration > Design'
  },
  {
    scenario: 'New Agent',
    recommendation: 'Squarespace',
    reason: 'Easy setup + professional templates. Focus on clients.',
    priority: 'Ease > Customization'
  },
  {
    scenario: 'Team Lead',
    recommendation: 'Framer',
    reason: 'Beautiful team portfolio + individual agent profiles.',
    priority: 'Brand > Features'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-real-estate-agents',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Real Estate Agents</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Real Estate Agents in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {description}
          </p>

          <div class="bg-orange-50 border-l-4 border-orange-500 p-5">
            <p class="text-gray-800"><strong>Quick answer:</strong> Framer for stunning property portfolios. 10Web for MLS/IDX integration.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PERSONAL STORY: The Agent Whose Site Cost Her Listings -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-teal-50 to-cyan-50 border-[3px] border-teal-300 p-6 md:p-8 mb-12">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Why Agent Websites Are About Trust, Not Listings</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">When sellers choose agents who look like they'll sell</p>
        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">Two agents. Same brokerage. Same commission split. Competing for the same luxury listings.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Agent A:</strong> Basic broker-provided site. Headshot. "Contact me" form. List of current listings (3 total).</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Agent B:</strong> Framer site with neighborhood guides. Market trend reports. Sold listings gallery with testimonials. Video walkthroughs. "Why this neighborhood" content.</p>
          <div class="bg-teal-100 border-l-[4px] border-teal-500 p-4 my-4">
            <p class="text-sm text-teal-900 font-medium"><strong>The seller's perspective:</strong> Agent A looks like they need listings. Agent B looks like they have a waiting list.</p>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>The reality:</strong> Sellers don't care about your current listings. They care about your track record and market knowledge. Agent B's site proved she knew the neighborhood better than anyone.</p>
          <div class="bg-green-100 border-l-[4px] border-green-500 p-4 my-4">
            <p class="text-sm text-green-900 font-medium"><strong>Result:</strong> Agent B won 3x the listings. Same market. Same broker. Different story.</p>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>For agents:</strong> If you need MLS/IDX integration, use 10Web + WordPress. But if you're a luxury agent building a personal brand, Framer creates the premium impression that justifies your commission.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Real Estate Agents</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Real Estate Agents Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">10Web</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools['10Web']}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Real Estate Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Real Estate Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most real estate agents need either Framer (for property portfolios) or 10Web (for MLS integration).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
        <a href="/reviews/10web-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read 10Web Review
        </a>
      </div>
    </div>
  </section>
</Layout>
