      <div class="overflow-x-auto">
        <table class="w-full border-collapse bg-white">
          <thead>
            <tr class="bg-gradient-to-r from-rose-500 to-pink-500">
              <th class="border-[3px] border-gray-300 p-3 text-left font-black text-white text-xs uppercase tracking-wider">Platform</th>
              <th class="border-[3px] border-gray-300 p-3 text-center font-black text-white text-xs uppercase tracking-wider">Photo Galleries</th>
