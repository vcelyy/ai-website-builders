---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for B2B Marketing',
  description: 'Top AI website builders for B2B marketing, lead generation, and business services. Compare professional presentation, lead capture, and conversion optimization.',
  date: 'January 2025'
};

const recommendations = [
  {
    type: 'B2B Lead Generation',
    topPick: 'Framer',
    reason: 'Modern design (9.5/10), impressive presentation, fast loading, professional aesthetic',
    alternatives: ['Webflow', 'Squarespace']
  },
  {
    type: 'Consulting / Professional Services',
    topPick: 'Webflow',
    reason: 'Powerful CMS, case study presentations, complete control over branding',
    alternatives: ['Framer', '10Web + WordPress']
  },
  {
    type: 'Agency / Creative Services',
    topPick: 'Framer',
    reason: 'Portfolio showcase, modern aesthetic, design-focused presentation',
    alternatives: ['Webflow', 'Squarespace']
  },
  {
    type: 'SaaS / Tech Startups',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), landing pages, quick iteration for A/B testing',
    alternatives: ['Webflow', 'Framer']
  }
];

const requiredPages = [
  {
    page: 'Home / Landing',
    elements: ['Clear value proposition', 'Problem/solution framework', 'Social proof (logos, metrics)', 'Lead magnet or demo CTA', 'Trust indicators', 'Mobile-optimized'],
    priority: 'Non-negotiable - Primary conversion page'
  },
  {
    page: 'Services / Solutions',
    elements: ['Service descriptions', 'Benefits and outcomes', 'Process overview', 'Pricing or packages', 'Case study links', 'Consultation CTA'],
    priority: 'Required for service businesses'
  },
  {
    page: 'Case Studies / Portfolio',
    elements: ['Client challenge', 'Solution provided', 'Results achieved (metrics)', 'Client testimonial', 'Visuals if applicable', 'Related services'],
    priority: 'Non-negotiable - Social proof and credibility'
