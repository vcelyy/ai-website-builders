    rating: '9.0',
    badge: 'Best for Portfolios',
    verdict: 'Beautiful wellness templates with class schedules, instructor profiles, and booking integration',
    pros: ['Wellness templates', 'Class schedules', 'Booking features', 'Email capture', '$23-59/month'],
    cons: ['Template limits', 'Limited customization', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Wix AI',
    rating: '8.7',
    badge: 'Best for Booking',
    verdict: 'Yoga templates with booking systems and package pricing',
    pros: ['Booking features', 'Package pricing', 'Easy setup', 'Mobile app', '$17-46/month'],
    cons: ['Performance issues', 'Template lock-in', 'Monthly pricing'],
    cta: 'Try Wix'
  },
  {
    name: 'Webflow AI',
    rating: '8.4',
    badge: 'Best for Custom',
    verdict: 'Custom yoga portfolio with schedule CMS and workshop features',
    pros: ['Custom design', 'Schedule CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
