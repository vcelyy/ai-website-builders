<section class="py-16 px-6 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <h3 class="text-5xl md:text-6xl font-black mb-8 hosting-text">PRICING BREAKDOWN</h3>
    
    <div class="bg-white p-8 border-[3px] border-gray-300 overflow-x-auto">
      <table class="w-full text-lg">
        <thead>
          <tr class="border-b-4 border-purple-600">
            <th class="text-left p-4">What</th>
            <th class="text-center p-4">Hostinger</th>
            <th class="text-center p-4">Mixo</th>
          </tr>
