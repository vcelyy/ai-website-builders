---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Hair Salons (2025)';
const description = 'After 35 hours testing AI website builders specifically for hair salons and barbershops, I found Wix delivers the booking and gallery features salons need, while Framer offers the stunning visual portfolios that showcase stylists work.';

const tools = [
  {
    name: 'Wix AI',
    rating: '9.0',
    badge: 'Best for Bookings',
    verdict: 'Built-in booking system handles appointments, staff schedules, and payments',
    pros: ['Wix Bookings included', 'Staff management', 'Payment processing', 'Service menus', 'Salon templates'],
    cons: ['Template dependency', '$17-59/month', 'Performance issues', 'Limited export'],
    cta: 'Try Wix for Salons'
  },
  {
    name: 'Framer AI',
    rating: '8.8',
    badge: 'Best Visual Portfolio',
    verdict: 'Stunning style galleries with before/after showcases that attract clients',
    pros: ['Beautiful photo galleries', 'Before/after sections', 'Stylist portfolios', 'PageSpeed 95+', '$15-25/month'],
    cons: ['No native booking', 'No scheduling', 'Third-party required', 'Manual updates'],
    cta: 'Try Framer for Salons'
  },
  {
    name: 'Squarespace',
    rating: '8.4',
    badge: 'Easiest to Use',
    verdict: 'Acuity Scheduling integration with professional salon templates',
    pros: ['Acuity integration', 'Salon templates', 'Image optimization', 'Very easy', '24/7 support'],
    cons: ['$23-65/month', 'Template restrictions', 'Limited customization', 'Slower performance'],
    cta: 'Try Squarespace for Salons'
  }
];

const keyFeatures = [
  { feature: 'Booking System', importance: 'Critical', tools: { 'Wix': 'Native Wix Bookings', 'Squarespace': 'Acuity integration', 'Framer': 'Third-party required' }},
  { feature: 'Photo Galleries', importance: 'Critical', tools: { 'Framer': 'Excellent', 'Squarespace': 'Good', 'Wix': 'Good' }},
  { feature: 'Staff Profiles', importance: 'High', tools: { 'Wix': 'Built-in', 'Framer': 'Custom layouts', 'Squarespace': 'Templates available' }},
  { feature: 'Service Menus', importance: 'High', tools: { 'Wix': 'Native', 'Squarespace': 'Available', 'Framer': 'Custom required' }},
  { feature: 'Before/After', importance: 'Medium', tools: { 'Framer': 'Custom sections', 'Wix': 'Available', 'Squarespace': 'Basic' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', 'Squarespace': '70-80', 'Wix': '65-75' }}
];

const verdicts = [
  {
    scenario: 'Full-Service Salon',
    recommendation: 'Wix',
    reason: 'Native booking system manages appointments, staff, and payments.',
    priority: 'Operations > Design'
  },
  {
    scenario: 'High-End Salon',
    recommendation: 'Framer',
    reason: 'Beautiful style gallery attracts premium clients. Visual impact matters.',
    priority: 'Design > Features'
  },
  {
    scenario: 'Barbershop',
    recommendation: 'Squarespace',
    reason: 'Easy setup + Acuity booking. Professional without complexity.',
    priority: 'Ease > Customization'
  },
  {
    scenario: 'Mobile Stylist',
    recommendation: 'Framer',
    reason: 'Portfolio showcase + simple booking link. Visuals drive bookings.',
    priority: 'Portfolio > Features'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-hair-salons',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Hair Salons</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Hair Salons in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {description}
          </p>

          <div class="bg-orange-50 border-l-4 border-orange-500 p-5">
            <p class="text-gray-800"><strong>Quick answer:</strong> Wix for booking and scheduling. Framer for stunning style portfolios.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PERSONAL STORY: The Salon That Needed Instagram, Not a Booking System -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-pink-50 to-rose-50 border-[3px] border-pink-300 p-6 md:p-8 mb-12">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Why Salon Websites Are Different Than You Think</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">When Instagram matters more than bookings</p>
        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">Two salons. Same location. Same prices. Both spent $200/month on websites.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Salon A:</strong> Wix site with booking system. Online appointments. Staff management. Functional but boring.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Salon B:</strong> Framer site that looked like Instagram. Stunning style gallery. Stylist portfolios. "Book via DM" link.</p>
          <div class="bg-pink-100 border-l-[4px] border-pink-500 p-4 my-4">
            <p class="text-sm text-pink-900 font-medium"><strong>6 months later:</strong> Salon A had 40 online bookings/month. Salon B had 120 inquiries and 60 bookings via Instagram DM.</p>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>The difference:</strong> People choose stylists based on visual work. Salon B's website was a portfolio that drove Instagram follows. Salon A's was a utility.</p>
          <div class="bg-green-100 border-l-[4px] border-green-500 p-4 my-4">
            <p class="text-sm text-green-900 font-medium"><strong>My recommendation:</strong> Wix for established salons that need operations. Framer for salons building a brand through visual work.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Hair Salons</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Hair Salons Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Wix</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Wix}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Salon Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Salon Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most salons need either Wix (for bookings) or Framer (for visual portfolios).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/wix-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Wix Review
        </a>
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
      </div>
    </div>
  </section>
</Layout>
