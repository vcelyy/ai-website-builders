    cons: ['Template limits', 'Less customization', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Webflow AI',
    rating: '8.6',
    badge: 'Best for Custom',
    verdict: 'Custom glass portfolio with collection CMS and sales integration',
    pros: ['Custom galleries', 'Collection CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
