---
import Layout from '../layouts/Layout.astro';
import AffiliateCTA from '../components/AffiliateCTA.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for B2B Companies (2025)';
const description = 'I tested AI website builders for B2B companies. 10Web wins for content and lead generation.';
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">B2B USE CASE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">Best AI Website Builder for B2B Companies</h1>
      <p class="text-xl text-gray-600 mb-6">
        B2B needs case studies, whitepapers, lead magnets, and professional credibility.
      </p>
    </div>

    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Recommendation</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>10Web + WordPress</strong> - content marketing, lead generation, and professional presentation.
      </p>
      <p class="text-gray-700">
        <strong>Alternative:</strong> Webflow for design-forward B2B brands.
      </p>
    </div>

    <div class="text-center">
      <AffiliateCTA
        href={affiliates['10web'].affiliateUrl}
        commission={affiliates['10web'].commission}
        label="Try 10Web for B2B"
        className="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block"
      />
    </div>
  </div>
</Layout>
