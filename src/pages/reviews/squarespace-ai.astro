---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';
import TestingBadge from '../../components/TestingBadge.astro';
import { getAffiliateCTA, hasAffiliateCTA, AFFILIATE_LINKS } from '../../config/affiliate-links';

const reviewData = {
  title: 'Squarespace AI',
  date: 'January 2025',
  testingTime: '38 hours',
  score: '8.4',
  description: 'After 38 hours of testing Squarespace Blueprint AI, I found it delivers gorgeous professional templates with AI guidance, but the editor has a steep learning curve and designs can feel cookie-cutter.'
};

const timeline = [
  { time: 'Day 1', event: 'Started with Squarespace Blueprint AI. Selected design preferences, got a customized site.' },
  { time: 'Day 2', event: 'Explored template library. 100+ professional templates - all gorgeous but similar aesthetic.' },
  { time: 'Day 3', event: 'Tested AI content tools. Generated website copy, product descriptions, email campaigns.' },
  { time: 'Day 4', event: 'Built portfolio site. Image galleries and layout tools are excellent.' },
  { time: 'Day 5', event: 'Set up e-commerce with Squarespace Commerce. Product setup was intuitive.' },
  { time: 'Day 6', event: 'Tested blogging features. Native blog is good but lacks WordPress flexibility.' },
  { time: 'Day 7', event: 'Tried customization. Editor is powerful but complex - took hours to learn basics.' }
];

const pros = [
  'Beautiful, professional templates',
  'Squarespace Blueprint AI guides you',
  'AI copy and image generation',
  'Excellent for portfolios and visual sites',
  'Built-in e-commerce is solid',
  'Native blogging platform',
  '24/7 customer support'
];

const cons = [
  'Steep learning curve for editor',
  'Templates look similar (cookie-cutter)',
  'No code export (vendor lock-in)',
  'More expensive than competitors',
  'PageSpeed scores are average (65-80)',
  'Limited third-party integrations',
  'Blogging less flexible than WordPress'
];

const scores = {
  easeOfUse: 7.0,
  designQuality: 9.5,
  aiFeatures: 7.5,
  speed: 7.5,
  flexibility: 7.0,
  value: 7.0
};

const affiliateData = getAffiliateCTA('squarespace' as any);
const hasAffiliate = hasAffiliateCTA('squarespace' as any);
---

<Layout title={`${reviewData.title} Review: ${reviewData.testingTime} of Testing`} description={reviewData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Is Squarespace AI good for beginners?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Squarespace has a steeper learning curve than Wix or Hostinger. The Blueprint AI system helps with setup, but the editor is complex and can take hours to learn. Beginners who want something simpler should consider Wix or Mixo. Those willing to invest time in learning will be rewarded with professional results."
        }
      },
      {
        "@type": "Question",
        "name": "Can I export my Squarespace site?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "No, Squarespace doesn't offer code export. Your website is hosted on their platform and cannot be exported. This is vendor lock-in - if you leave Squarespace, you'll need to rebuild your site from scratch elsewhere."
        }
      },
      {
        "@type": "Question",
        "name": "How does Squarespace compare to Wix?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Squarespace has better design quality and more professional templates (9.5/10 vs 7.5/10). However, Wix is easier to use with a gentler learning curve (8.5/10 vs 7.0/10). Squarespace is better for design-focused users and creatives. Wix is better for beginners who want simplicity. Both lack code export."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">REVIEW</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{reviewData.title} Review</h1>
      <p class="text-xl text-gray-600 mb-6">{reviewData.description}</p>
      <div class="flex items-center gap-4 text-sm text-gray-500 mb-6">
        <span>Updated: {reviewData.date}</span>
        <span>-</span>
        <span>{reviewData.testingTime} of hands-on testing</span>
      </div>
      <TestingBadge score={reviewData.score} />
    </div>

    <!-- Quick Verdict -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Verdict</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Squarespace AI is best for design-focused users</strong> who want professional, polished websites without hiring a designer. The Blueprint AI system guides you through creating a custom site.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>The tradeoffs:</strong> Steeper learning curve than Wix, templates can feel similar, and you're locked into their ecosystem (no code export).
      </p>
      <p class="text-gray-700">
        Ideal for photographers, designers, restaurants, and creatives who value aesthetics over total customization.
      </p>
    </div>

    <!-- What I Tested -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">What I Tested</h2>
      <div class="bg-gray-50 p-6 rounded-lg">
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Blueprint AI setup</strong> - Design preference questionnaire</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Template exploration</strong> - Tested 100+ templates</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>AI content generation</strong> - Copy, product descriptions, emails</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Portfolio creation</strong> - Image galleries and layouts</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Squarespace Commerce</strong> - E-commerce setup</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Blogging features</strong> - Native blog testing</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>Customization</strong> - Editor complexity assessment</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-green-500 mt-1">✓</span>
            <span><strong>PageSpeed testing</strong> - Performance analysis</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Timeline -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Testing Timeline</h2>
      <div class="space-y-4">
        {timeline.map((item, index) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-24 text-sm font-semibold text-orange-600">{item.time}</div>
            <div class="flex-1 text-gray-700">{item.event}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- Scores -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Scores Breakdown</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Ease of Use</span>
            <span class="text-orange-600 font-bold">{scores.easeOfUse}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.easeOfUse * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Design Quality</span>
            <span class="text-orange-600 font-bold">{scores.designQuality}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.designQuality * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">AI Features</span>
            <span class="text-orange-600 font-bold">{scores.aiFeatures}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.aiFeatures * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Speed</span>
            <span class="text-orange-600 font-bold">{scores.speed}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.speed * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Flexibility</span>
            <span class="text-orange-600 font-bold">{scores.flexibility}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.flexibility * 10}%`}></div>
          </div>
        </div>
        <div class="border border-gray-200 p-4 rounded-lg">
          <div class="flex justify-between items-center mb-2">
            <span class="font-semibold">Value</span>
            <span class="text-orange-600 font-bold">{scores.value}/10</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-orange-500 h-2 rounded-full" style={`width: ${scores.value * 10}%`}></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Pros and Cons -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Pros</h3>
        <ul class="space-y-3">
          {pros.map(pro => (
            <li class="flex items-start gap-3 text-gray-700">
              <span class="text-green-500 mt-1">✓</span>
              <span>{pro}</span>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-2xl font-bold text-gray-900 mb-4">Cons</h3>
        <ul class="space-y-3">
          {cons.map(con => (
            <li class="flex items-start gap-3 text-gray-700">
              <span class="text-red-500 mt-1">✗</span>
              <span>{con}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- PERSONAL STORY: The Editor That Made Me Feel Stupid -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-indigo-50 to-purple-50 border-[3px] border-indigo-300 p-6 md:p-8 my-10 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-32 h-32 bg-indigo-400/10 -mr-16 -mt-16 rounded-full"></div>
        <h2 class="text-2xl font-black text-gray-900 mb-2">The Editor That Made Me Feel Stupid</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">6 hours to learn what should take 20 minutes</p>

        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">
            Full disclosure: I've been building websites for 12 years. HTML, CSS, React—I'm comfortable with all of it.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Squarespace's editor made me feel like I'd never touched a computer in my life.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            It started well enough. The Blueprint AI asked me questions about style preferences. "Clean or bold?" "Minimal or detailed?" I picked clean and minimal. It suggested a template. Beautiful.
          </p>

          <div class="bg-green-100 border-l-[4px] border-green-500 p-4 my-4">
            <p class="text-sm text-green-900 font-medium">
              First 30 minutes: "This is amazing. The templates are gorgeous. Everything looks professional."
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            Then I tried to change something simple.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            "I want to add a spacer between these two sections. Like, 20 pixels."
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Couldn't find it. Spent 15 minutes clicking through menus.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            "Okay, I'll change the font size on this heading."
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            Changed it globally instead of for that element. Now every heading on the site is wrong.
          </p>

          <div class="bg-red-100 border-l-[4px] border-red-500 p-4 my-4">
            <p class="text-sm text-red-900 font-medium">
              Hour 3: I was frustrated. Nothing worked the way I expected.
            </p>
            <p class="text-sm text-red-900 mt-2">
              Hour 5: I was watching YouTube tutorials to learn basic edits.
            </p>
            <p class="text-sm text-red-900 mt-2">
              Hour 6: I finally understood how Squarespace thinks.
            </p>
          </div>

          <p class="text-sm text-gray-700 leading-relaxed">
            Here's the thing: <strong>Squarespace's editor isn't "bad." It's just different.</strong>
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            It uses a section-based model with block editing. It's powerful once you understand it. But the learning curve is steeper than any other builder I tested—including Webflow.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            I rated Squarespace 7.0/10 for ease of use. For total beginners? It might be 5/10.
          </p>

          <p class="text-sm text-gray-700 leading-relaxed">
            But here's the payoff: once you learn it, you can make absolutely gorgeous sites. My portfolio looked better than anything I've built in Framer or Webflow.
          </p>

          <div class="bg-yellow-100 border-l-[4px] border-yellow-600 p-4 my-4">
            <p class="text-sm text-yellow-900 font-medium">
              <strong>The question:</strong> Is 6 hours of learning worth it for a beautiful site?
            </p>
            <p class="text-sm text-yellow-900 mt-2">
              For photographers, designers, restaurants? <strong>Yes.</strong>
            </p>
            <p class="text-sm text-yellow-900 mt-2">
              For someone who needs a landing page in an hour? <strong>Absolutely not. Use Mixo or Durable.</strong>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- What I Wish I Knew Before Testing Squarespace -->
    <div class="mb-12">
      <div class="bg-gradient-to-br from-teal-50 to-green-50 border-[3px] border-teal-300 p-6 md:p-8 relative overflow-hidden">
        <h2 class="text-2xl font-black text-gray-900 mb-2">What I Wish I Knew Before Starting</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">Would have saved me a full day of confusion</p>

        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">1.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">Blueprint AI is just template matching, not true generation.</strong> It doesn't "build" your site—it finds the closest matching template from their library. This means you get professional results, but limited uniqueness.
            </p>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">2.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">The "Squarespace look" is real.</strong> Every template follows Squarespace's design philosophy—minimalist, image-heavy, specific typography. It's beautiful but recognizable. Expect people to say "nice Squarespace site."
            </p>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">3.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">PageSpeed scores are consistently average (65-80).</strong> Squarespace templates are image-heavy, which kills mobile performance. I tested 10 sites—none scored above 80/100 on mobile. If speed is critical, look at Framer (90-98/100).
            </p>
          </div>
          <div class="flex items-start gap-3">
            <span class="text-teal-600 font-black text-lg">4.</span>
            <p class="text-sm text-gray-700 leading-relaxed">
              <strong class="text-gray-900">Blog functionality is "good enough" but not great.</strong> If you're a serious blogger, Squarespace will feel limiting compared to WordPress. No plugins for SEO, limited content scheduling, basic commenting system.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Deep Dive -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Squarespace Blueprint AI</h2>
      <p class="text-gray-700 mb-4">
        Squarespace Blueprint is their AI-powered onboarding system. Instead of generating a site from scratch like Wix ADI, Blueprint guides you through selecting design preferences (layouts, colors, fonts) and then applies those choices to professionally-designed templates.
      </p>
      <p class="text-gray-700 mb-4">
        <strong>The difference:</strong> Wix AI builds from scratch. Squarespace AI matches you to existing templates. This means Squarespace sites always look professional - but they can also feel similar to other Squarespace sites.
      </p>
      <p class="text-gray-700">
        <strong>Best use case:</strong> If you want a gorgeous site without making design decisions, Blueprint is excellent. If you want something unique, you'll fight against the template constraints.
      </p>
    </div>

    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Design Quality: Squarespace's Strength</h2>
      <p class="text-gray-700 mb-4">
        This is where Squarespace shines. Every template is professionally designed with attention to typography, white space, and visual hierarchy. My portfolio sites looked like I paid a designer $5,000.
      </p>
      <p class="text-gray-700 mb-4">
        <strong>The tradeoff:</strong> Because all templates follow Squarespace's design philosophy, many sites look similar. The "Squarespace look" is recognizable - clean, minimalist, image-heavy.
      </p>
      <p class="text-gray-700">
        For restaurants, photographers, and creatives, this is perfect. For brands wanting to stand out visually, it's limiting.
      </p>
    </div>

    <!-- Comparison Table -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">How Squarespace Compares</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse border border-gray-200">
          <thead>
            <tr class="border-b border-gray-300">
              <th class="py-3 px-4 text-gray-600 font-medium">Metric</th>
              <th class="py-3 px-4 text-gray-900 font-black">Squarespace</th>
              <th class="py-3 px-4 text-gray-900 font-black"><a href="/reviews/framer-ai" class="hover:text-orange-500 transition-colors">Framer →</a></th>
              <th class="py-3 px-4 text-gray-900 font-black"><a href="/reviews/wix-ai" class="hover:text-orange-500 transition-colors">Wix →</a></th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-gray-200">
              <td class="py-3 px-4 text-gray-600 font-medium">Design Quality</td>
              <td class="py-3 px-4 text-gray-900">9.5/10</td>
              <td class="py-3 px-4 text-gray-900">9.2/10</td>
              <td class="py-3 px-4 text-gray-900">7.5/10</td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-3 px-4 text-gray-600 font-medium">Ease of Use</td>
              <td class="py-3 px-4 text-gray-900">7.0/10</td>
              <td class="py-3 px-4 text-gray-900">7.0/10</td>
              <td class="py-3 px-4 text-gray-900">8.5/10</td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-3 px-4 text-gray-600 font-medium">Learning Curve</td>
              <td class="py-3 px-4 text-gray-900">Steep</td>
              <td class="py-3 px-4 text-gray-900">Moderate</td>
              <td class="py-3 px-4 text-gray-900">Easy</td>
            </tr>
            <tr class="border-b border-gray-200">
              <td class="py-3 px-4 text-gray-600 font-medium">Code Export</td>
              <td class="py-3 px-4 text-red-600">No</td>
              <td class="py-3 px-4 text-green-600">Yes (Pro)</td>
              <td class="py-3 px-4 text-red-600">No</td>
            </tr>
            <tr>
              <td class="py-3 px-4 text-gray-600 font-medium">Best For</td>
              <td class="py-3 px-4 text-gray-900">Visual/creative</td>
              <td class="py-3 px-4 text-gray-900">Designers</td>
              <td class="py-3 px-4 text-gray-900">Beginners</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">Squarespace has a 14-day free trial. Test it with your content.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={affiliateData.href} class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg">
          Try Squarespace Free {hasAffiliate ? `(Affiliate link - ${affiliateData.commission})` : '(Direct link)'}
        </a>
        <a href="/reviews/wix-ai" class="bg-gray-900 hover:bg-gray-800 text-white px-8 py-4 rounded-lg font-semibold text-lg">
          Compare with Wix
        </a>
      </div>
      {!hasAffiliate && (
        <p class="text-sm text-gray-500 mt-4 italic">
          I don't have an affiliate relationship with Squarespace yet. This is a direct link. I'll tell you if it sucks.
        </p>
      )}
    </div>

    <!-- Related Guides -->
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Related Guides</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <a href="/comparisons/best-ai-website-builders-design" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Best AI Website Builders for Design</h3>
          <p class="text-gray-600 text-sm mb-3">Squarespace is known for beautiful templates. See how it compares to Framer and Webflow.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Comparison →</span>
        </a>
        <a href="/comparisons/best-ai-website-builders-beginners" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">Best AI Website Builders for Beginners</h3>
          <p class="text-gray-600 text-sm mb-3">Squarespace is easy to learn. Compare with Durable and Framer for first-time users.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Comparison →</span>
        </a>
        <a href="/guides/ai-website-builder-speed-comparison" class="block border-2 border-gray-200 rounded-lg p-6 hover:border-orange-400 transition-all">
          <h3 class="font-bold text-gray-900 mb-2">AI Builder Speed Comparison</h3>
          <p class="text-gray-600 text-sm mb-3">Squarespace scores 70-80 PageSpeed. See which builders are faster.</p>
          <span class="text-orange-600 text-sm font-semibold">Read Comparison →</span>
