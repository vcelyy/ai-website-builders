        </div>
      </div>
    </div>
  </section>

  <!-- CURRENT DEALS GRID -->
  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 mb-16">
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-2 flex items-center gap-3">
        <div class="w-1 h-8 bg-[#10B981]"></div>
        All Current Deals
      </h2>
      <p class="text-gray-600 ml-4">Verified offers from 27 tested platforms</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {currentDeals.map(deal => (
        <a href={deal.slug} class="group relative bg-white border-[3px] border-gray-200 p-6 hover:border-[#10B981] hover:shadow-[0_8px_0_0_rgba(16,185,129,0.15)] transition-all duration-300">
          {deal.featured && (
            <div class="absolute top-0 right-0 px-3 py-1 bg-[#10B981] text-white text-xs font-black uppercase tracking-wider">
              Featured
            </div>
          )}
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="text-xl font-black text-gray-900 group-hover:text-[#10B981] transition-colors">{deal.tool}</h3>
              <p class="text-sm text-[#10B981] font-bold mt-1">{deal.discount}</p>
            </div>
            <div class="text-right">
              <div class="text-2xl font-black text-gray-900">{deal.rating}</div>
              <p class="text-xs text-gray-500">{deal.bestFor}</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4">{deal.description}</p>
          <div class="flex items-center justify-between">
            {deal.freeTrial && (
              <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-black uppercase">Free Trial</span>
            )}
