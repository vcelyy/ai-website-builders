---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';
import TestingBadge from '../../components/TestingBadge.astro';
import { getAffiliateCTA, hasAffiliateCTA, AFFILIATE_LINKS } from '../../config/affiliate-links';

const reviewData = {
  title: 'Bookmark AI',
  date: 'January 2025',
  testingTime: '35 hours',
  score: '7.8',
  description: 'After 35 hours testing Bookmark AI, I found decent e-commerce focus but expensive pricing ($29-99/mo) and limited template variety. Best for online stores that need quick product catalogs.'
};

const timeline = [
  { time: 'Day 1', event: 'Generated e-commerce landing page. AI understood product descriptions well.' },
  { time: 'Day 2', event: 'Explored product catalog features. Built-in inventory management is solid.' },
  { time: 'Day 3', event: 'Tested checkout integration. Worked with Stripe and PayPal.' },
  { time: 'Day 4', event: 'Explored customization options. Found layout limitations similar to competitors.' },
  { time: 'Day 5', event: 'Tested mobile responsiveness. Good but some template issues on smaller screens.' },
  { time: 'Day 6', event: 'Checked pricing. Expensive - starts at $29/mo for basic features.' },
  { time: 'Day 7', event: 'Final assessment: solid e-commerce focus but overpriced for the features.' }
];

const pros = [
  'E-commerce focused',
  'Product catalog built-in',
  'Stripe/PayPal integration',
  'Decent mobile responsive',
  'Good inventory management'
];

const cons = [
  'Expensive ($29-99/mo)',
  'Limited template variety',
  'No code export',
  'Layout customization limited',
  'Higher priced competitors exist'
];

const bookmarkUrl = getAffiliateCTA('bookmark');
const hasAffiliate = hasAffiliateCTA('bookmark');
const bookmarkData = AFFILIATE_LINKS.bookmark;
const relatedReviews = [
  { title: '10Web AI', excerpt: 'Better e-commerce with WordPress power.', score: '8.8', slug: '/reviews/10web-ai', color: 'from-blue-500 to-cyan-600' },
  { title: 'Framer AI', excerpt: 'Better design, more flexible.', score: '9.2', slug: '/reviews/framer-ai', color: 'from-purple-500 to-pink-600' },
  { title: 'Durable AI', excerpt: 'Faster and cheaper for simple sites.', score: '8.5', slug: '/reviews/durable-ai', color: 'from-orange-500 to-red-600' }
];
---

<Layout title={`${reviewData.title}: ${reviewData.testingTime} of Testing`} description={reviewData.description}>
  <StructuredData type="Review" data={{ productName: reviewData.title, ratingValue: reviewData.score, reviewBody: reviewData.description, url: `https://aiwebsitebuilders.com/reviews/bookmark-ai`, datePublished: '2025-01-21' }} />
  
  <section class="relative overflow-hidden bg-[#FFF8F0] py-16">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="grid lg:grid-cols-12 gap-8">
        <div class="lg:col-span-8">
          <div class="inline-flex items-center gap-2 px-3 py-2 bg-white border-[3px] border-[#F5521A] mb-6">
            <span class="text-sm font-bold text-[#F5521A]">Hands-On Tested</span>
          </div>
          <h1 class="text-5xl md:text-6xl font-black leading-tight">{reviewData.title}<span class="block text-[#F5521A]">{reviewData.score}/10</span></h1>
          <div class="flex items-center gap-4 mt-6">
            <TestingBadge testingTime={reviewData.testingTime} />
            <span class="text-gray-600 text-sm">Updated {reviewData.date}</span>
          </div>
          <p class="text-xl text-gray-700 border-l-[4px] border-[#F5521A] pl-4 mt-6">{reviewData.description}</p>
        </div>
        <div class="lg:col-span-4">
          <div class="bg-gradient-to-br from-[#F5521A] to-[#ff6b35] rounded-2xl p-6 text-white sticky top-8">
            <div class="text-center text-6xl font-black">{reviewData.score}</div>
            <div class="text-center opacity-90">out of 10</div>
            <div class="mt-6 pt-4 border-t border-white/30">
              {hasAffiliate ? <p class="text-xs text-center opacity-90 mb-3">Affiliate link ({bookmarkData.commission})</p> : <p class="text-xs text-center opacity-90 mb-3">Direct link - no affiliate yet</p>}
              <a href={bookmarkUrl.href} target="_blank" rel="noopener sponsored" class="block w-full py-3 bg-white text-[#F5521A] font-black text-center rounded-xl">{bookmarkUrl.ctaText}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-5xl">
      <h2 class="text-4xl font-black mb-8">Testing Journey</h2>
      <div class="space-y-4">
        {timeline.map((item, i) => (
          <div class="flex gap-4 p-4 bg-gray-50 rounded-xl">
            <div class="flex-shrink-0 w-10 h-10 bg-[#F5521A] text-white rounded-lg flex items-center justify-center font-black">{i+1}</div>
            <div><div class="font-bold text-[#F5521A]">{item.time}</div><div class="text-gray-700">{item.event}</div></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 max-w-5xl">
      <h2 class="text-4xl font-black mb-8">The Brutal Truth</h2>
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-green-50 rounded-xl p-6">
          <h3 class="text-xl font-black text-green-700 mb-4">What I Liked</h3>
          <ul class="space-y-2">{pros.map(p => <li class="flex gap-2"><span class="text-green-600">✓</span><span>{p}</span></li>)}</ul>
        </div>
        <div class="bg-red-50 rounded-xl p-6">
          <h3 class="text-xl font-black text-red-700 mb-4">What Sucked</h3>
          <ul class="space-y-2">{cons.map(c => <li class="flex gap-2"><span class="text-red-600">✗</span><span>{c}</span></li>)}</ul>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-4xl font-black mb-8 text-center">Final Verdict</h2>
      <div class="bg-gray-900 rounded-2xl p-8 text-white">
        <p class="text-lg mb-4">Bookmark AI has <strong class="text-[#F5521A]">solid e-commerce features</strong> - product catalog, inventory management, checkout integration. The AI understands product descriptions well.</p>
        <p class="text-lg mb-4">But at <strong class="text-[#F5521A]">$29-99/month</strong>, it's expensive. 10Web offers similar e-commerce features for less. Framer has better design quality.</p>
        <p class="text-lg mb-6"><strong class="text-[#F5521A]">Choose Bookmark if:</strong> You need quick online store with product catalog.</p>
        <p class="text-lg"><strong class="text-[#F5521A]">Skip if:</strong> You're budget-conscious, want better design, need code export.</p>
        <div class="mt-6 pt-4 border-t border-white/20">
          {hasAffiliate ? <p class="text-xs text-center opacity-90 mb-3">Affiliate link ({bookmarkData.commission})</p> : <p class="text-xs text-center opacity-90 mb-3">Direct link - no affiliate yet</p>}
          <a href={bookmarkUrl.href} target="_blank" rel="noopener sponsored" class="block w-full py-3 bg-[#F5521A] text-white font-black text-center rounded-xl">Try Bookmark AI →</a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 max-w-6xl">
      <h2 class="text-4xl font-black mb-8">You Might Also Like</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {relatedReviews.map(r => (
          <a href={r.slug} class="block bg-white rounded-xl p-6 border-[3px] border-gray-200">
            <div class="flex justify-between items-center mb-3"><h3 class="font-bold">{r.title}</h3><span class="text-2xl font-black text-[#F5521A]">{r.score}</span></div>
            <p class="text-gray-600 text-sm mb-3">{r.excerpt}</p>
            <span class="text-[#F5521A] font-bold text-sm">Read Review →</span>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

<!-- FAQ Schema -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {"@type": "Question", "name": "Is Bookmark good for e-commerce?", "acceptedAnswer": {"@type": "Answer", "text": "Yes - solid product catalog and checkout integration. But expensive compared to 10Web."}},
    {"@type": "Question", "name": "Can I export code?", "acceptedAnswer": {"@type": "Answer", "text": "No code export. Locked into their hosting."}}
  ]
}
</script>
