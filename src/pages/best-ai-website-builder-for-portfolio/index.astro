---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const pageData = {
  title: 'Best AI Website Builder for Portfolios in 2025',
  description: 'Looking to build a portfolio with AI? After 100+ hours of testing, Framer AI is the clear winner for designers, photographers, and creatives. Here\'s why.',
  lastUpdated: 'January 2025',
};
---

<Layout title={pageData.title} description={pageData.description}>

  <!-- Article Structured Data -->
  <StructuredData
    type="Article"
    data={{
      headline: pageData.title,
      description: pageData.description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-portfolio',
      datePublished: '2025-01-20',
      image: []
    }}
  />

  <!-- HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Portfolios</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Portfolios in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {pageData.description}
          </p>

          <div class="flex flex-col sm:flex-row gap-3">
            <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-[#F5521A] text-white font-black text-lg shadow-[0_6px_0_0_rgba(0,0,0,0.2)] hover:shadow-[0_8px_0_0_rgba(0,0,0,0.25)] hover:-translate-y-0.5 transition-all border-b-4 border-[#D44A1A]">
              Read Full Framer Review
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
