---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const posts = await getCollection('posts');

// Sort by date, newest first
const sortedPosts = posts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' }
];
---

<Layout title="Blog - In-Depth AI Website Builder Reviews" description="Long-form reviews and analysis of AI website builders. Real testing data, honest verdicts, and detailed comparisons.">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <!-- Breadcrumbs -->
    <Breadcrumbs breadcrumbs={breadcrumbs} />

    <!-- Header -->
    <header class="mb-12 border-b-4 border-black pb-8">
      <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-4">
        Blog
      </h1>
      <p class="text-xl text-gray-600">
        Long-form reviews and deep analysis. Not the quick hits—these are the full investigations.
      </p>
    </header>

    <!-- Stats -->
    <div class="bg-orange-50 border-2 border-orange-200 p-6 mb-12">
      <div class="grid grid-cols-3 gap-4 text-center">
        <div>
          <div class="text-3xl font-black text-orange-600">{posts.length}</div>
          <div class="text-sm text-gray-600">In-Depth Reviews</div>
        </div>
        <div>
          <div class="text-3xl font-black text-orange-600">10K+</div>
          <div class="text-sm text-gray-600">Words Published</div>
        </div>
        <div>
          <div class="text-3xl font-black text-orange-600">127</div>
          <div class="text-sm text-gray-600">Hours Tested</div>
        </div>
      </div>
    </div>

    <!-- Posts Grid -->
    <div class="space-y-8">
      {sortedPosts.map((post) => {
        const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        return (
          <article class="border-2 border-gray-200 hover:border-orange-400 transition-colors">
            <a href={`/blog/${post.slug}`} class="block p-6">
              <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
                <time datetime={post.data.pubDate.toISOString()}>{formattedDate}</time>
                <span>•</span>
                <span>{post.data.author}</span>
              </div>
              <h2 class="text-2xl font-black text-gray-900 mb-3 hover:text-orange-600 transition-colors">
                {post.data.title}
              </h2>
              <p class="text-gray-600 leading-relaxed mb-4">
                {post.data.description}
              </p>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.map((tag: string) => (
                    <span class="bg-gray-100 text-gray-700 px-2 py-1 text-xs font-bold border border-gray-200">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </article>
        );
      })}
    </div>

    <!-- Related Links -->
    <nav class="mt-12 p-6 bg-gradient-to-br from-orange-50 to-amber-50 border-2 border-orange-200">
      <h2 class="text-xl font-black text-gray-900 mb-4">Explore More</h2>
      <div class="grid md:grid-cols-2 gap-4">
        <a href="/reviews" class="block p-4 bg-white border-2 border-gray-200 hover:border-orange-400 transition-colors">
          <span class="font-bold text-gray-900">All Reviews →</span>
          <p class="text-sm text-gray-600 mt-1">Quick scores and key findings</p>
        </a>
        <a href="/comparisons" class="block p-4 bg-white border-2 border-gray-200 hover:border-orange-400 transition-colors">
          <span class="font-bold text-gray-900">Comparisons →</span>
          <p class="text-sm text-gray-600 mt-1">Side-by-side tool matchups</p>
        </a>
      </div>
    </nav>
  </main>
</Layout>
