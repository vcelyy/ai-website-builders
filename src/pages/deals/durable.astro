---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const dealData = {
  tool: 'Durable AI',
  title: 'Durable - Build Your Website in 30 Seconds Free',
  description: 'The fastest AI website builder. Generate a complete website with AI in under 30 seconds. Free to try, no credit card required.',
  discount: 'Free trial',
  regularPrice: '$15-30/month',
  discountedPrice: 'Free to try',
  freeTrial: true,
  freeTrialDuration: 'Free trial available',
  features: [
    'Build complete site in 30 seconds',
    'AI-generated content & images',
    'AI-powered copywriting',
    'CRM included',
    'Invoice generator',
    'AI blog writer',
    'Analytics dashboard',
    '30% commission structure'
  ],
  expiry: 'Ongoing offer',
  affiliateNote: 'We may earn a commission if you sign up through our link, at no cost to you.',
  ctaUrl: 'https://durable.co'
};
---

<Layout title={`${dealData.tool} Deal: Free AI Website Builder - 30 Second Generation`} description={dealData.description}>

  <!-- Deal Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: `${dealData.tool} Deal: Free AI Website Builder`,
      description: dealData.description,
      url: 'https://aiwebsitebuilders.com/deals/durable'
    }}
  />

  <!-- HERO -->
  <section class="relative overflow-hidden bg-gradient-to-br from-[#FFF8F0] to-white">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative py-12 md:py-16 lg:py-20">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 px-4 py-3 bg-orange-600 text-white font-black text-sm uppercase tracking-wider mb-6">
          <span>⚡</span>
          <span>Fastest AI Builder</span>
        </div>

        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900 mb-6">
          <span class="block">{dealData.tool}</span>
          <span class="block text-orange-600 mt-2">Build in 30 Seconds</span>
        </h1>

        <p class="text-xl text-gray-700 max-w-2xl mx-auto mb-8">
          {dealData.description}
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={dealData.ctaUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-10 py-5 bg-orange-600 text-white font-black text-xl shadow-[0_8px_0_0_rgba(234,88,12,0.3)] hover:shadow-[0_10px_0_0_rgba(234,88,12,0.4)] active:shadow-[0_4px_0_0_rgba(234,88,12,0.2)] hover:-translate-y-1 transition-all border-b-4 border-orange-800">
            <span>Build My Site Free Now</span>
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </a>
          <span class="text-sm text-gray-500">No credit card required</span>
        </div>
      </div>
    </div>
  </section>

  <!-- SPEED HIGHLIGHT -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-8 text-center">Why Durable?</h2>
      <div class="bg-orange-50 border-[3px] border-orange-200 p-8 mb-8">
        <h3 class="text-xl font-black text-orange-900 mb-4">The Fastest AI Website Builder</h3>
        <p class="text-gray-700 mb-4">Most AI builders take minutes. Durable takes seconds. Answer 3 questions and get a complete website with design, copy, images, and features. No design skills needed.</p>
        <p class="text-orange-700 font-medium">Perfect for: Solopreneurs, small businesses, local services, anyone who needs a site NOW</p>
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        {dealData.features.map(feature => (
          <div class="flex items-start gap-3 bg-gray-50 p-4 border-[3px] border-gray-200">
            <svg class="w-6 h-6 text-orange-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 font-medium">{feature}</span>
          </div>
        ))}
      </div>

      <!-- FINAL CTA -->
      <div class="text-center mt-12">
        <a href={dealData.ctaUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-10 py-5 bg-orange-600 text-white font-black text-xl shadow-[0_8px_0_0_rgba(234,88,12,0.3)] hover:shadow-[0_10px_0_0_rgba(234,88,12,0.4)] hover:-translate-y-1 transition-all border-b-4 border-orange-800">
          <span>Build My Site in 30 Seconds →</span>
        </a>
        <p class="text-xs text-gray-500 mt-4 max-w-md mx-auto">
          {dealData.affiliateNote}
        </p>
      </div>
    </div>
  </section>
</Layout>
