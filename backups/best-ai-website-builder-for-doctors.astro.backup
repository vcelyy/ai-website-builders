          <div class="border-[3px] border-gray-300 bg-white p-6">
            {tool.badge && <span class="inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 bg-gray-900 text-white">{tool.badge}</span>}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#10B981]">{tool.rating}</div>
            </div>
