  { feature: 'Service Packages', importance: 'High', tools: { 'Wix': 'Pricing tables', 'Squarespace': 'Service blocks', 'Framer': 'Custom sections' }},
  { feature: 'Speed to Launch', importance: 'Medium', tools: { 'Wix': 'Hours', 'Squarespace': 'Hours', 'Framer': 'Days' }}
];

