---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const dealData = {
  tool: 'Relume AI',
  title: 'Relume AI - Free Sitemap & Wireframe Generator',
  description: 'The best AI tool for planning website structure. Generate complete sitemaps and wireframes in seconds. Free tier includes 3 projects. Export to Framer, Webflow, and more.',
  discount: 'Free tier available',
  regularPrice: '$20-60/month',
  discountedPrice: 'Free tier, then paid plans',
  freeTrial: true,
  freeTrialDuration: 'Free tier with 3 projects',
  features: [
    'AI sitemap generation',
    'AI wireframe generation',
    'Export to Framer, Webflow, React',
    'Free tier: 3 projects',
    'Component library included',
    'Team collaboration',
    'Style guide generator',
    '30% commission structure'
  ],
  expiry: 'Ongoing offer',
  affiliateNote: 'We may earn a commission if you sign up through our link, at no cost to you.',
  ctaUrl: 'https://relume.io'
};
---

<Layout title={`${dealData.tool} Deal: Free AI Sitemap & Wireframe Generator`} description={dealData.description}>

  <!-- Deal Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: `${dealData.tool} Deal: Free AI Sitemap Generator`,
      description: dealData.description,
      url: 'https://aiwebsitebuilders.com/deals/relume'
    }}
  />

  <!-- HERO -->
  <section class="relative overflow-hidden bg-gradient-to-br from-[#FFF8F0] to-white">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative py-12 md:py-16 lg:py-20">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 px-4 py-3 bg-teal-600 text-white font-black text-sm uppercase tracking-wider mb-6">
          <span>◆</span>
          <span>Best for Planning</span>
        </div>

        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900 mb-6">
          <span class="block">{dealData.tool}</span>
          <span class="block text-teal-600 mt-2">Free Sitemap Generator</span>
        </h1>

        <p class="text-xl text-gray-700 max-w-2xl mx-auto mb-8">
          {dealData.description}
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={dealData.ctaUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-10 py-5 bg-teal-600 text-white font-black text-xl shadow-[0_8px_0_0_rgba(13,148,136,0.3)] hover:shadow-[0_10px_0_0_rgba(13,148,136,0.4)] active:shadow-[0_4px_0_0_rgba(13,148,136,0.2)] hover:-translate-y-1 transition-all border-b-4 border-teal-800">
            <span>Start My Free Planning</span>
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
            </svg>
          </a>
          <span class="text-sm text-gray-500">3 free projects included</span>
        </div>
      </div>
    </div>
  </section>

  <!-- PLANNING HIGHLIGHT -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-8 text-center">Why Relume?</h2>
      <div class="bg-teal-50 border-[3px] border-teal-200 p-8 mb-8">
        <h3 class="text-xl font-black text-teal-900 mb-4">Plan Before You Build</h3>
        <p class="text-gray-700 mb-4">Most people jump straight to building. Smart planners start with Relume. Generate your sitemap, wireframes, and component structure in minutes. Then export to Framer, Webflow, or code.</p>
        <p class="text-teal-700 font-medium">Perfect for: Designers, agencies, anyone who needs to plan websites before building</p>
      </div>

      <div class="grid md:grid-cols-2 gap-4">
        {dealData.features.map(feature => (
          <div class="flex items-start gap-3 bg-gray-50 p-4 border-[3px] border-gray-200">
            <svg class="w-6 h-6 text-teal-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 font-medium">{feature}</span>
          </div>
        ))}
      </div>

      <!-- FINAL CTA -->
      <div class="text-center mt-12">
        <a href={dealData.ctaUrl} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-10 py-5 bg-teal-600 text-white font-black text-xl shadow-[0_8px_0_0_rgba(13,148,136,0.3)] hover:shadow-[0_10px_0_0_rgba(13,148,136,0.4)] hover:-translate-y-1 transition-all border-b-4 border-teal-800">
          <span>Start My Free Wireframing →</span>
        </a>
        <p class="text-xs text-gray-500 mt-4 max-w-md mx-auto">
          {dealData.affiliateNote}
        </p>
      </div>
    </div>
  </section>

  <!-- COMPARE -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-2xl font-black text-gray-900 mb-4">Need a Builder Too?</h2>
      <p class="text-gray-600 mb-8">Relume plans your site. These builders build it:</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/deals/framer" class="px-6 py-3 border-[3px] border-teal-600 text-teal-600 font-black hover:bg-teal-600 hover:text-white transition-colors">
          Framer Deal →
        </a>
        <a href="/deals/10web" class="px-6 py-3 border-[3px] border-teal-600 text-teal-600 font-black hover:bg-teal-600 hover:text-white transition-colors">
          10Web Deal →
        </a>
      </div>
    </div>
  </section>
</Layout>
