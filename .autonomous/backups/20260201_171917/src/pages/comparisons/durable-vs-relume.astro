            <div class="text-right">
              <div class="text-4xl font-black text-teal-600">{tools.relume.score}</div>
              <div class="text-sm text-gray-600">/ 10</div>
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-4 my-6">
            <div>
              <p class="text-xs font-bold text-green-700 uppercase mb-2">‚úì Strengths</p>
              <ul class="text-sm text-gray-700 space-y-1">
                {tools.relume.pros.map(pro => <li key={pro}>‚Ä¢ {pro}</li>)}
