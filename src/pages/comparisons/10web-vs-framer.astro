---
import Layout from '../../layouts/Layout.astro';
import ComparisonAffiliateCTAs from '../../components/ComparisonAffiliateCTAs.astro';
import StructuredData from '../../components/StructuredData.astro';

const comparisonData = {
  title: '10Web AI vs Framer AI',
  description: '10Web vs Framer: Which AI website builder is better? Compare WordPress power vs design quality for modern websites.',
  date: 'January 2025'
};

const tools = [
  {
    name: '10Web',
    score: 8.0,
    ease: 8.0,
    wordpress: 9.5,
    design: 8.0,
    price: '$10-20/mo',
    aiFeatures: ['AI builder', 'AI content', 'e-commerce ready'],
    bestFor: 'WordPress users',
    strengths: ['WordPress native', 'E-commerce', 'AI generation', 'Affordable'],
    weaknesses: [' tied to WordPress', 'Design limitations', 'Can get slow']
  },
  {
    name: 'Framer',
    score: 8.8,
    ease: 7.5,
    design: 9.5,
    features: 8.5,
    price: '$15-35/mo',
    aiFeatures: ['AI site generation', 'AI copywriting', 'AI styling'],
    bestFor: 'Design quality',
    strengths: ['Beautiful designs', 'Fast performance', 'Code export', 'Modern'],
    weaknesses: ['No native e-commerce', 'Learning curve', 'No WordPress']
  }
];
---

<Layout title={`${comparisonData.title}: Which is Better?`} description={comparisonData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Is 10Web or Framer better for website building?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Framer (8.8/10) has superior designs (9.5/10) and performance. 10Web (8.0/10) is WordPress-native with better e-commerce. 10Web is ideal if you want WordPress with AI assistance. Framer is better for marketing sites, portfolios, and design-focused projects. Choose 10Web for WordPress/e-commerce needs. Choose Framer for design impact and speed."
        }
      },
      {
        "@type": "Question",
        "name": "Can I export code from 10Web or Framer?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Framer offers code export on paid plans ($15+/mo). Export clean React, HTML, and CSS. 10Web does NOT offer code export - your site is tied to WordPress hosting. If you care about portability, Framer wins. For WordPress users who plan to stay on the platform, this doesn't matter."
        }
      },
      {
        "@type": "Question",
        "name": "Which has better e-commerce, 10Web or Framer?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "10Web is better for e-commerce. Built on WooCommerce with full product management, payment processing, and inventory features. Framer has no native e-commerce and requires third-party integrations like Snipcart or Gumroad. For online stores, 10Web is the clear winner. For marketing and portfolio sites, Framer excels."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">COMPARISON</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{comparisonData.title}</h1>
      <p class="text-xl text-gray-600">{comparisonData.description}</p>
    </div>

    <!-- Quick Answer -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Answer</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Framer wins on design and performance.</strong> 9.5/10 design quality, fast loading.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>10Web wins on WordPress and e-commerce.</strong> Native WordPress, full WooCommerce.
      </p>
      <p class="text-gray-700">
        <strong>Choose Framer if:</strong> You want beautiful designs and don't need WordPress.
      </p>
      <p class="text-gray-700">
        <strong>Choose 10Web if:</strong> You need WordPress or e-commerce functionality.
      </p>
    </div>

    <!-- Score Comparison -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Score Comparison</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {tools.map(tool => (
          <div class="border-2 border-gray-200 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">{tool.name}</h3>
            <div class="text-4xl font-black text-orange-600 mb-4">{tool.score}/10</div>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span>Ease of Use</span>
                <span class="font-semibold">{tool.ease}/10</span>
              </div>
              <div class="flex justify-between">
                <span>Design Quality</span>
                <span class="font-semibold">{tool.design}/10</span>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <div class="text-sm text-gray-600">AI Features</div>
              <div class="text-sm font-semibold text-gray-900">{tool.aiFeatures.join(', ')}</div>
              <div class="text-sm text-gray-600 mt-2">Price</div>
              <div class="text-lg font-bold text-gray-900">{tool.price}</div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Feature Table -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Feature Comparison</h2>
