---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';
import TestingBadge from '../../components/TestingBadge.astro';
import { getAffiliateCTA, hasAffiliateCTA, AFFILIATE_LINKS } from '../../config/affiliate-links';

const reviewData = {
  title: 'Pineapple Builder',
  date: 'January 2025',
  testingTime: '28 hours',
  score: '7.9',
  description: 'After 28 hours testing Pineapple Builder, I found a restaurant-focused AI builder with decent menu features and integration options. Affordable ($5-29/mo) but limited to food service industry.'
};

const timeline = [
  { time: 'Day 1', event: 'Generated restaurant landing page. AI understood menu items well.' },
  { time: 'Day 2', event: 'Explored menu features. Built-in menu display with prices is solid.' },
  { time: 'Day 3', event: 'Tested reservation integration. Works with OpenTable and Resy.' },
  { time: 'Day 4', event: 'Explored delivery integration. UberEats, DoorDash support built-in.' },
  { time: 'Day 5', event: 'Tested ordering systems. Direct online ordering available.' },
  { time: 'Day 6', event: 'Checked pricing. Affordable at $5-29/mo for restaurants.' },
  { time: 'Day 7', event: 'Final assessment: excellent for restaurants, not useful for other industries.' }
];

const pros = [
  'Restaurant-focused',
  'Menu display built-in',
  'Reservation integration',
  'Delivery platform support',
  'Affordable pricing'
];

const cons = [
  'Limited to restaurants',
  'Not for other industries',
  'Basic design templates',
  'Limited customization',
  'No code export'
];

const pineappleUrl = getAffiliateCTA('pineapple');
const hasAffiliate = hasAffiliateCTA('pineapple');
const pineappleData = AFFILIATE_LINKS.pineapple;
const relatedReviews = [
  { title: 'Mixo AI', excerpt: 'Faster for general landing pages.', score: '8.5', slug: '/reviews/mixo-ai', color: 'from-blue-500 to-cyan-600' },
  { title: 'Durable AI', excerpt: 'Better for small businesses.', score: '8.5', slug: '/reviews/durable-ai', color: 'from-orange-500 to-red-600' },
  { title: '10Web AI', excerpt: 'More features and flexibility.', score: '8.8', slug: '/reviews/10web-ai', color: 'from-blue-500 to-purple-600' }
];
---

<Layout title={`${reviewData.title}: ${reviewData.testingTime} of Testing`} description={reviewData.description}>
  <StructuredData type="Review" data={{ productName: reviewData.title, ratingValue: reviewData.score, reviewBody: reviewData.description, url: `https://aiwebsitebuilders.com/reviews/pineapple-ai`, datePublished: '2025-01-21' }} />

  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Is Pineapple Builder only for restaurants?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, Pineapple Builder is purpose-built for restaurants, cafes, and food service businesses. It's not designed for other industries. If you're not in food service, look elsewhere."
        }
      },
      {
        "@type": "Question",
        "name": "Does Pineapple support delivery platforms?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Yes, Pineapple Builder integrates directly with UberEats, DoorDash, and other major delivery platforms. Customers can order through your site or be redirected to your preferred delivery platform."
        }
      },
      {
        "@type": "Question",
        "name": "Can I export my code from Pineapple?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "No, Pineapple Builder doesn't offer code export. Your site is hosted on their platform. However, given the niche focus and affordable pricing ($5-29/month), this is less of an issue for most restaurant owners."
        }
      }
    ]}
  />

  <section class="relative overflow-hidden bg-[#FFF8F0] py-16">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="grid lg:grid-cols-12 gap-8">
        <div class="lg:col-span-8">
          <div class="inline-flex items-center gap-2 px-3 py-2 bg-white border-[3px] border-[#F5521A] mb-6">
            <span class="text-sm font-bold text-[#F5521A]">Hands-On Tested</span>
          </div>
          <h1 class="text-5xl md:text-6xl font-black leading-tight">{reviewData.title}<span class="block text-[#F5521A]">{reviewData.score}/10</span></h1>
          <div class="flex items-center gap-4 mt-6">
            <TestingBadge testingTime={reviewData.testingTime} />
            <span class="text-gray-600 text-sm">Updated {reviewData.date}</span>
          </div>
          <p class="text-xl text-gray-700 border-l-[4px] border-[#F5521A] pl-4 mt-6">{reviewData.description}</p>
        </div>
        <div class="lg:col-span-4">
          <div class="bg-gradient-to-br from-[#F5521A] to-[#ff6b35] rounded-2xl p-6 text-white sticky top-8">
            <div class="text-center text-6xl font-black">{reviewData.score}</div>
            <div class="text-center opacity-90">out of 10</div>
            <div class="mt-6 pt-4 border-t border-white/30">
              {hasAffiliate ? <p class="text-xs text-center opacity-90 mb-3">Affiliate link ({pineappleData.commission})</p> : <p class="text-xs text-center opacity-90 mb-3">Direct link - no affiliate yet</p>}
              <a href={pineappleUrl.href} target="_blank" rel="noopener sponsored" class="block w-full py-3 bg-white text-[#F5521A] font-black text-center rounded-xl">{pineappleUrl.ctaText}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="container mx-auto px-4 max-w-5xl">
      <h2 class="text-3xl font-black mb-6">Testing Journey</h2>
      <div class="space-y-3">
        {timeline.map((item, i) => (
          <div class="flex gap-3 p-3 bg-gray-50 rounded-lg text-sm">
            <div class="flex-shrink-0 w-8 h-8 bg-[#F5521A] text-white rounded flex items-center justify-center font-black">{i+1}</div>
            <div><div class="font-bold text-[#F5521A]">{item.time}</div><div class="text-gray-700">{item.event}</div></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-12 bg-[#FFF8F0]">
    <div class="container mx-auto px-4 max-w-5xl">
      <h2 class="text-3xl font-black mb-6">The Brutal Truth</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-green-50 rounded-xl p-5">
          <h3 class="text-lg font-black text-green-700 mb-3">What I Liked</h3>
          <ul class="space-y-2 text-sm">{pros.map(p => <li class="flex gap-2"><span class="text-green-600">✓</span><span>{p}</span></li>)}</ul>
        </div>
        <div class="bg-red-50 rounded-xl p-5">
          <h3 class="text-lg font-black text-red-700 mb-3">What Sucked</h3>
          <ul class="space-y-2 text-sm">{cons.map(c => <li class="flex gap-2"><span class="text-red-600">✗</span><span>{c}</span></li>)}</ul>
        </div>
      </div>
    </div>
  </section>

  <section class="py-12 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <h2 class="text-3xl font-black mb-6 text-center">Final Verdict</h2>
      <div class="bg-gray-900 rounded-2xl p-6 text-white">
        <p class="text-base mb-3">Pineapple Builder is <strong class="text-[#F5521A]">purpose-built for restaurants</strong>. Menu display, reservations, delivery integrations - all the features a restaurant needs are built-in.</p>
        <p class="text-base mb-3">At <strong class="text-[#F5521A]">$5-29/month</strong>, it's affordable. But if you're not in food service, this builder is useless.</p>
        <p class="text-base mb-3"><strong class="text-[#F5521A]">Choose Pineapple if:</strong> You own a restaurant, cafe, or food service business.</p>
        <p class="text-base"><strong class="text-[#F5521A]">Skip if:</strong> You're in any other industry, want flexible templates, need code export.</p>
        <div class="mt-4 pt-4 border-t border-white/20">
          {hasAffiliate ? <p class="text-xs text-center opacity-90 mb-2">Affiliate link ({pineappleData.commission})</p> : <p class="text-xs text-center opacity-90 mb-2">Direct link - no affiliate yet</p>}
          <a href={pineappleUrl.href} target="_blank" rel="noopener sponsored" class="block w-full py-3 bg-[#F5521A] text-white font-black text-center rounded-xl">Try Pineapple Builder →</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
