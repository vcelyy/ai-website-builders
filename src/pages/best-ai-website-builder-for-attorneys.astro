  <!-- THE HARD TRUTH: ATTORNEY WEBSITE MISTAKES -->
  <section class="py-16 bg-gradient-to-br from-slate-50 to-zinc-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-5xl">
      <div class="mb-10">
        <span class="inline-block px-3 py-1 bg-red-100 text-red-700 font-black text-xs uppercase tracking-wider mb-4">THE HARD TRUTH</span>
