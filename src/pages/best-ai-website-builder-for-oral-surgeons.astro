    name: 'Webflow AI',
    rating: '9.1',
    badge: 'Best for Procedures',
    verdict: 'Custom procedure pages that explain complex treatments, flexible CMS for case galleries, professional designs that build patient confidence',
    pros: ['Custom procedure pages', 'Case study CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
  },
  {
    name: 'Squarespace AI',
    rating: '8.9',
    badge: 'Best for Trust',
    verdict: 'Professional healthcare templates that communicate expertise, integrated consultation forms for patient inquiries',
    pros: ['Medical templates', 'Consultation forms', 'SSL included', 'Blog for patient education', '$23-59/month'],
    cons: ['Template limits', 'Less procedure flexibility', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Wix AI',
    rating: '8.5',
    badge: 'Easiest Setup',
    verdict: 'Quick surgery sites with procedure info, Wix Bookings for consultations, healthcare templates',
    pros: ['Healthcare templates', 'Procedure pages', 'Easy to use', 'Mobile app', '$17-46/month'],
    cons: ['Performance issues', 'Template lock-in', 'Monthly pricing'],
    cta: 'Try Wix'
  }
];
