  {
    name: 'Wix AI',
    rating: '8.3',
    badge: 'Easiest Setup',
    verdict: 'Quick artisan site with glasswork displays and contact forms',
    pros: ['Easy setup', 'Gallery features', 'Commission forms', 'Mobile app', '$17-46/month'],
