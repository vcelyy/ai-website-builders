            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">{tool.pros.slice(0, 5).map(pro => <li class="flex items-start gap-2"><span class="text-green-600 mt-0.5">‚úì</span><span>{pro}</span></li>)}</ul>
