  <!-- REAL FRAMER VS MIXO USER STORIES -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 mb-16">
    <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-[3px] border-violet-400 p-6 md:p-8">
