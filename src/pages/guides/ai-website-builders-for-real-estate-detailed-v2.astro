        {mlsIntegration.map(option => (
          <div class="border border-purple-200 bg-purple-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{option.option}</h3>
            <p class="text-gray-700 mb-2">{option.description}</p>
