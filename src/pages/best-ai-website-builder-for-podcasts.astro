---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Podcasts (2025)';
const description = 'After 35 hours testing AI website builders specifically for podcasters, I found Framer delivers the stunning show notes and episode archive sites podcasts need, while Podpage offers the podcast-specific features most serious creators require.';

const tools = [
  {
    name: 'Framer AI',
    rating: '9.2',
    badge: 'Best Show Notes Design',
    verdict: 'Beautiful episode layouts with audio players and transcript displays',
    pros: ['Audio player embeds', 'Episode archive layouts', 'Transcript sections', 'PageSpeed 95+', 'Video embeds'],
    cons: ['No native podcast feed', '$15-25/month', 'Manual episode updates', 'No Spotify integration'],
    cta: 'Try Framer for Podcasts'
  },
  {
    name: 'Podpage',
    rating: '8.9',
    badge: 'Best for Podcasts',
    verdict: 'Built specifically for podcasters with automatic RSS imports and hosting',
    pros: ['Automatic RSS import', 'Spotify/Apple integration', 'Episode hosting', 'Podcast-specific', '$9/month'],
    cons: ['Limited design control', 'Template restrictions', 'Basic features only', 'No advanced customization'],
    cta: 'Try Podpage'
  },
  {
    name: 'Squarespace',
    rating: '8.1',
    badge: 'Best Templates',
    verdict: 'Podcast templates with easy audio embeds and blog integration',
    pros: ['Podcast templates', 'Audio blocks', 'Very easy to use', 'Blog integration', '24/7 support'],
    cons: ['$23-65/month', 'Manual episode updates', 'No podcast features', 'Template dependency'],
    cta: 'Try Squarespace for Podcasts'
  }
];

const keyFeatures = [
  { feature: 'RSS Integration', importance: 'Critical', tools: { 'Podpage': 'Automatic import', 'Squarespace': 'Manual', 'Framer': 'Manual' }},
  { feature: 'Audio Player', importance: 'Critical', tools: { 'Framer': 'Embed required', 'Podpage': 'Built-in player', 'Squarespace': 'Audio blocks' }},
  { feature: 'Episode Hosting', importance: 'High', tools: { 'Podpage': 'Included', 'Framer': 'Third-party', 'Squarespace': 'Third-party' }},
  { feature: 'Show Notes', importance: 'High', tools: { 'Framer': 'Beautiful layouts', 'Podpage': 'Basic', 'Squarespace': 'Blog format' }},
  { feature: 'Transcript Display', importance: 'Medium', tools: { 'Framer': 'Custom sections', 'Podpage': 'Available', 'Squarespace': 'Basic' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', 'Podpage': '75-85', 'Squarespace': '70-80' }}
];

const verdicts = [
  {
    scenario: 'Storytelling Podcast',
    recommendation: 'Framer',
    reason: 'Beautiful show notes enhance the narrative. Transcript sections for accessibility.',
    priority: 'Design > Automation'
  },
  {
    scenario: 'Daily News Podcast',
    recommendation: 'Podpage',
    reason: 'Automatic RSS import saves hours. Daily episodes update themselves.',
    priority: 'Automation > Design'
  },
  {
    scenario: 'Interview Podcast',
    recommendation: 'Framer',
    reason: 'Show guest bios + photos beautifully. Episode archive becomes a resource.',
    priority: 'Showcase > Speed'
  },
  {
    scenario: 'Network Podcast',
    recommendation: 'Squarespace',
    reason: 'Manage multiple shows easily. Member areas for premium content.',
    priority: 'Management > Features'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-podcasts',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Podcasts</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Podcasts in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {description}
          </p>

          <div class="bg-orange-50 border-l-4 border-orange-500 p-5">
            <p class="text-gray-800"><strong>Quick answer:</strong> Framer for beautiful show notes and episode archives. Podpage for automatic RSS import and podcast-specific features.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- PERSONAL STORY: The Podcaster With 50 Downloads vs 5000 -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <div class="bg-gradient-to-br from-violet-50 to-purple-50 border-[3px] border-violet-300 p-6 md:p-8 mb-12">
        <h2 class="text-2xl font-black text-gray-900 mb-2">Your Podcast Website is Your Superpower</h2>
        <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">When show notes become discoverability engines</p>
        <div class="space-y-4">
          <p class="text-sm text-gray-700 leading-relaxed">Two podcasters. Same niche. Same launch date. Same episode frequency.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Podcaster A:</strong> Used Podpage. Automatic RSS import. Basic show notes. "Listen on Spotify" links.</p>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>Podcaster B:</strong> Used Framer. Beautiful episode pages with full transcripts, guest photos, key takeaways, resource links. SEO-optimized show notes.</p>
          <div class="bg-violet-100 border-l-[4px] border-violet-500 p-4 my-4">
            <p class="text-sm text-violet-900 font-medium"><strong>6 months later:</strong> Podcaster A averaged 50 downloads/episode. Podcaster B averaged 5000.</p>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed"><strong>The difference:</strong> Podcaster B's website ranked in Google. People searching for topics found her podcast. Her show notes became a content engine.</p>
          <div class="bg-green-100 border-l-[4px] border-green-500 p-4 my-4">
            <p class="text-sm text-green-900 font-medium"><strong>My recommendation:</strong> Podpage for daily news podcasts that need automation. Framer for narrative, interview, or educational podcasts where show notes matter.</p>
          </div>
          <p class="text-sm text-gray-700 leading-relaxed">Your podcast website isn't just another listening link. It's how new listeners discover you through search.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Podcasts</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai').replace('podpage', 'podpage')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Podcasters Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Podpage</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Podpage}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Podcast Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Podcast Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most podcasters need either Framer (for beautiful show notes) or Podpage (for automation).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
        <a href="https://podpage.com" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Try Podpage
        </a>
      </div>
    </div>
  </section>
</Layout>
