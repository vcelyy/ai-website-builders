    pros: ['Built-in e-commerce', 'Inventory management', 'Size guides', 'App ecosystem', '$29-299/month'],
    cons: ['Transaction fees', 'Template dependency', 'Monthly costs'],
    cta: 'Try Shopify'
  },
  {
    name: 'Squarespace AI',
    rating: '8.9',
    badge: 'Best for Branding',
    verdict: 'Beautiful jewelry templates with product showcases and custom order forms',
    pros: ['Jewelry templates', 'Product displays', 'SSL included', 'Blog for styling tips', '$23-59/month'],
    cons: ['Template limits', 'Basic e-commerce', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Webflow AI',
    rating: '8.6',
    badge: 'Best for Custom',
    verdict: 'Custom jewelry portfolio with collection CMS and wholesale integration',
    pros: ['Custom portfolio', 'Collection CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
