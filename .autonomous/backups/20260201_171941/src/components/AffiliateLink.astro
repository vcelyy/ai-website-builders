---
/**
 * Simple Affiliate Link Component
 * Inline link for affiliate links within content
 */

interface Props {
  href: string;
  className?: string;
}

const { href, className = '' } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer" class={`text-purple-600 hover:text-purple-800 underline ${className}`}>
  <slot />
</a>
