    <!-- Required Features -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Required Photographer Features</h2>

      <div class="space-y-4">
        {features.map(feature => (
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0 w-8 h-8 bg-orange-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                !
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{feature.feature}</h3>
                <p class="text-gray-600 text-sm">{feature.importance}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{feature.description}</p>
            <div>
              <p class="text-sm text-gray-600 mb-1">Tips:</p>
              <ul class="text-sm text-gray-700">
                {feature.tips.map(tip => (
                  <li>• {tip}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Gallery Optimization -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Gallery Optimization Techniques</h2>

      <div class="space-y-4">
        {galleryOptimization.map(tactic => (
          <div class="border border-green-200 bg-green-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{tactic.tactic}</h3>
            <p class="text-gray-700 mb-2">{tactic.description}</p>
            <div class="grid md:grid-cols-2 gap-2">
              <p class="text-sm text-green-700"><strong>Benefit:</strong> {tactic.benefit}</p>
              <p class="text-sm text-green-700"><strong>How:</strong> {tactic.implementation}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Client Workflow -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Client Workflow Tools</h2>

      <div class="space-y-4">
        {clientWorkflow.map(stage => (
          <div class="border border-purple-200 bg-purple-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{stage.stage}</h3>
            <p class="text-gray-700 mb-2"><strong>Tools:</strong> {stage.tools.join(', ')}</p>
