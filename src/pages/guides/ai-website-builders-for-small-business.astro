---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Small Business',
  description: 'Top AI website builders for small businesses. Compare Wix, Squarespace, Durable, Framer, and more for professional websites, e-commerce, and local SEO.',
  date: 'January 2025'
};

const smallBusinessBuilders = [
  {
    name: 'Wix',
    score: 8.2,
    bestFor: 'Most features + flexibility',
    startingPrice: '$16/mo',
    features: ['500+ templates', 'Wix AI', 'Marketing tools', 'App market'],
    pros: ['Most features', 'Mature platform', 'Good AI', 'Flexible'],
    cons: ['Can get expensive', 'No code export', 'PageSpeed issues']
  },
  {
    name: 'Squarespace',
    score: 8.4,
    bestFor: 'Professional designs',
    startingPrice: '$23/mo',
    features: ['Beautiful templates', 'Blueprint AI', 'E-commerce', 'Marketing'],
    pros: ['Professional templates', 'Good AI', 'Polished results'],
    cons: ['Expensive', 'Steep learning', 'No code export']
  },
  {
    name: 'Durable',
    score: 8.5,
    bestFor: 'Fast launch + CRM',
    startingPrice: '$15/mo',
    features: ['AI Copywriter', 'Built-in CRM', 'Fast generation'],
    pros: ['Built-in CRM', 'Excellent AI copy', 'Fast', 'Affordable'],
    cons: ['Newer platform', 'Limited templates', 'No code export']
  },
  {
    name: 'Framer',
    score: 8.8,
    bestFor: 'Design quality + speed',
    startingPrice: '$15/mo',
    features: ['Modern templates', 'Code export', 'Fast performance'],
    pros: ['Gorgeous designs', 'Code export', 'Fast loading'],
    cons: ['Learning curve', 'No native e-commerce']
  },
  {
    name: 'Hostinger',
    score: 7.8,
    bestFor: 'Budget-conscious',
    startingPrice: '$2.99/mo',
    features: ['AI tools', 'Hosting included', 'E-commerce'],
    pros: ['Very affordable', 'Good AI features', 'Fast'],
    cons: ['Template quality', 'No code export', 'Basic blog']
  }
];
---

<Layout title={guideData.title} description={guideData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "Which AI builder is best for small business?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Wix (8.2/10) offers the most features and flexibility for $16/month. Squarespace (8.4/10) delivers the most professional designs for $23/month. Durable (8.5/10) is excellent for fast launch with built-in CRM for $15/month. Framer (8.8/10) offers the best design quality and code export for $15/month. Choose based on your priorities: features (Wix), design (Squarespace/Framer), or speed + CRM (Durable)."
        }
      },
      {
        "@type": "Question",
        "name": "Do small businesses need code export?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Not necessarily. Most small businesses are fine with hosted platforms. Code export only matters if: (1) You plan to switch platforms eventually, (2) You need custom functionality, or (3) You want full control. For most small businesses, hosted builders like Wix, Squarespace, or Durable are perfectly adequate. Only consider Framer or Webflow if code export matters to you."
        }
      },
      {
        "@type": "Question",
        "name": "What should a small business website include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Essential pages: Homepage (clear value proposition), About (your story), Services/Products (what you offer), Testimonials (social proof), Contact (how to reach you). Essential features: Mobile-responsive design, fast loading, contact form, Google Maps integration, social media links, basic SEO. Optional but valuable: Blog for content marketing, online booking, e-commerce for selling products. AI builders can generate all of this in minutes."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{guideData.title}</h1>
      <p class="text-xl text-gray-600">{guideData.description}</p>
    </div>

    <!-- Quick Answer -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Top Recommendations</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Framer (8.8/10) - Best Overall:</strong> Gorgeous designs, code export, fast performance. $15/month.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Squarespace (8.4/10) - Professional:</strong> Beautiful templates, polished results. Great for portfolios and service businesses.
      </p>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Durable (8.5/10) - Fast + CRM:</strong> Launch in minutes with built-in customer management. $15/month.
      </p>
      <p class="text-gray-700">
        <strong>Wix (8.2/10) - Most Flexible:</strong> 500+ templates, every feature you could need. $16/month.
      </p>
    </div>

    <!-- Comparison Table -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Quick Comparison</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse border border-gray-200">
          <thead>
            <tr class="bg-gray-50">
              <th class="border border-gray-200 px-4 py-3 text-left">Builder</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Score</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Best For</th>
              <th class="border border-gray-200 px-4 py-3 text-center">Price</th>
              <th class="border border-gray-200 px-4 py-3 text-center">E-commerce</th>
            </tr>
          </thead>
          <tbody>
            {smallBusinessBuilders.map(builder => (
              <tr>
                <td class="border border-gray-200 px-4 py-3 font-semibold">{builder.name}</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.score}/10</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.bestFor}</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.startingPrice}</td>
                <td class="border border-gray-200 px-4 py-3 text-center">{builder.name === 'Framer' ? 'No (3rd party)' : 'Yes'}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Essential Pages -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Essential Pages for Small Business</h2>

      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Must-Have Pages</h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Homepage:</strong> Clear headline about what you do and who you serve</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>About:</strong> Your story, team, and what makes you different</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Services/Products:</strong> Detailed descriptions of what you offer</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Contact:</strong> Phone, email, form, and physical address</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Testimonials:</strong> Social proof from happy customers</span></li>
          </ul>
        </div>

        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">Optional but Valuable</h3>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Blog:</strong> Content marketing and SEO</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>FAQ:</strong> Answer common customer questions</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Case Studies:</strong> Detailed success stories</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Online Booking:</strong> Schedule appointments</span></li>
            <li class="flex items-start gap-3"><span class="text-orange-600 mt-1">●</span><span><strong>Store:</strong> Sell products online</span></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Detailed Reviews -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Builder Reviews</h2>

      {smallBusinessBuilders.map(builder => (
        <div class="border border-gray-200 rounded-lg p-6 mb-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-2xl font-bold text-gray-900">{builder.name}</h3>
              <p class="text-gray-600">{builder.score}/10 • {builder.startingPrice}</p>
              <p class="text-orange-600 mt-1 font-semibold">{builder.bestFor}</p>
            </div>
            <a href={`/reviews/${builder.name.toLowerCase()}-ai`}
               class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg font-semibold text-sm">
              Read Review →
            </a>
          </div>
          <div class="mb-4">
            <p class="text-sm text-gray-600 mb-2">Key Features:</p>
            <p class="text-gray-700">{builder.features.join(', ')}</p>
          </div>
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <h4 class="font-semibold text-green-700 mb-2">Pros</h4>
              <ul class="space-y-1 text-sm">
                {builder.pros.map(pro => <li class="flex items-start gap-2"><span class="text-green-500">✓</span><span>{pro}</span></li>)}
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-red-700 mb-2">Cons</h4>
              <ul class="space-y-1 text-sm">
                {builder.cons.map(con => <li class="flex items-start gap-2"><span class="text-red-500">✗</span><span>{con}</span></li>)}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Tips Section -->
    <div class="bg-blue-50 border-l-4 border-blue-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Small Business Website Tips</h2>
      <ul class="space-y-3 text-gray-700">
        <li><strong>Keep it simple:</strong> Focus on essential pages first. You can always add more later.</li>
        <li><strong>Mobile-first:</strong> Most traffic is mobile. Ensure your site looks great on phones.</li>
        <li><strong>Fast loading:</strong> Every second counts. Optimize images and use fast hosting.</li>
        <li><strong>Clear CTAs:</strong> Tell visitors exactly what to do: "Call Now", "Get a Quote", "Book Appointment".</li>
        <li><strong>Local SEO:</strong> Claim your Google Business Profile. Include your address and phone number.</li>
        <li><strong>Regular updates:</strong> Keep content fresh. Update testimonials, add new photos, publish blog posts.</li>
        <li><strong>Analytics:</strong> Install Google Analytics. Track what's working and what isn't.</li>
      </ul>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">All recommended builders offer free trials. Test a few to find your favorite.</p>
      <a href="/reviews" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        See All Reviews →
      </a>
    </div>
  </div>
</Layout>
