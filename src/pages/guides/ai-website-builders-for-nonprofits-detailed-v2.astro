---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const guideData = {
  title: 'Best AI Website Builders for Nonprofits & Charities',
  description: 'Top AI website builders for nonprofits, charities, and organizations. Compare donation tools, volunteer management, and mission communication.',
  date: 'January 2025'
};

const recommendations = [
  {
    nonprofitType: 'Small Organizations',
    topPick: 'Mixo',
    reason: 'Affordable ($9/mo), mission focus, donation links, volunteer information',
    alternatives: ['Wix (features)', 'Squarespace (polished)']
  },
  {
    nonprofitType: 'Established Nonprofits',
    topPick: 'Squarespace',
    reason: 'Professional presentation, donation integration, event pages, credibility',
    alternatives: ['Webflow (custom)', 'Framer (modern)']
  },
  {
    nonprofitType: 'Foundations & Grantmakers',
    topPick: 'Webflow',
    reason: 'Powerful CMS for grants, programs, recipient profiles, complex content',
    alternatives: ['10Web + WordPress', 'Squarespace']
  },
  {
    nonprofitType: 'Cause-Focused Campaigns',
    topPick: 'Framer',
    reason: 'Modern aesthetic (9.5/10), campaign landing pages, impact visuals, storytelling',
    alternatives: ['Mixo (budget)', 'Webflow (CMS)']
  }
];

const features = [
  {
    feature: 'Donation Integration',
    description: 'Donate buttons, recurring giving, campaign-specific fundraising, payment processing',
    importance: 'Essential for nonprofits',
    builders: ['Stripe integration', 'PayPal buttons', 'Donation platforms']
  },
  {
    feature: 'Volunteer Recruitment',
    description: 'Volunteer opportunities, sign-up forms, impact information, get involved',
    importance: 'Essential',
    builders: ['Form builders', 'Volunteer calendars', 'Opportunity listings']
  },
  {
    feature: 'Mission & Impact Communication',
    description: 'Your story, mission statement, impact metrics, annual reports',
    importance: 'Essential',
    builders: ['About pages', 'Impact dashboards', 'Story sections']
  },
  {
    feature: 'Event & Campaign Pages',
    description: 'Fundraising events, campaigns, galas, volunteer drives',
    importance: 'Important for engagement',
    builders: ['Event pages', 'Campaign sites', 'Registration forms']
  }
];

const trustElements = [
  {
    element: 'Financial Transparency',
    description: 'Annual reports, financial statements, overhead breakdown, fund allocation',
    importance: 'Critical for donor trust'
  },
  {
    element: 'Impact Stories',
    description: 'Beneficiary stories, program outcomes, measurable results, testimonials',
    importance: 'Essential for donor engagement'
  },
  {
    element: 'Team & Board Information',
    description: 'Staff profiles, board members, leadership credentials, governance',
    importance: 'Important for credibility'
  },
  {
    element: 'Program Details',
    description: 'What you do, who you serve, how programs work, success metrics',
    importance: 'Essential'
  }
];

const tips = [
  {
    tip: 'Donate button prominent',
    explanation: 'Clear call-to-action above fold. Make it easy for supporters to give immediately.'
  },
  {
    tip: 'Show impact, not just activities',
    explanation: 'Lives changed, communities served, problems solved. Impact inspires giving.'
  },
  {
    tip: 'Tell real stories',
    explanation: 'Beneficiary stories (with permission), volunteer experiences, community impact. Stories connect.'
  },
  {
    tip: 'Financial transparency builds trust',
    explanation: 'Show where money goes. Overhead, programs, administration. Transparency attracts donors.'
  },
  {
    tip: 'Mobile optimize for donors',
    explanation: 'Many donors give on phones. Perfect mobile donation experience is essential.'
  },
  {
    tip: 'Multiple giving options',
    explanation: 'One-time, monthly, tribute gifts, specific campaigns. Options increase giving.'
  },
  {
    tip: 'Email capture critical',
    explanation: 'Build donor list from day one. Email list = recurring donations, not just one-time gifts.'
  },
  {
    tip: 'Volunteer pathways visible',
    explanation: 'How to get involved beyond money. Time, skills, advocacy. Multiple engagement paths.'
  },
  {
    tip: 'Visual storytelling matters',
    explanation: 'Photos of your work, beneficiaries, volunteers in action. Visuals build emotional connection.'
  },
  {
    tip: 'Keep site current and active',
    explanation: 'Fresh content shows active organization. Stale site suggests inactive nonprofit.'
  }
];
---

<Layout title={guideData.title} description={guideData.description}>
  <!-- FAQ Structured Data -->
  <StructuredData
    type="FAQPage"
    data={[
      {
        "@type": "Question",
        "name": "What is the best AI website builder for nonprofits?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "For small nonprofits and charities, Mixo ($9/month) is the best choice with affordable pricing, mission-focused templates, donation links, and volunteer information pages perfect for organizations with limited budgets. Squarespace excels for established nonprofits wanting professional presentation, donation integration, event pages, and credibility that attracts donors and supporters. Webflow serves foundations and grantmakers needing powerful CMS for grants programs, recipient profiles, and complex content management. Framer works well for cause-focused campaigns needing modern aesthetic (9.5/10), campaign landing pages, impact visuals, and storytelling focus. For nonprofit websites, prioritize: clear donation buttons and call-to-action, mission and impact communication, financial transparency for donor trust, volunteer recruitment and involvement opportunities, program information showing what you do, storytelling with real impact, and mobile optimization for donors on phones."
        }
      },
      {
        "@type": "Question",
        "name": "Do nonprofits need custom websites or are AI builders sufficient?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "AI website builders are absolutely sufficient for 95% of nonprofits. Modern AI builders create professional nonprofit websites with donation integration, volunteer forms, mission communication, impact storytelling, and all essential features. Donation processing through Stripe, PayPal, and other platforms integrates seamlessly with AI builders. Consider custom development only if you have: very complex donor management systems, custom fundraising platforms, intricate volunteer coordination needs, or substantial grant funding for website development. For small and medium nonprofits, charities, and foundations, AI builders provide professional results that build donor credibility at a fraction of the cost of custom development. Your donors care about your mission, impact, and trustworthiness - not website technology. Focus on: clear mission communication, transparency, impact stories, and easy donation processes. AI builders handle all of this beautifully while preserving funds for your mission."
        }
      },
      {
        "@type": "Question",
        "name": "What features should nonprofit websites include?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Nonprofit websites need: (1) Clear donation button above fold - immediate call-to-action for giving, (2) Mission statement and what you do - your purpose, programs, who you serve, (3) Impact and results - lives changed, communities served, measurable outcomes, (4) Financial transparency - annual reports, where money goes, overhead breakdown, (5) Volunteer information and sign-up - how to get involved beyond giving, (6) Programs and services detailed - what you offer and how it works, (7) Team and board information - leadership, credentials, governance, (8) Success stories and testimonials - beneficiaries, volunteers, donors, (9) Events and campaigns - fundraising drives, galas, activities, (10) Contact information and email newsletter signup, (11) Mobile-optimized donation experience, (12) Content showing current, active organization. Essential: make donating easy, show impact transparently, build trust through communication. Your website exists to inspire support and involvement in your mission."
        }
      }
    ]}
  />

  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">GUIDE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">{guideData.title}</h1>
      <p class="text-xl text-gray-600">{guideData.description}</p>
    </div>

    <!-- Quick Overview -->
    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Best by Nonprofit Type</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Small Organizations:</strong> Mixo ($9/mo)</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Established Nonprofits:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Foundations:</strong> Webflow</p>
          <p class="text-gray-700 text-lg"><strong>Campaigns:</strong> Framer (9.5/10)</p>
        </div>
        <div>
          <p class="text-gray-700 text-lg mb-2"><strong>Best Budget:</strong> Mixo</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Most Professional:</strong> Squarespace</p>
          <p class="text-gray-700 text-lg mb-2"><strong>Most Powerful:</strong> Webflow</p>
          <p class="text-gray-700 text-lg"><strong>Best Design:</strong> Framer</p>
        </div>
      </div>
    </div>

    <!-- By Nonprofit Type -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Recommended by Nonprofit Type</h2>

      <div class="grid md:grid-cols-2 gap-6">
        {recommendations.map(rec => (
          <div class="border border-gray-200 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{rec.nonprofitType}</h3>
            <p class="text-gray-700 mb-3"><strong>Top Pick:</strong> {rec.topPick}</p>
            <p class="text-gray-700 mb-3">{rec.reason}</p>
            <div class="text-sm text-gray-600">
              <p class="mb-1"><strong>Also consider:</strong></p>
              <ul class="space-y-1">
                {rec.alternatives.map(alt => (
                  <li>• {alt}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Trust & Credibility Elements -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Building Donor Trust</h2>

      <div class="space-y-4">
        {trustElements.map(element => (
          <div class="border border-green-200 bg-green-50 rounded-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">{element.element}</h3>
            <p class="text-gray-700 mb-2">{element.description}</p>
            <p class="text-sm text-green-700"><strong>Importance:</strong> {element.importance}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- Essential Features -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-6">Essential Nonprofit Features</h2>

      <div class="space-y-4">
        {features.map(feature => (
          <div class="border border-gray-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-3">
              <div class="flex-shrink-0 w-8 h-8 bg-orange-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                !
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{feature.feature}</h3>
                <p class="text-gray-600 text-sm">{feature.importance}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-3">{feature.description}</p>
            <div>
              <p class="text-sm text-gray-600 mb-1">Available in:</p>
              <div class="flex flex-wrap gap-2">
                {feature.builders.map(b => (
                  <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs">{b}</span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tips -->
    <div class="bg-yellow-50 border-l-4 border-yellow-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Nonprofit Website Tips</h2>
      <div class="space-y-3 text-gray-700">
        {tips.map(tip => (
          <div>
            <p class="font-semibold mb-1">{tip.tip}</p>
            <p class="text-sm">{tip.explanation}</p>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <p class="text-xl text-gray-700 mb-8">Nonprofit websites should inspire support through clear mission communication, transparency, and easy ways to give. Focus on trust and impact.</p>
      <a href="/guides" class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block">
        View All Guides →
      </a>
    </div>
  </div>
</Layout>
