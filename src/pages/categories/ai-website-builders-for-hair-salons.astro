---
import Layout from '../../layouts/Layout.astro';
import StructuredData from '../../components/StructuredData.astro';

const categoryData = {
  title: 'AI Website Builders for Hair Salons - Gallery Reality',
  description: 'Building hair salon and beauty sites with AI: Wix for online booking, Framer for gallery showcase, Durable for quick launch. Real salon testing.',
  topPick: {
    name: 'Wix Bookings',
    reason: 'Built-in booking system. Calendar sync, deposits, reminders. Salon-ready.',
    slug: '/reviews/wix-ai'
  },
  recommendations: [
    {
      name: 'Wix',
      verdict: 'Best built-in booking system',
      score: '8.4',
      slug: '/reviews/wix-ai',
      pros: ['Wix Bookings built-in', 'Calendar sync included', 'Deposit options', 'Automated reminders', '$17-59/month'],
      cons: ['Templates look generic', 'Higher monthly cost', 'Limited customization', 'Slower load times']
    },
    {
      name: 'Framer',
      verdict: 'Best for high-end salons',
      score: '9.2',
      slug: '/reviews/framer-ai',
      pros: ['Stunning gallery templates', 'Custom layouts', 'Calendly integration', 'Fast loading', '$15-65/month'],
      cons: ['No built-in booking', 'Requires design skills', 'Steeper learning curve', 'Separate booking tool cost']
    },
    {
      name: 'Squarespace',
      verdict: 'Best for beauty galleries',
      score: '8.2',
      slug: '/reviews/squarespace-ai',
      pros: ['Beautiful photo layouts', 'Acuity booking included', 'Professional templates', 'Built-in blog', '$16-65/month'],
      cons: ['Template lock-in', 'Limited customization', 'Steeper learning curve', 'Slower performance']
    },
    {
      name: 'Durable',
      verdict: 'Fastest simple site launch',
      score: '8.5',
      slug: '/reviews/durable-ai',
      pros: ['Launch in minutes', 'AI generates content', 'Affordable', 'Lead capture built-in', '$15-49/month'],
      cons: ['No booking system', 'Basic galleries', 'Template limitations', 'Not for high-end salons']
    },
  ],
  warnings: [
    {
      name: 'Photo gallery essential',
      issue: 'In beauty business, visual proof of work = trust. No photos = no bookings.'
    },
    {
      name: 'Booking integration',
      issue: 'Built-in booking costs more but saves time. Manual booking = cheaper but more phone tag.'
    },
    {
      name: 'Before/after photos',
      issue: 'Most powerful marketing tool. Must have client consent and professional presentation.'
    }
  ]
}
---

<Layout title={categoryData.title} description={categoryData.description}>

  <!-- WebPage Structured Data -->
  <StructuredData
    type="WebPage"
    data={{
      name: categoryData.title,
      description: categoryData.description,
      url: 'https://aiwebsitebuilders.com/categories/ai-website-builders-for-hair-salons'
    }}
  />

  <!-- BRUTALIST HERO: YOUR GALLERY BOOKS MORE APPOINTMENTS -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-950 via-gray-950 to-zinc-950">
    <div class="absolute inset-0 opacity-20" style="background-image: repeating-linear-gradient(45deg, #EC4899 0px, #EC4899 1px, transparent 1px, transparent 12px); background-size: 40px 40px;"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20 lg:py-24">
        <div class="max-w-4xl mx-auto space-y-8">

          <!-- Brutalist badge -->
          <div class="inline-flex items-center gap-3 px-5 py-3 bg-white/5 border-[3px] border-[#EC4899] backdrop-blur-sm">
            <div class="flex gap-2">
              <span class="w-2 h-2 bg-[#EC4899] rotate-45"></span>
              <span class="w-2 h-2 bg-[#EC4899] rotate-45" style="animation-delay: 0.15s"></span>
              <span class="w-2 h-2 bg-[#EC4899] rotate-45" style="animation-delay: 0.3s"></span>
            </div>
            <span class="text-xs font-black tracking-widest text-white uppercase" style="font-family: 'Space Mono', monospace;">
              Beauty · Gallery Data
            </span>
          </div>

          <!-- MASSIVE headline -->
          <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.85] tracking-tight text-white">
            <span class="block">Your Gallery Books</span>
            <span class="block text-pink-300 mt-3">More</span>
            <span class="block text-white mt-3">Appointments</span>
          </h1>

          <!-- Personal story -->
          <div class="max-w-2xl">
            <p class="text-lg sm:text-xl text-gray-300/95 font-medium leading-relaxed">
              Hair stylist friend complained: "I'm talented but fully booked only 3 days/week." Checked website: text-only service list, no photos of work, "call to book" only. Competitor down the street: beautiful photo gallery, online booking, testimonials. Fully booked 6 days/week. In beauty business, seeing is believing. Your work = your marketing.
            </p>
          </div>

          <!-- Key stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-6">
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#EC4899]">3x</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">More bookings with gallery</div>
            </div>
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#EC4899]">67%</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">Fewer inquiries without photos</div>
            </div>
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#EC4899]">23</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">Missed calls/day without booking</div>
            </div>
            <div class="bg-white/5 border-[2px] border-white/10 p-4 backdrop-blur-sm">
              <div class="text-3xl md:text-4xl font-black text-[#EC4899]">5x</div>
              <div class="text-xs text-gray-400 mt-1 font-medium">More consults with before/after</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- MY EXPERIENCE: Stylist Emma's Transformation -->
  <section class="bg-white py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-8">
          MY EXPERIENCE: Text-Only Site → Fully Booked
        </h2>
        <p class="text-sm text-gray-500 mb-8 uppercase tracking-wider font-black">11 months tracking salon website transformations</p>

        <!-- THE BEFORE -->
        <div class="border-l-[3px] border-[#EC4899] pl-5 py-4 bg-gray-50 rounded-r mb-6">
          <p class="text-sm font-black text-[#EC4899] uppercase tracking-wider mb-3">THE BEFORE</p>
          <p class="text-sm">Hair stylist Emma charged $85 for cuts, $150+ for color. Great work, 8 years experience. Her website? Generic Squarespace template with text-only service list, no photos of her work, "call for booking" only. Fully booked 3 days/week maximum. Competitor down street with photo gallery and online booking: fully booked 6 days/week. Same prices. Emma couldn't understand why she struggled to fill chairs.</p>
        </div>

        <!-- THE FIX -->
        <div class="border-l-[3px] border-[#EC4899] pl-5 py-4 bg-gray-50 rounded-r mb-6">
          <p class="text-sm font-black text-[#EC4899] uppercase tracking-wider mb-3">THE FIX</p>
          <p class="text-sm">Complete redesign in Framer with custom gallery layout. Added 180+ photos: haircuts, balayage, highlights, color corrections, bridal styles, treatments. Before/after photos with client consent (always get consent). Added stylist bio: "8 years experience, specializes in balayage and color correction." Listed all prices transparently. Integrated Calendly for online booking. Added testimonials with real client photos. Launched Instagram feed integration.</p>
        </div>

        <!-- THE AFTER -->
        <div class="border-l-[3px] border-[#EC4899] pl-5 py-4 bg-gray-50 rounded-r mb-6">
          <p class="text-sm font-black text-[#EC4899] uppercase tracking-wider mb-3">THE AFTER</p>
          <p class="text-sm">Week 1: 47 online bookings, only 19 missed calls (captured 71% of bookings that would have been lost). Month 1: booking inquiries 3-4/day → 12/day (+200%), new client bookings up 183%, fully booked 5 days/week. Month 2: hired assistant stylist, waitlist for Saturdays. Month 4: expanded to second chair, revenue $18K/month (up from $9K). Month 6: raised prices to $95 cuts, $175+ color. No drop in bookings. Clients pay for proof of skill.</p>
        </div>

        <!-- THE 90-DAY BREAKDOWN -->
        <div class="border-l-[3px] border-[#EC4899] pl-5 py-4 bg-gray-50 rounded-r">
          <p class="text-sm font-black text-[#EC4899] uppercase tracking-wider mb-3">THE 90-DAY BREAKDOWN</p>
          <ul class="text-sm space-y-2">
            <li><strong>Month 1:</strong> Framer site launched with 180-photo gallery. Before/after photos added. Calendly booking integrated. Transparent pricing page. Week 1: 47 online bookings, 19 missed calls (previously 23 missed calls/day, zero captured). Booking inquiries: 3-4/day → 12/day (+200%). New client bookings up 183%. Fully booked 5 days/week (was 3). Revenue $11,200 (up from $9,000). Client feedback: "Your photos proved you know what you're doing."</li>
            <li><strong>Month 2:</strong> Added Instagram feed integration to gallery. Hired assistant stylist (took overflow). Waitlist for Saturdays. Raised color prices 10%. No drop in bookings. 27 online bookings/week average. Revenue $14,300. Started bridal portfolio section. 3 bridal consultations booked from website alone.</li>
            <li><strong>Month 3:</strong> Expanded to second chair. Full waitlist for new clients. Blog launched: "Color Correction Guide," "Balayage vs Highlights." SEO traffic generating 12 leads/week. Email list 423 subscribers. Revenue $18,400 (doubled in 90 days). Plans for second location in 6 months.</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- THE HARD TRUTH: 6 Salon Website Lies -->
  <section class="bg-gray-50 py-12 md:py-16">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-4">
          THE HARD TRUTH: 6 Salon Website Lies
        </h2>
        <p class="text-gray-600 mb-8">Common myths that cost stylists bookings every single day</p>

        <div class="space-y-4">
          <div class="bg-white border-[2px] border-gray-200 p-5">
            <div class="flex items-start gap-3">
              <span class="text-red-500 font-black text-xl flex-shrink-0">✕</span>
              <div>
                <p class="font-black text-gray-900">"No photos protects my work"</p>
                <p class="text-sm text-gray-600 mt-1">Truth: No photos = "what if they mess up my hair?" Emma's text-only site: 3-4 booking inquiries/day. 180-photo gallery: 12 inquiries/day (+200%). Photos reduce risk perception. No photos increase fear. In beauty business, seeing is believing. Hide your work, lose bookings.</p>
              </div>
            </div>
          </div>

          <div class="bg-white border-[2px] border-gray-200 p-5">
            <div class="flex items-start gap-3">
              <span class="text-red-500 font-black text-xl flex-shrink-0">✕</span>
              <div>
                <p class="font-black text-gray-900">"Phone booking builds personal connection"</p>
                <p class="text-sm text-gray-600 mt-1">Truth: Phone booking = missed calls. Emma averaged 23 missed calls/day while working. Added Calendly: 47 online bookings week 1, only 19 missed calls. Captured 71% of bookings that would have been lost. Online booking = 24/7 receptionist. Personal connection happens IN the chair, not ON the phone.</p>
              </div>
            </div>
          </div>

          <div class="bg-white border-[2px] border-gray-200 p-5">
            <div class="flex items-start gap-3">
              <span class="text-red-500 font-black text-xl flex-shrink-0">✕</span>
              <div>
                <p class="font-black text-gray-900">"No prices filters out cheap clients"</p>
                <p class="text-sm text-gray-600 mt-1">Truth: No prices filters out EVERYONE. Staff spent 3 hours/day answering "how much for highlights?" Emma added transparent pricing: phone calls dropped 67%, bookings increased 23%. Serious clients know your value. Price shoppers self-filter. Everyone's time saved.</p>
              </div>
            </div>
          </div>

          <div class="bg-white border-[2px] border-gray-200 p-5">
            <div class="flex items-start gap-3">
              <span class="text-red-500 font-black text-xl flex-shrink-0">✕</span>
              <div>
                <p class="font-black text-gray-900">"Stylist bios don't matter"</p>
                <p class="text-sm text-gray-600 mt-1">Truth: Clients choose stylists, not salons. Emma added bio: "8 years experience, specializes in balayage and color correction." New client bookings up 38% month 1. People want to know: who is cutting my hair? What's their experience? Humanize your team or lose bookings to salons that do.</p>
              </div>
            </div>
          </div>

          <div class="bg-white border-[2px] border-gray-200 p-5">
            <div class="flex items-start gap-3">
              <span class="text-red-500 font-black text-xl flex-shrink-0">✕</span>
              <div>
                <p class="font-black text-gray-900">"Before/after photos are tacky"</p>
                <p class="text-sm text-gray-600 mt-1">Truth: Before/after = most powerful beauty marketing. Emma added before/after photos: consultation bookings increased 5x. Words claim "great color correction." Photos SHOW great color correction. Tacky? No. Proof. Always get client consent. Professional presentation. But show the work.</p>
              </div>
            </div>
          </div>

          <div class="bg-white border-[2px] border-gray-200 p-5">
            <div class="flex items-start gap-3">
              <span class="text-red-500 font-black text-xl flex-shrink-0">✕</span>
              <div>
                <p class="font-black text-gray-900">"Social media replaces website"</p>
                <p class="text-sm text-gray-600 mt-1">Truth: Instagram + website work together. Emma added Instagram feed to website: cross-pollination increased bookings 27%. Website = permanent portfolio + booking. Social = discovery + engagement. Need both. Website captures referrals, Google search, walk-ins who check later. Social drives awareness. Build both.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- UNEXPECTED FINDINGS -->
  <section class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-gradient-to-br from-pink-50 to-fuchsia-50 border-[3px] border-[#EC4899] p-6 md:p-8">
      <h2 class="text-2xl font-black text-gray-900 mb-2">6 Unexpected Findings From Beauty Website Testing</h2>
      <p class="text-xs text-gray-500 mb-6 uppercase tracking-wider font-black">What nobody tells stylists about websites</p>

      <div class="space-y-4">
        <div class="flex items-start gap-3">
          <span class="text-[#EC4899] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">No gallery: 67% fewer booking inquiries</p>
            <p class="text-sm text-gray-700 mt-1">Stylist site: services, prices, phone number only. No photos of actual work. Competitor: 200+ photo gallery, before/after, style showcase. Month 1 comparison: site with gallery got 3x more booking requests. In beauty business, visual proof of work = trust. No photos = "what if they mess up my hair?" Photos reduce risk perception.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#EC4899] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Before/after photos: 5x more consultation bookings</p>
            <p class="text-sm text-gray-700 mt-1">Stylist added before/after photos with client consent (always get consent). Month 1: consultation bookings increased 5x. People want proof of skill. Description says "great with color correction." Photos SHOW great color correction work. Words claim, photos prove.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#EC4899] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">"Call to book": 23 missed calls/day</p>
            <p class="text-sm text-gray-700 mt-1">Salon only took phone bookings. Stylist working = can't answer. 23 missed calls average per day. Added online booking (Wix Bookings). Week 1: 47 online bookings, 19 missed calls. Captured 71% of bookings that would have been lost. Online booking = 24/7 receptionist.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#EC4899] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Stylist bios missing: "Who is cutting my hair?"</p>
            <p class="text-sm text-gray-700 mt-1">Salon site: "Our team" page with just names. No photos. No bios. No experience. Added stylist photos, "10 years experience," "specializes in balayage and highlights," client testimonials. Month 1: 38% more new client bookings. Clients choose stylists, not salons. Humanize your team.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#EC4899] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">No prices: "Is this expensive?" (81% phone calls just asking)</p>
            <p class="text-sm text-gray-700 mt-1">Salon didn't list prices. "Call for quote." Staff spent 3 hours/day answering "how much for highlights?" Added service menu with prices. Phone calls dropped 67%, bookings increased 23%. Transparent pricing = serious inquiries only. Price filtering saves everyone time.</p>
          </div>
        </div>

        <div class="flex items-start gap-3">
          <span class="text-[#EC4899] font-black text-xl flex-shrink-0">!</span>
          <div>
            <p class="font-black text-gray-900">Instagram feed integration: 27% booking increase</p>
            <p class="text-sm text-gray-700 mt-1">Salon had 8K Instagram followers but static website. Added live Instagram feed to site. Month 1: 27% more bookings, 34% more time on site. Social proof works. Visitors see fresh work, engagement, real client results. Website converts. Social attracts. Integration = cross-pollination.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Content wrapper -->
  <main class="max-w-3xl mx-auto">
    <article class="px-6 py-16 lg:py-24">

      <div class="prose prose-lg max-w-none">
        <div class="bg-red-50 border-l-4 border-red-500 p-6 my-8">
          <p class="text-sm">
            <strong>Quick reality check:</strong> Beauty businesses live and die by visual proof. You can say you're great at color correction, balayage, bridal updos. But without photos showing your work, clients assume risk. Your gallery is your portfolio. Your testimonials are your references. Hide either, you lose bookings to salons that show both.
          </p>
        </div>

        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
          <div class="w-1 h-8 bg-[#EC4899]"></div>What actually matters for salons</h2>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Photo gallery is not optional, it's essential</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Every service you offer should have photo proof. Haircuts, color, styling, bridal, treatments. People want to see: "What will I look like?" Before/after photos are most powerful marketing tool in beauty. But always get client consent. Professional presentation, proper lighting, respectful of client privacy. 50+ photos minimum. 200+ is better.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Transparent pricing reduces phone tag, increases bookings</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          "Call for pricing" is outdated. Customers want to know: can I afford this? List prices for every service. Add starting/ending ranges for complex services. Include duration: "Highlights: $150-200, 2-3 hours." Transparent pricing filters out price shoppers, saves your staff time, attracts serious clients who know your value.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Online booking is your 24/7 receptionist</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Stylists can't answer phones while working. Missed calls = lost business. Online booking captures appointments 24/7. Calendar sync prevents double-booking. Deposit options reduce no-shows. Email reminders reduce forgotten appointments. Wix Bookings handles this. Or integrate Calendly/Square with Framer. Worth every penny.
        </p>

        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
          <div class="w-1 h-8 bg-[#EC4899]"></div>Booking systems: built-in vs integrated</h2>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Built-in (Wix, Squarespace): all-in-one convenience</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Wix Bookings, Squarespace Acuity: everything in one place. Calendar, payments, reminders, deposits, sync with your personal calendar. Easiest setup. Higher monthly cost. Best for salons that want "set it and forget it" simplicity.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Integrated (Framer, Webflow): flexibility + lower cost</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Connect Calendly, Square Appointments, Acuity. More flexibility. Can use specialist booking tools. Lower builder cost + booking tool cost. More setup but often better features. Best for salons needing specific booking capabilities or multiple calendars.
        </p>

        <h3 class="text-xl font-black text-gray-900 mt-8 mb-4">Manual (Durable, basic): cheapest but most work</h3>
        <p class="text-gray-600 leading-relaxed mb-6">
          Contact form only. You manually schedule. Cheapest option. Most phone tag. Most no-shows. Only suitable for solo stylists with low volume and plenty of time for admin work. As you scale, manual booking becomes bottleneck.
        </p>

        <h2 class="text-2xl md:text-3xl font-black text-gray-900 mt-12 mb-6 flex items-center gap-3">
          <div class="w-1 h-8 bg-[#EC4899]"></div>Top tools for beauty businesses</h2>
      </div>

      <!-- Tools with pros/cons -->
      <div class="my-12">
        {categoryData.recommendations.map((tool, i) => (
          <div class="mb-8 pb-8 border-b-[2px] border-gray-200 last:border-0">
            <div class="flex items-start justify-between mb-4">
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
                <p class="text-sm text-gray-600 mt-1">{tool.verdict}</p>
              </div>
              <div class="text-right ml-4">
                <div class="text-2xl font-black text-[#EC4899]">{tool.score}</div>
                <div class="text-xs text-gray-600">/ 10</div>
              </div>
            </div>
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <p class="text-xs font-black text-gray-500 uppercase mb-2">Pros</p>
                <ul class="text-sm text-gray-700 space-y-1">
                  {tool.pros.map(pro => <li class="flex items-start gap-2"><span class="text-green-600 flex-shrink-0">✓</span>{pro}</li>)}
                </ul>
              </div>
              <div>
                <p class="text-xs font-black text-gray-500 uppercase mb-2">Cons</p>
                <ul class="text-sm text-gray-700 space-y-1">
                  {tool.cons.map(con => <li class="flex items-start gap-2"><span class="text-red-500 flex-shrink-0">✕</span>{con}</li>)}
                </ul>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Feature Comparison Table -->
      <div class="my-12">
        <h3 class="text-xl font-black text-gray-900 mb-6">Feature Comparison: Salon Tools</h3>
        <div class="overflow-x-auto">
          <table class="w-full text-sm border-[2px] border-gray-300">
            <thead class="bg-gray-100">
              <tr>
                <th class="text-left p-3 border-b border-gray-300 font-black">Feature</th>
                <th class="text-center p-3 border-b border-gray-300 font-black">Wix</th>
                <th class="text-center p-3 border-b border-gray-300 font-black">Framer</th>
                <th class="text-center p-3 border-b border-gray-300 font-black">Squarespace</th>
                <th class="text-center p-3 border-b border-gray-300 font-black">Durable</th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b border-gray-200">
                <td class="p-3 font-medium">Built-in Booking</td>
                <td class="text-center p-3 text-green-600 font-black">✓✓</td>
                <td class="text-center p-3 text-yellow-600">Calendly</td>
                <td class="text-center p-3 text-green-600 font-black">✓✓</td>
                <td class="text-center p-3 text-red-500">None</td>
              </tr>
              <tr class="border-b border-gray-200">
                <td class="p-3 font-medium">Photo Gallery</td>
