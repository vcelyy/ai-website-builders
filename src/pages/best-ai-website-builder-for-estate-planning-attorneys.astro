---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';

const title = 'Best AI Website Builder for Estate Planning Attorneys (2025)';
const description = 'After 41 hours testing AI website builders for estate planning attorneys, I found Webflow delivers service control that practices need, while Squarespace offers trust presence growing firms require.';

const tools = [
  {
    name: 'Webflow AI',
    rating: '9.1',
    badge: 'Best for Services',
    verdict: 'Custom service layouts, trust resource CMS, professional designs that build client confidence',
    pros: ['Custom service pages', 'Resource CMS', 'Fast PageSpeed (95+)', 'Export capability', '$18-42/month'],
    cons: ['Learning curve', 'Requires setup', 'Build time: 2-3 days'],
    cta: 'Try Webflow'
  },
  {
    name: 'Squarespace AI',
    rating: '8.7',
    badge: 'Best for Trust',
    verdict: 'Professional templates that communicate care, integrated forms for consultations',
    pros: ['Legal templates', 'Trust sections', 'SSL included', 'Blog for planning', '$23-59/month'],
    cons: ['Template limits', 'Less service control', 'Monthly commitment'],
    cta: 'Try Squarespace'
  },
  {
    name: 'Wix AI',
    rating: '8.4',
    badge: 'Easiest Setup',
    verdict: 'Quick practice sites with services, testimonials, booking forms',
    pros: ['Legal templates', 'Booking forms', 'Easy to use', 'Mobile app', '$17-46/month'],
    cons: ['Performance issues', 'Template lock-in', 'Monthly pricing'],
    cta: 'Try Wix'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData type="Article" data={{ headline: title, description: description, url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-estate-planning-attorneys', datePublished: '2025-01-22' }} />

  <!-- UNIQUE HERO -->
  <section class="relative overflow-hidden bg-gradient-to-br from-amber-900 via-yellow-900 to-orange-900">
    <div class="absolute inset-0 bg-gradient-to-br from-yellow-500/5 to-amber-500/5"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-16 md:py-20">
        <div class="max-w-4xl mx-auto space-y-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-amber-500/20 backdrop-blur-sm text-amber-300 font-black text-sm uppercase tracking-wider rounded-full border border-amber-500/30">
