    { feature: 'Export Code', framer: 'Partial', durable: 'No', tenweb: 'Yes (WP)', relume: 'Yes (Figma)' },
    { feature: 'Pricing', framer: '$15-25/mo', durable: '$12-20/mo', tenweb: '$10-30/mo', relume: 'Free tier' },
  ]
