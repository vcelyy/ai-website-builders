---
import Layout from '../layouts/Layout.astro';
import AffiliateCTA from '../components/AffiliateCTA.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Podcasters (2025)';
const description = 'I tested AI website builders for podcasters. Framer wins for audio embeds and episode showcase design.';
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">PODCAST USE CASE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">Best AI Website Builder for Podcasters</h1>
      <p class="text-xl text-gray-600 mb-6">
        Podcasters need audio players, episode archives, show notes, and subscription links.
      </p>
    </div>

    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Recommendation</h2>
      <p class="text-gray-700 text-lg">
        <strong>Framer</strong> - best for podcasters with beautiful episode designs, Spotify/Apple Music embeds, and audio player integration.
      </p>
    </div>

    <div class="text-center">
      <AffiliateCTA
        href={affiliates.framer.affiliateUrl}
        commission={affiliates.framer.commission}
        label="Try Framer for Podcasts"
        className="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block"
      />
    </div>
  </div>
</Layout>
