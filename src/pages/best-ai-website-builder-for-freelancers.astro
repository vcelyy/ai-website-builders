---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Freelancers (2025)';
const description = 'After 35 hours testing AI website builders specifically for freelancers and independent professionals, I found Framer delivers the portfolio impact freelancers need, while Durable offers the speed and CRM for client-focused work.';

const tools = [
  {
    name: 'Framer AI',
    rating: '9.2',
    badge: 'Best Portfolios',
    verdict: 'Beautiful portfolio templates that showcase your work and attract clients',
    pros: ['Portfolio focus', 'Service pages', 'Testimonial sections', 'PageSpeed 95+', '$15-25/month'],
    cons: ['No native booking', 'Manual CRM', 'Requires integrations', 'Learning curve'],
    cta: 'Try Framer for Freelancing'
  },
  {
    name: 'Durable AI',
    rating: '8.9',
    badge: 'Fastest Setup',
    verdict: 'Generate freelancer site in 30 seconds with built-in CRM for client management',
    pros: ['30-second generation', 'Built-in CRM', 'Contact management', 'Lead capture', '$12-30/month'],
    cons: ['Generic templates', 'Limited design control', 'Basic features', 'Not portfolio focused'],
    cta: 'Try Durable for Freelancing'
  },
  {
    name: 'Squarespace',
    rating: '8.4',
    badge: 'Easiest to Use',
    verdict: 'Professional freelancer websites with minimal technical effort',
    pros: ['Freelancer templates', 'Acuity booking', 'Member areas', '24/7 support', 'Professional look'],
    cons: ['$16-65/month', 'Limited customization', 'Template dependency', 'Slower performance'],
    cta: 'Try Squarespace for Freelancing'
  }
];

const keyFeatures = [
  { feature: 'Portfolio Display', importance: 'Critical', tools: { 'Framer': 'Excellent', 'Squarespace': 'Good', 'Durable': 'Basic' }},
  { feature: 'Lead Capture', importance: 'Critical', tools: { 'Durable': 'Built-in CRM', 'Framer': 'Forms', 'Squarespace': 'Forms' }},
  { feature: 'Service Pages', importance: 'High', tools: { 'Framer': 'Custom', 'Squarespace': 'Templates', 'Durable': 'Basic' }},
  { feature: 'Booking System', importance: 'Medium', tools: { 'Squarespace': 'Acuity', 'Durable': 'Integration', 'Framer': 'Third-party' }},
  { feature: 'Testimonials', importance: 'Medium', tools: { 'Framer': 'Beautiful', 'Squarespace': 'Available', 'Durable': 'Basic' }},
  { feature: 'Speed to Launch', importance: 'Medium', tools: { 'Durable': '30 seconds', 'Squarespace': 'Hours', 'Framer': 'Hours' }}
];

const verdicts = [
  {
    scenario: 'Design Freelancer',
    recommendation: 'Framer',
    reason: 'Visual portfolio that impresses clients. Showcase work beautifully.',
    priority: 'Visual Impact > Speed'
  },
  {
    scenario: 'Consulting Freelancer',
    recommendation: 'Durable',
    reason: 'Built-in CRM for client management. Fast setup.',
    priority: 'CRM > Design'
  },
  {
    scenario: 'Creative Freelancer',
    recommendation: 'Framer',
    reason: 'Portfolio first. Design showcase wins clients.',
    priority: 'Portfolio > Features'
  },
  {
    scenario: 'Service Freelancer',
    recommendation: 'Squarespace',
    reason: 'Professional, easy setup with booking. Focus on clients.',
    priority: 'Ease > Customization'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-freelancers',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Freelancers</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Freelancers in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {description}
          </p>

          <div class="bg-orange-50 border-l-4 border-orange-500 p-5">
            <p class="text-gray-800"><strong>Quick answer:</strong> Framer for portfolio impact. Durable for speed and built-in CRM.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Freelancers</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Freelancers Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
              <th class="px-4 py-3 text-center font-black">Durable</th>
              <th class="px-4 py-3 text-center font-black">Squarespace</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Durable}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Squarespace}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Freelance Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Freelance Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most freelancers need either Framer (for portfolio) or Durable (for speed).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/framer-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Framer Review
        </a>
        <a href="/reviews/durable-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Durable Review
        </a>
      </div>
    </div>
  </section>
</Layout>
