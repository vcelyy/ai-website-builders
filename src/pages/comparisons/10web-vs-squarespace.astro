  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Is 10Web actually WordPress?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Full WordPress with AI features on top. You get all WordPress plugins and functionality."
      }
    },
    {
      "@type": "Question",
      "name": "Can I use my own domain with both?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Both support custom domains on paid plans."
      }
    },
    {
      "@type": "Question",
      "name": "Which is better for SEO?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "10Web has the edge with WordPress SEO plugins and faster infrastructure. Squarespace handles basics well."
      }
    },
    {
      "@type": "Question",
      "name": "Can I migrate Squarespace to 10Web?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, 10Web offers migration tools. Content transfers, but you will rebuild design in WordPress/Elementor."
      }
    },
    {
      "@type": "Question",
      "name": "Is Squarespace worth the premium price?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "If you value beautiful templates and simplicity, yes. If you want power and flexibility, no - 10Web gives more."
      }
    }
  ]
}
</script>
