    <!-- UNEXPECTED FINDINGS -->
    <section class="mb-16">
      <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-8 flex items-center gap-4">
        <div class="w-2 h-12 bg-[#F59E0B]"></div>
        UNEXPECTED FINDINGS
      </h2>

      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white border-[3px] border-gray-200 p-6 hover:border-[#F59E0B] transition-colors">
          <div class="text-4xl mb-3">âš¡</div>
          <h3 class="font-bold text-gray-900 mb-2">4-Minute Difference Negligible</h3>
