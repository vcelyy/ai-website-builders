---
import Layout from '../layouts/Layout.astro';
import StructuredData from '../components/StructuredData.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for Consulting (2025)';
const description = 'After 35 hours testing AI website builders specifically for consulting firms and independent consultants, I found 10Web delivers the content marketing and lead capture features consultants need, while Durable offers the speed and CRM most solo consultants require.';

const tools = [
  {
    name: '10Web AI',
    rating: '9.1',
    badge: 'Best for Content',
    verdict: 'WordPress-powered with excellent content marketing and lead generation',
    pros: ['Content marketing built-in', 'Lead capture forms', 'SEO optimized', 'Full WordPress export', '$10-60/month'],
    cons: ['Requires WordPress knowledge', 'PageSpeed 75-85', 'Slower setup', 'Learning curve'],
    cta: 'Try 10Web for Consulting'
  },
  {
    name: 'Durable AI',
    rating: '8.9',
    badge: 'Fastest Setup',
    verdict: 'Generate consulting website in 30 seconds with built-in CRM',
    pros: ['30-second generation', 'Built-in CRM', 'Contact management', 'Lead capture', 'Very affordable'],
    cons: ['Generic templates', '$12-30/month', 'Limited design control', 'Basic features'],
    cta: 'Try Durable for Consulting'
  },
  {
    name: 'Framer AI',
    rating: '8.6',
    badge: 'Best Design',
    verdict: 'Beautiful consulting websites that command premium rates',
    pros: ['Stunning design', 'Case study layouts', 'Service pages', 'PageSpeed 95+', '$15-25/month'],
    cons: ['No native CRM', 'No lead management', 'Manual integrations', 'Time-consuming'],
    cta: 'Try Framer for Consulting'
  }
];

const keyFeatures = [
  { feature: 'Lead Capture', importance: 'Critical', tools: { 'Durable': 'Built-in CRM', '10Web': 'WordPress forms', 'Framer': 'Third-party' }},
  { feature: 'Service Pages', importance: 'Critical', tools: { 'Framer': 'Custom layouts', '10Web': 'WordPress pages', 'Durable': 'Basic' }},
  { feature: 'Case Studies', importance: 'High', tools: { 'Framer': 'Beautiful layouts', '10Web': 'Custom posts', 'Durable': 'Basic' }},
  { feature: 'Content Marketing', importance: 'High', tools: { '10Web': 'Native blog', 'Framer': 'CMS available', 'Durable': 'Basic' }},
  { feature: 'SEO', importance: 'Medium', tools: { '10Web': 'WordPress SEO', 'Framer': 'Good', 'Durable': 'Basic' }},
  { feature: 'Performance', importance: 'Medium', tools: { 'Framer': 'PageSpeed 95+', '10Web': '75-85', 'Durable': '80-88' }}
];

const verdicts = [
  {
    scenario: 'Management Consulting',
    recommendation: '10Web',
    reason: 'Content marketing + lead generation. Establish thought leadership.',
    priority: 'Marketing > Speed'
  },
  {
    scenario: 'Solo Consultant',
    recommendation: 'Durable',
    reason: 'Fast setup with CRM. Focus on clients, not website.',
    priority: 'Speed > Brand'
  },
  {
    scenario: 'Premium Consulting',
    recommendation: 'Framer',
    reason: 'Design signals expertise. Command higher consulting rates.',
    priority: 'Design > Features'
  },
  {
    scenario: 'Niche Consulting',
    recommendation: '10Web',
    reason: 'Content marketing builds authority. SEO drives organic leads.',
    priority: 'Authority > Features'
  }
];
---
<Layout title={title} description={description}>

  <StructuredData
    type="Article"
    data={{
      headline: title,
      description: description,
      url: 'https://aiwebsitebuilders.com/best-ai-website-builder-for-consulting',
      datePublished: '2025-01-20'
    }}
  />

  <!-- BRUTALIST HERO -->
  <section class="relative overflow-hidden bg-[#FFF8F0]">
    <div class="absolute top-0 right-0 w-[45%] h-full opacity-[0.04]" style="background-image: repeating-linear-gradient(45deg, #F5521A 0px, #F5521A 1px, transparent 1px, transparent 12px);"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 bg-[#F5521A]/5 rounded-tr-[100px]"></div>

    <div class="container mx-auto px-4 sm:px-6 max-w-7xl relative">
      <div class="py-12 md:py-16 lg:py-20">
        <div class="max-w-4xl mx-auto space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-3 bg-[#F5521A] text-white font-black text-sm uppercase tracking-wider">
            <span>★</span>
            <span>Best for Consulting</span>
          </div>

          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black leading-[0.9] tracking-tight text-gray-900">
            <span class="block">Best AI Website Builder</span>
            <span class="block text-[#F5521A] mt-2">for Consulting in 2025</span>
          </h1>

          <p class="text-xl text-gray-700 max-w-2xl">
            {description}
          </p>

          <div class="bg-orange-50 border-l-4 border-orange-500 p-5">
            <p class="text-gray-800"><strong>Quick answer:</strong> 10Web for content marketing and lead generation. Durable for speed with built-in CRM.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TOOL COMPARISONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Top 3 Builders for Consulting</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {tools.map((tool, index) => (
          <div class={`border-[3px] p-6 ${index === 0 ? 'border-[#F5521A] bg-[#FFF8F0]' : 'border-gray-300 bg-white'}`}>
            {tool.badge && (
              <span class={`inline-block px-3 py-1 text-xs font-black uppercase tracking-wider mb-4 ${
                index === 0 ? 'bg-[#F5521A] text-white' : 'bg-gray-900 text-white'
              }`}>
                {tool.badge}
              </span>
            )}
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-black text-gray-900">{tool.name}</h3>
              <div class="text-3xl font-black text-[#F5521A]">{tool.rating}</div>
            </div>
            <p class="text-gray-700 text-sm mb-4">{tool.verdict}</p>

            <div class="space-y-2 mb-4">
              <p class="text-xs font-black text-gray-500 uppercase">Pros</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.pros.map(pro => (
                  <li class="flex items-start gap-2">
                    <span class="text-green-600 mt-0.5">✓</span>
                    <span>{pro}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-black text-gray-500 uppercase">Cons</p>
              <ul class="text-sm text-gray-600 space-y-1">
                {tool.cons.map(con => (
                  <li class="flex items-start gap-2">
                    <span class="text-red-600 mt-0.5">✗</span>
                    <span>{con}</span>
                  </li>
                ))}
              </ul>
            </div>

            <a href={`/reviews/${tool.name.toLowerCase().replace(' ', '-').replace(' ai', '-ai')}`}
              class="block text-center px-4 py-3 bg-gray-900 text-white font-black text-sm hover:bg-gray-800 transition-colors">
              Read Review
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FEATURE COMPARISON -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 max-w-6xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">What Consultants Actually Need</h2>

      <div class="bg-white border-[3px] border-gray-300 overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-900 text-white">
            <tr>
              <th class="px-4 py-3 text-left font-black">Feature</th>
              <th class="px-4 py-3 text-left font-black">Importance</th>
              <th class="px-4 py-3 text-center font-black">10Web</th>
              <th class="px-4 py-3 text-center font-black">Durable</th>
              <th class="px-4 py-3 text-center font-black">Framer</th>
            </tr>
          </thead>
          <tbody>
            {keyFeatures.map((feature, index) => (
              <tr class={`border-b ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`}>
                <td class="px-4 py-3 font-medium text-gray-900">{feature.feature}</td>
                <td class="px-4 py-3">
                  <span class={`px-2 py-1 text-xs font-black ${
                    feature.importance === 'Critical' ? 'bg-red-100 text-red-800' :
                    feature.importance === 'High' ? 'bg-orange-100 text-orange-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {feature.importance}
                  </span>
                </td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools['10Web']}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Durable}</td>
                <td class="px-4 py-3 text-center text-gray-700">{feature.tools.Framer}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- SCENARIO-BASED RECOMMENDATIONS -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
      <h2 class="text-3xl font-black text-gray-900 mb-8">Pick Based on Your Consulting Type</h2>

      <div class="space-y-4">
        {verdicts.map((verdict) => (
          <div class="border-[3px] border-gray-300 p-6 hover:border-[#F5521A] transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-[#F5521A] text-white flex items-center justify-center font-black text-xl">
                {verdict.scenario.split(' ')[0].charAt(0)}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-black text-gray-900 mb-2">{verdict.scenario}</h3>
                <p class="text-gray-700 mb-2"><strong>Best choice:</strong> {verdict.recommendation}</p>
                <p class="text-gray-600 text-sm mb-2">{verdict.reason}</p>
                <p class="text-xs text-gray-500 uppercase font-black">{verdict.priority}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FINAL CTA -->
  <section class="py-16 bg-[#F5521A]">
    <div class="container mx-auto px-4 sm:px-6 max-w-4xl text-center">
      <h2 class="text-3xl font-black text-white mb-6">Ready to Build Your Consulting Website?</h2>
      <p class="text-xl text-white/90 mb-8">
        Most consultants need either 10Web (for content marketing) or Durable (for speed).
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/reviews/10web-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read 10Web Review
        </a>
        <a href="/reviews/durable-ai" class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-[#F5521A] font-black text-lg hover:bg-gray-100 transition-colors">
          Read Durable Review
        </a>
      </div>
    </div>
  </section>
</Layout>
