---
import Layout from '../layouts/Layout.astro';
import AffiliateCTA from '../components/AffiliateCTA.astro';
import { AFFILIATE_LINKS as affiliates } from '../config/affiliate-links';

const title = 'Best AI Website Builder for SaaS Startup (2025)';
const description = 'I tested AI website builders for SaaS startups. Framer wins for modern designs. Webflow for complex needs.';
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-12">
      <p class="text-orange-600 font-semibold mb-4">SAAS STARTUP USE CASE</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">Best AI Website Builder for SaaS Startups</h1>
      <p class="text-xl text-gray-600 mb-6">
        SaaS startups need pricing tables, feature showcases, and modern aesthetics.
      </p>
    </div>

    <div class="bg-orange-50 border-l-4 border-orange-500 p-6 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-3">Quick Recommendation</h2>
      <p class="text-gray-700 text-lg mb-4">
        <strong>Framer</strong> - modern, tech-forward designs perfect for SaaS.
      </p>
      <p class="text-gray-700">
        <strong>For complex products:</strong> Webflow for advanced interactions.
      </p>
    </div>

    <div class="text-center">
      <AffiliateCTA
        href={affiliates.framer.affiliateUrl}
        commission={affiliates.framer.commission}
        label="Try Framer for SaaS"
        className="bg-orange-600 hover:bg-orange-700 text-white px-8 py-4 rounded-lg font-semibold text-lg inline-block"
      />
    </div>
  </div>
</Layout>
