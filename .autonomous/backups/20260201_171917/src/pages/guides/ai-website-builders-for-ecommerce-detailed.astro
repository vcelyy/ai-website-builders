              <th class="border border-gray-200 px-4 py-3 text-center">Starting Price</th>
            </tr>
          </thead>
          <tbody>
            {builderComparison.map((builder, i) => (
              <tr class={i % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                <td class="border border-gray-200 px-4 py-3 font-medium">{builder.builder}</td>
                <td class="border border-gray-200 px-4 py-3 text-center font-bold text-orange-600">{builder.ecommerceScore}/10</td>
