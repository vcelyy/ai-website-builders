            </div>
            <div>
              <p class="text-xs font-bold text-red-700 uppercase mb-2">‚úó Weaknesses</p>
              <ul class="text-sm text-gray-700 space-y-1">
                {tools.tenweb.cons.map(con => <li key={con}>‚Ä¢ {con}</li>)}
              </ul>
            </div>
          </div>

          <p class="text-gray-600 mb-4"><strong>Price:</strong> {tools.tenweb.price}</p>

          <a href="/reviews/10web-ai" class="inline-flex items-center gap-2 text-purple-600 font-black hover:underline">
            Read Full 10Web Review ‚Üí
          </a>
        </div>

        <!-- WEBFLOW SECTION -->
        <div class="bg-white border-[3px] border-blue-200 p-8 my-8 hover:shadow-[0_8px_0_0_rgba(59,130,246,0.15)] transition-all">
          <div class="flex items-start justify-between mb-4">
            <div>
              <div class="inline-flex items-center gap-2 px-3 py-1 bg-blue-600 text-white font-black text-xs uppercase mb-2">
                <span>‚óÜ</span>
                <span>Design Powerhouse</span>
              </div>
              <h3 class="text-2xl font-black text-gray-900">{tools.webflow.name}</h3>
              <p class="text-gray-600 mt-1">{tools.webflow.bestFor}</p>
