  <!-- BRUTALIST HERO -->
  <section class="bg-gradient-to-br from-violet-900 to-purple-900 py-16 md:py-24 relative overflow-hidden"
         style="background-image: repeating-linear-gradient(45deg, #7C3AED 0px, #7C3AED 1px, transparent 1px, transparent 12px); background-size: 40px 40px;">
